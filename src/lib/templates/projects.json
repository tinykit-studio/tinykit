{
	"id": "projects",
	"name": "Projects",
	"description": "Track personal projects with tasks, notes, and status",
	"preview": "lucide:folder-kanban",
	"tags": [
		"collections",
		"productivity",
		"intermediate"
	],
	"kits": ["business", "freelance"],
	"frontend_code": "<script>\n\timport Icon from '@iconify/svelte'\n\timport content from '$content'\n\timport data from '$data'\n\n\tlet projects = $state([])\n\tlet tasks = $state([])\n\tlet loading = $state(true)\n\tlet filter_status = $state('active')\n\tlet selected_project = $state(null)\n\n\tdata.projects.subscribe(items => {\n\t\tprojects = items.sort((a, b) => {\n\t\t\tconst order = { 'active': 0, 'paused': 1, 'idea': 2, 'done': 3, 'archived': 4 }\n\t\t\treturn order[a.status] - order[b.status]\n\t\t})\n\t\tloading = false\n\t})\n\n\tdata.tasks.subscribe(items => tasks = items)\n\n\tconst status_options = [\n\t\t{ value: 'idea', label: 'Idea', icon: 'lucide:lightbulb', color: '#a855f7' },\n\t\t{ value: 'active', label: 'Active', icon: 'lucide:play', color: '#22c55e' },\n\t\t{ value: 'paused', label: 'Paused', icon: 'lucide:pause', color: '#f59e0b' },\n\t\t{ value: 'done', label: 'Done', icon: 'lucide:check-circle', color: '#3b82f6' },\n\t\t{ value: 'archived', label: 'Archived', icon: 'lucide:archive', color: '#94a3b8' }\n\t]\n\n\tlet filtered_projects = $derived(\n\t\tfilter_status === 'all' \n\t\t\t? projects.filter(p => p.status !== 'archived')\n\t\t\t: projects.filter(p => p.status === filter_status)\n\t)\n\n\tfunction get_status_info(status) {\n\t\treturn status_options.find(s => s.value === status) || status_options[0]\n\t}\n\n\tfunction get_project_tasks(project_id) {\n\t\treturn tasks.filter(t => t.project_id === project_id)\n\t}\n\n\tfunction get_task_progress(project_id) {\n\t\tconst project_tasks = get_project_tasks(project_id)\n\t\tif (project_tasks.length === 0) return null\n\t\tconst done = project_tasks.filter(t => t.done).length\n\t\treturn { done, total: project_tasks.length, percent: Math.round((done / project_tasks.length) * 100) }\n\t}\n\n\t// Add project form\n\tlet show_form = $state(false)\n\tlet new_name = $state('')\n\tlet new_description = $state('')\n\tlet adding = $state(false)\n\n\tasync function add_project(e) {\n\t\te.preventDefault()\n\t\tif (!new_name.trim()) return\n\n\t\tadding = true\n\t\ttry {\n\t\t\tawait data.projects.create({\n\t\t\t\tname: new_name.trim(),\n\t\t\t\tdescription: new_description.trim(),\n\t\t\t\tstatus: 'idea',\n\t\t\t\tnotes: '',\n\t\t\t\tlinks: '',\n\t\t\t\tcreated_at: new Date().toISOString()\n\t\t\t})\n\t\t\tnew_name = ''\n\t\t\tnew_description = ''\n\t\t\tshow_form = false\n\t\t} finally {\n\t\t\tadding = false\n\t\t}\n\t}\n\n\tasync function update_status(project, new_status) {\n\t\tawait data.projects.update(project.id, { status: new_status })\n\t}\n\n\t// Task management\n\tlet new_task = $state('')\n\n\tasync function add_task(e, project_id) {\n\t\te.preventDefault()\n\t\tif (!new_task.trim()) return\n\n\t\tawait data.tasks.create({\n\t\t\tproject_id,\n\t\t\ttext: new_task.trim(),\n\t\t\tdone: false\n\t\t})\n\t\tnew_task = ''\n\t}\n\n\tasync function toggle_task(task) {\n\t\tawait data.tasks.update(task.id, { done: !task.done })\n\t}\n\n\tasync function delete_task(task) {\n\t\tawait data.tasks.delete(task.id)\n\t}\n\n\t// Notes editing\n\tlet editing_notes = $state(false)\n\tlet notes_text = $state('')\n\n\tfunction start_editing_notes(project) {\n\t\tediting_notes = true\n\t\tnotes_text = project.notes || ''\n\t}\n\n\tasync function save_notes() {\n\t\tif (selected_project) {\n\t\t\tawait data.projects.update(selected_project.id, { notes: notes_text })\n\t\t}\n\t\tediting_notes = false\n\t}\n</script>\n\n<div class=\"page\">\n\t<div class=\"layout\">\n\t\t<aside class=\"sidebar\">\n\t\t\t<header class=\"sidebar-header\">\n\t\t\t\t<h1>{content.title}</h1>\n\t\t\t\t<button class=\"btn-add\" onclick={() => show_form = !show_form}>\n\t\t\t\t\t<Icon icon={show_form ? 'lucide:x' : 'lucide:plus'} width={18} />\n\t\t\t\t</button>\n\t\t\t</header>\n\n\t\t\t{#if show_form}\n\t\t\t\t<form class=\"add-form\" onsubmit={add_project}>\n\t\t\t\t\t<input type=\"text\" placeholder={content.name_placeholder} bind:value={new_name} required />\n\t\t\t\t\t<textarea placeholder={content.description_placeholder} bind:value={new_description} rows=\"2\"></textarea>\n\t\t\t\t\t<button type=\"submit\" class=\"btn-primary\" disabled={adding}>\n\t\t\t\t\t\t{content.create_button}\n\t\t\t\t\t</button>\n\t\t\t\t</form>\n\t\t\t{/if}\n\n\t\t\t<div class=\"filters\">\n\t\t\t\t<button class:active={filter_status === 'all'} onclick={() => filter_status = 'all'}>All</button>\n\t\t\t\t{#each status_options.slice(0, 4) as status (status.value)}\n\t\t\t\t\t<button \n\t\t\t\t\t\tclass:active={filter_status === status.value} \n\t\t\t\t\t\tonclick={() => filter_status = status.value}\n\t\t\t\t\t\tstyle=\"--status-color: {status.color}\"\n\t\t\t\t\t>\n\t\t\t\t\t\t<Icon icon={status.icon} width={14} />\n\t\t\t\t\t\t{status.label}\n\t\t\t\t\t</button>\n\t\t\t\t{/each}\n\t\t\t</div>\n\n\t\t\t{#if loading}\n\t\t\t\t<div class=\"loading\">\n\t\t\t\t\t<Icon icon=\"lucide:loader-2\" width={20} class=\"spin\" />\n\t\t\t\t</div>\n\t\t\t{:else if filtered_projects.length === 0}\n\t\t\t\t<p class=\"empty\">{content.empty_text}</p>\n\t\t\t{:else}\n\t\t\t\t<div class=\"project-list\">\n\t\t\t\t\t{#each filtered_projects as project (project.id)}\n\t\t\t\t\t\t{@const status_info = get_status_info(project.status)}\n\t\t\t\t\t\t{@const progress = get_task_progress(project.id)}\n\t\t\t\t\t\t<button \n\t\t\t\t\t\t\tclass=\"project-item\"\n\t\t\t\t\t\t\tclass:selected={selected_project?.id === project.id}\n\t\t\t\t\t\t\tonclick={() => selected_project = project}\n\t\t\t\t\t\t>\n\t\t\t\t\t\t\t<div class=\"project-icon\" style=\"color: {status_info.color}\">\n\t\t\t\t\t\t\t\t<Icon icon={status_info.icon} width={16} />\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t<div class=\"project-info\">\n\t\t\t\t\t\t\t\t<span class=\"project-name\">{project.name}</span>\n\t\t\t\t\t\t\t\t{#if progress}\n\t\t\t\t\t\t\t\t\t<span class=\"project-progress\">{progress.done}/{progress.total} tasks</span>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t</button>\n\t\t\t\t\t{/each}\n\t\t\t\t</div>\n\t\t\t{/if}\n\t\t</aside>\n\n\t\t<main class=\"main\">\n\t\t\t{#if selected_project}\n\t\t\t\t{@const status_info = get_status_info(selected_project.status)}\n\t\t\t\t{@const project_tasks = get_project_tasks(selected_project.id)}\n\t\t\t\t<div class=\"project-detail\">\n\t\t\t\t\t<header class=\"detail-header\">\n\t\t\t\t\t\t<div>\n\t\t\t\t\t\t\t<h2>{selected_project.name}</h2>\n\t\t\t\t\t\t\t{#if selected_project.description}\n\t\t\t\t\t\t\t\t<p class=\"description\">{selected_project.description}</p>\n\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t</div>\n\t\t\t\t\t\t<select \n\t\t\t\t\t\t\tclass=\"status-select\"\n\t\t\t\t\t\t\tvalue={selected_project.status}\n\t\t\t\t\t\t\tstyle=\"--status-color: {status_info.color}\"\n\t\t\t\t\t\t\tonchange={(e) => update_status(selected_project, e.target.value)}\n\t\t\t\t\t\t>\n\t\t\t\t\t\t\t{#each status_options as status (status.value)}\n\t\t\t\t\t\t\t\t<option value={status.value}>{status.label}</option>\n\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t</select>\n\t\t\t\t\t</header>\n\n\t\t\t\t\t<section class=\"tasks-section\">\n\t\t\t\t\t\t<h3>\n\t\t\t\t\t\t\t<Icon icon=\"lucide:check-square\" width={16} />\n\t\t\t\t\t\t\t{content.tasks_title}\n\t\t\t\t\t\t</h3>\n\t\t\t\t\t\t<form class=\"add-task\" onsubmit={(e) => add_task(e, selected_project.id)}>\n\t\t\t\t\t\t\t<input type=\"text\" placeholder={content.task_placeholder} bind:value={new_task} />\n\t\t\t\t\t\t\t<button type=\"submit\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:plus\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t</form>\n\t\t\t\t\t\t{#if project_tasks.length > 0}\n\t\t\t\t\t\t\t<ul class=\"task-list\">\n\t\t\t\t\t\t\t\t{#each project_tasks as task (task.id)}\n\t\t\t\t\t\t\t\t\t<li class=\"task-item\" class:done={task.done}>\n\t\t\t\t\t\t\t\t\t\t<button class=\"task-check\" onclick={() => toggle_task(task)}>\n\t\t\t\t\t\t\t\t\t\t\t<Icon icon={task.done ? 'lucide:check-square' : 'lucide:square'} width={18} />\n\t\t\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t\t\t\t<span>{task.text}</span>\n\t\t\t\t\t\t\t\t\t\t<button class=\"task-delete\" onclick={() => delete_task(task)}>\n\t\t\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:x\" width={14} />\n\t\t\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t\t\t</li>\n\t\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t\t</ul>\n\t\t\t\t\t\t{:else}\n\t\t\t\t\t\t\t<p class=\"no-tasks\">{content.no_tasks}</p>\n\t\t\t\t\t\t{/if}\n\t\t\t\t\t</section>\n\n\t\t\t\t\t<section class=\"notes-section\">\n\t\t\t\t\t\t<h3>\n\t\t\t\t\t\t\t<Icon icon=\"lucide:file-text\" width={16} />\n\t\t\t\t\t\t\t{content.notes_title}\n\t\t\t\t\t\t</h3>\n\t\t\t\t\t\t{#if editing_notes}\n\t\t\t\t\t\t\t<div class=\"notes-editor\">\n\t\t\t\t\t\t\t\t<textarea bind:value={notes_text} rows=\"6\" placeholder={content.notes_placeholder}></textarea>\n\t\t\t\t\t\t\t\t<div class=\"notes-actions\">\n\t\t\t\t\t\t\t\t\t<button class=\"btn-secondary\" onclick={() => editing_notes = false}>{content.cancel}</button>\n\t\t\t\t\t\t\t\t\t<button class=\"btn-primary\" onclick={save_notes}>{content.save}</button>\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t{:else}\n\t\t\t\t\t\t\t<div class=\"notes-content\" onclick={() => start_editing_notes(selected_project)}>\n\t\t\t\t\t\t\t\t{#if selected_project.notes}\n\t\t\t\t\t\t\t\t\t<p>{selected_project.notes}</p>\n\t\t\t\t\t\t\t\t{:else}\n\t\t\t\t\t\t\t\t\t<p class=\"placeholder\">{content.notes_placeholder}</p>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t{/if}\n\t\t\t\t\t</section>\n\t\t\t\t</div>\n\t\t\t{:else}\n\t\t\t\t<div class=\"no-selection\">\n\t\t\t\t\t<Icon icon=\"lucide:folder-open\" width={48} />\n\t\t\t\t\t<p>{content.select_project}</p>\n\t\t\t\t</div>\n\t\t\t{/if}\n\t\t</main>\n\t</div>\n</div>\n\n<style>\n\t.page {\n\t\tmin-height: 100vh;\n\t\tbackground: var(--bg-color, #f8fafc);\n\t\tfont-family: var(--font, system-ui, sans-serif);\n\t}\n\n\t.layout {\n\t\tdisplay: flex;\n\t\tmin-height: 100vh;\n\t}\n\n\t.sidebar {\n\t\twidth: 300px;\n\t\tbackground: var(--sidebar-bg, #ffffff);\n\t\tborder-right: 1px solid var(--border-color, #e2e8f0);\n\t\tpadding: 1.25rem;\n\t\toverflow-y: auto;\n\t\tflex-shrink: 0;\n\t}\n\n\t.sidebar-header {\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: center;\n\t\tmargin-bottom: 1rem;\n\t}\n\n\t.sidebar-header h1 {\n\t\tfont-size: 1.25rem;\n\t\tfont-weight: 700;\n\t\tcolor: var(--heading-color, #0f172a);\n\t\tmargin: 0;\n\t}\n\n\t.btn-add {\n\t\twidth: 32px;\n\t\theight: 32px;\n\t\tborder-radius: 6px;\n\t\tbackground: var(--accent-color, #6366f1);\n\t\tcolor: white;\n\t\tborder: none;\n\t\tcursor: pointer;\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tjustify-content: center;\n\t}\n\n\t.add-form {\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tgap: 0.5rem;\n\t\tmargin-bottom: 1rem;\n\t\tpadding: 0.75rem;\n\t\tbackground: var(--bg-color, #f8fafc);\n\t\tborder-radius: 6px;\n\t}\n\n\t.add-form input,\n\t.add-form textarea {\n\t\tpadding: 0.5rem 0.625rem;\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: 4px;\n\t\tfont-size: 0.875rem;\n\t\tbackground: white;\n\t\tcolor: var(--heading-color, #0f172a);\n\t\tresize: none;\n\t}\n\n\t.add-form input:focus,\n\t.add-form textarea:focus {\n\t\toutline: none;\n\t\tborder-color: var(--accent-color, #6366f1);\n\t}\n\n\t.btn-primary {\n\t\tpadding: 0.5rem 0.75rem;\n\t\tbackground: var(--accent-color, #6366f1);\n\t\tcolor: white;\n\t\tborder: none;\n\t\tborder-radius: 4px;\n\t\tfont-size: 0.8125rem;\n\t\tfont-weight: 600;\n\t\tcursor: pointer;\n\t}\n\n\t.btn-primary:disabled {\n\t\topacity: 0.7;\n\t}\n\n\t.btn-secondary {\n\t\tpadding: 0.5rem 0.75rem;\n\t\tbackground: transparent;\n\t\tcolor: var(--text-color, #64748b);\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: 4px;\n\t\tfont-size: 0.8125rem;\n\t\tcursor: pointer;\n\t}\n\n\t.filters {\n\t\tdisplay: flex;\n\t\tflex-wrap: wrap;\n\t\tgap: 0.375rem;\n\t\tmargin-bottom: 1rem;\n\t}\n\n\t.filters button {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.25rem;\n\t\tpadding: 0.375rem 0.5rem;\n\t\tbackground: transparent;\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: 4px;\n\t\tcolor: var(--text-color, #64748b);\n\t\tfont-size: 0.75rem;\n\t\tcursor: pointer;\n\t}\n\n\t.filters button:hover {\n\t\tborder-color: var(--status-color, var(--accent-color, #6366f1));\n\t}\n\n\t.filters button.active {\n\t\tbackground: var(--accent-color, #6366f1);\n\t\tborder-color: var(--accent-color, #6366f1);\n\t\tcolor: white;\n\t}\n\n\t.loading, .empty {\n\t\ttext-align: center;\n\t\tcolor: var(--text-color, #64748b);\n\t\tpadding: 2rem 0;\n\t\tfont-size: 0.875rem;\n\t}\n\n\t.project-list {\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tgap: 0.375rem;\n\t}\n\n\t.project-item {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.625rem;\n\t\tpadding: 0.625rem 0.75rem;\n\t\tbackground: transparent;\n\t\tborder: 1px solid transparent;\n\t\tborder-radius: 6px;\n\t\tcursor: pointer;\n\t\ttext-align: left;\n\t\twidth: 100%;\n\t\ttransition: all 0.2s;\n\t}\n\n\t.project-item:hover {\n\t\tbackground: var(--bg-color, #f8fafc);\n\t}\n\n\t.project-item.selected {\n\t\tbackground: color-mix(in srgb, var(--accent-color, #6366f1) 10%, transparent);\n\t\tborder-color: var(--accent-color, #6366f1);\n\t}\n\n\t.project-icon {\n\t\twidth: 28px;\n\t\theight: 28px;\n\t\tborder-radius: 6px;\n\t\tbackground: var(--bg-color, #f8fafc);\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tjustify-content: center;\n\t\tflex-shrink: 0;\n\t}\n\n\t.project-info {\n\t\tflex: 1;\n\t\tmin-width: 0;\n\t}\n\n\t.project-name {\n\t\tdisplay: block;\n\t\tfont-size: 0.875rem;\n\t\tfont-weight: 500;\n\t\tcolor: var(--heading-color, #0f172a);\n\t\twhite-space: nowrap;\n\t\toverflow: hidden;\n\t\ttext-overflow: ellipsis;\n\t}\n\n\t.project-progress {\n\t\tfont-size: 0.75rem;\n\t\tcolor: var(--text-color, #64748b);\n\t}\n\n\t.main {\n\t\tflex: 1;\n\t\tpadding: 1.5rem;\n\t\toverflow-y: auto;\n\t}\n\n\t.no-selection {\n\t\theight: 100%;\n\t\tdispla