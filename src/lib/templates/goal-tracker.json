{
	"id": "goal-tracker",
	"name": "Goal Tracker",
	"description": "Track goals with progress bars, milestones, and deadlines",
	"preview": "lucide:target",
	"tags": [
		"dashboard",
		"productivity",
		"intermediate"
	],
	"kits": [
		"dash",
		"daily"
	],
	"frontend_code": "<script>\n\timport Icon from '@iconify/svelte'\n\timport content from '$content'\n\timport data from '$data'\n\n\tlet goals = $state([])\n\tlet milestones = $state([])\n\tlet loading = $state(true)\n\tlet show_form = $state(false)\n\tlet editing_goal = $state(null)\n\tlet expanded_goal = $state(null)\n\n\t// Form state\n\tlet form_name = $state('')\n\tlet form_target = $state(100)\n\tlet form_current = $state(0)\n\tlet form_unit = $state('')\n\tlet form_deadline = $state('')\n\tlet form_category = $state('personal')\n\n\tdata.goals.subscribe(items => {\n\t\tgoals = items.sort((a, b) => (a.order || 0) - (b.order || 0))\n\t\tloading = false\n\t})\n\n\tdata.milestones.subscribe(items => milestones = items)\n\n\tconst categories = [\n\t\t{ id: 'personal', name: 'Personal', color: '#3b82f6', icon: 'lucide:user' },\n\t\t{ id: 'health', name: 'Health', color: '#22c55e', icon: 'lucide:heart' },\n\t\t{ id: 'career', name: 'Career', color: '#8b5cf6', icon: 'lucide:briefcase' },\n\t\t{ id: 'finance', name: 'Finance', color: '#f59e0b', icon: 'lucide:wallet' },\n\t\t{ id: 'learning', name: 'Learning', color: '#06b6d4', icon: 'lucide:book-open' }\n\t]\n\n\tfunction get_category(id) {\n\t\treturn categories.find(c => c.id === id) || categories[0]\n\t}\n\n\tfunction get_progress(goal) {\n\t\tif (!goal.target || goal.target === 0) return 0\n\t\treturn Math.min(100, (goal.current / goal.target) * 100)\n\t}\n\n\tfunction get_status(goal) {\n\t\tconst progress = get_progress(goal)\n\t\tif (progress >= 100) return 'complete'\n\t\tif (!goal.deadline) return 'on_track'\n\n\t\tconst now = new Date()\n\t\tconst deadline = new Date(goal.deadline)\n\t\tconst total_time = deadline - new Date(goal.created_at || now)\n\t\tconst elapsed_time = now - new Date(goal.created_at || now)\n\t\tconst expected_progress = (elapsed_time / total_time) * 100\n\n\t\tif (now > deadline && progress < 100) return 'overdue'\n\t\tif (progress < expected_progress - 10) return 'behind'\n\t\treturn 'on_track'\n\t}\n\n\tconst status_config = {\n\t\tcomplete: { label: 'Complete', color: 'var(--success-color)', icon: 'lucide:check-circle' },\n\t\ton_track: { label: 'On Track', color: 'var(--accent-color)', icon: 'lucide:trending-up' },\n\t\tbehind: { label: 'Behind', color: 'var(--warning-color)', icon: 'lucide:alert-triangle' },\n\t\toverdue: { label: 'Overdue', color: 'var(--danger-color)', icon: 'lucide:alert-circle' }\n\t}\n\n\tfunction format_date(date_str) {\n\t\tif (!date_str) return ''\n\t\treturn new Date(date_str).toLocaleDateString('en-US', {\n\t\t\tmonth: 'short',\n\t\t\tday: 'numeric',\n\t\t\tyear: 'numeric'\n\t\t})\n\t}\n\n\tfunction days_remaining(deadline) {\n\t\tif (!deadline) return null\n\t\tconst diff = new Date(deadline) - new Date()\n\t\treturn Math.ceil(diff / (1000 * 60 * 60 * 24))\n\t}\n\n\tfunction get_goal_milestones(goal_id) {\n\t\treturn milestones\n\t\t\t.filter(m => m.goal_id === goal_id)\n\t\t\t.sort((a, b) => a.target - b.target)\n\t}\n\n\tfunction reset_form() {\n\t\tform_name = ''\n\t\tform_target = 100\n\t\tform_current = 0\n\t\tform_unit = ''\n\t\tform_deadline = ''\n\t\tform_category = 'personal'\n\t}\n\n\tfunction start_add() {\n\t\treset_form()\n\t\tediting_goal = null\n\t\tshow_form = true\n\t}\n\n\tfunction start_edit(goal) {\n\t\tform_name = goal.name\n\t\tform_target = goal.target\n\t\tform_current = goal.current\n\t\tform_unit = goal.unit || ''\n\t\tform_deadline = goal.deadline || ''\n\t\tform_category = goal.category || 'personal'\n\t\tediting_goal = goal.id\n\t\tshow_form = true\n\t}\n\n\tfunction cancel_form() {\n\t\tshow_form = false\n\t\tediting_goal = null\n\t\treset_form()\n\t}\n\n\tasync function save_goal(e) {\n\t\te.preventDefault()\n\t\tif (!form_name.trim()) return\n\n\t\tconst goal_data = {\n\t\t\tname: form_name.trim(),\n\t\t\ttarget: Number(form_target),\n\t\t\tcurrent: Number(form_current),\n\t\t\tunit: form_unit.trim(),\n\t\t\tdeadline: form_deadline,\n\t\t\tcategory: form_category\n\t\t}\n\n\t\tif (editing_goal) {\n\t\t\tawait data.goals.update(editing_goal, goal_data)\n\t\t} else {\n\t\t\tawait data.goals.create({\n\t\t\t\t...goal_data,\n\t\t\t\torder: goals.length,\n\t\t\t\tcreated_at: new Date().toISOString()\n\t\t\t})\n\t\t}\n\t\tcancel_form()\n\t}\n\n\tasync function update_progress(goal, delta) {\n\t\tconst new_value = Math.max(0, Math.min(goal.target, goal.current + delta))\n\t\tawait data.goals.update(goal.id, { current: new_value })\n\t}\n\n\tasync function delete_goal(id) {\n\t\tawait data.goals.delete(id)\n\t}\n\n\tasync function toggle_milestone(milestone) {\n\t\tawait data.milestones.update(milestone.id, { completed: !milestone.completed })\n\t}\n\n\tlet overall_progress = $derived(() => {\n\t\tif (goals.length === 0) return 0\n\t\tconst total = goals.reduce((sum, g) => sum + get_progress(g), 0)\n\t\treturn Math.round(total / goals.length)\n\t})\n\n\tlet completed_count = $derived(goals.filter(g => get_progress(g) >= 100).length)\n</script>\n\n<div class=\"page\">\n\t<header class=\"header\">\n\t\t<div class=\"header-content\">\n\t\t\t<h1>{content.title}</h1>\n\t\t\t<div class=\"summary\">\n\t\t\t\t<span class=\"summary-item\">\n\t\t\t\t\t<strong>{completed_count}</strong> / {goals.length} {content.goals_completed}\n\t\t\t\t</span>\n\t\t\t\t<span class=\"summary-item\">\n\t\t\t\t\t<strong>{overall_progress()}%</strong> {content.overall_progress}\n\t\t\t\t</span>\n\t\t\t</div>\n\t\t</div>\n\t\t<button class=\"add-btn\" onclick={start_add}>\n\t\t\t<Icon icon=\"lucide:plus\" width={18} />\n\t\t\t{content.add_goal}\n\t\t</button>\n\t</header>\n\n\t{#if show_form}\n\t\t<div class=\"form-overlay\" onclick={cancel_form}>\n\t\t\t<form class=\"goal-form\" onclick={(e) => e.stopPropagation()} onsubmit={save_goal}>\n\t\t\t\t<h2>{editing_goal ? content.edit_goal : content.new_goal}</h2>\n\n\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t<label>{content.goal_name}</label>\n\t\t\t\t\t<input type=\"text\" bind:value={form_name} placeholder=\"e.g., Read 24 books\" required />\n\t\t\t\t</div>\n\n\t\t\t\t<div class=\"form-row\">\n\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t<label>{content.target_value}</label>\n\t\t\t\t\t\t<input type=\"number\" bind:value={form_target} min=\"1\" required />\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t<label>{content.current_value}</label>\n\t\t\t\t\t\t<input type=\"number\" bind:value={form_current} min=\"0\" />\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t<label>{content.unit_label}</label>\n\t\t\t\t\t\t<input type=\"text\" bind:value={form_unit} placeholder=\"books, miles, etc.\" />\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\n\t\t\t\t<div class=\"form-row\">\n\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t<label>{content.deadline_label}</label>\n\t\t\t\t\t\t<input type=\"date\" bind:value={form_deadline} />\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t<label>{content.category_label}</label>\n\t\t\t\t\t\t<select bind:value={form_category}>\n\t\t\t\t\t\t\t{#each categories as cat}\n\t\t\t\t\t\t\t\t<option value={cat.id}>{cat.name}</option>\n\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t</select>\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\n\t\t\t\t<div class=\"form-actions\">\n\t\t\t\t\t<button type=\"button\" class=\"cancel-btn\" onclick={cancel_form}>{content.cancel}</button>\n\t\t\t\t\t<button type=\"submit\" class=\"save-btn\">{content.save}</button>\n\t\t\t\t</div>\n\t\t\t</form>\n\t\t</div>\n\t{/if}\n\n\t{#if loading}\n\t\t<div class=\"loading\">\n\t\t\t<Icon icon=\"lucide:loader-2\" width={32} class=\"spin\" />\n\t\t</div>\n\t{:else if goals.length === 0}\n\t\t<div class=\"empty\">\n\t\t\t<Icon icon=\"lucide:target\" width={56} />\n\t\t\t<h3>{content.empty_title}</h3>\n\t\t\t<p>{content.empty_text}</p>\n\t\t\t<button class=\"add-btn\" onclick={start_add}>\n\t\t\t\t<Icon icon=\"lucide:plus\" width={18} />\n\t\t\t\t{content.add_first_goal}\n\t\t\t</button>\n\t\t</div>\n\t{:else}\n\t\t<div class=\"goals-list\">\n\t\t\t{#each goals as goal (goal.id)}\n\t\t\t\t{@const progress = get_progress(goal)}\n\t\t\t\t{@const status = get_status(goal)}\n\t\t\t\t{@const category = get_category(goal.category)}\n\t\t\t\t{@const days_left = days_remaining(goal.deadline)}\n\t\t\t\t{@const goal_milestones = get_goal_milestones(goal.id)}\n\t\t\t\t<div class=\"goal-card\" class:complete={progress >= 100}>\n\t\t\t\t\t<div class=\"goal-header\" onclick={() => expanded_goal = expanded_goal === goal.id ? null : goal.id}>\n\t\t\t\t\t\t<div class=\"goal-icon\" style=\"background: {category.color}\">\n\t\t\t\t\t\t\t<Icon icon={category.icon} width={20} />\n\t\t\t\t\t\t</div>\n\t\t\t\t\t\t<div class=\"goal-info\">\n\t\t\t\t\t\t\t<h3>{goal.name}</h3>\n\t\t\t\t\t\t\t<span class=\"category-tag\" style=\"color: {category.color}\">{category.name}</span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t\t<div class=\"goal-status\" style=\"color: {status_config[status].color}\">\n\t\t\t\t\t\t\t<Icon icon={status_config[status].icon} width={16} />\n\t\t\t\t\t\t\t<span>{status_config[status].label}</span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\n\t\t\t\t\t<div class=\"progress-section\">\n\t\t\t\t\t\t<div class=\"progress-bar\">\n\t\t\t\t\t\t\t<div \n\t\t\t\t\t\t\t\tclass=\"progress-fill\" \n\t\t\t\t\t\t\t\tstyle=\"width: {progress}%; background: {category.color}\"\n\t\t\t\t\t\t\t></div>\n\t\t\t\t\t\t\t{#each goal_milestones as ms}\n\t\t\t\t\t\t\t\t{@const ms_pos = (ms.target / goal.target) * 100}\n\t\t\t\t\t\t\t\t<div \n\t\t\t\t\t\t\t\t\tclass=\"milestone-marker\"\n\t\t\t\t\t\t\t\t\tclass:reached={goal.current >= ms.target}\n\t\t\t\t\t\t\t\t\tstyle=\"left: {ms_pos}%\"\n\t\t\t\t\t\t\t\t\ttitle=\"{ms.name}: {ms.target} {goal.unit}\"\n\t\t\t\t\t\t\t\t></div>\n\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t</div>\n\t\t\t\t\t\t<div class=\"progress-details\">\n\t\t\t\t\t\t\t<span class=\"progress-text\">\n\t\t\t\t\t\t\t\t<strong>{goal.current}</strong> / {goal.target} {goal.unit}\n\t\t\t\t\t\t\t</span>\n\t\t\t\t\t\t\t<span class=\"progress-percent\">{Math.round(progress)}%</span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\n\t\t\t\t\t{#if expanded_goal === goal.id}\n\t\t\t\t\t\t<div class=\"goal-expanded\">\n\t\t\t\t\t\t\t<div class=\"quick-update\">\n\t\t\t\t\t\t\t\t<span>{content.quick_update}</span>\n\t\t\t\t\t\t\t\t<div class=\"update-buttons\">\n\t\t\t\t\t\t\t\t\t<button onclick={() => update_progress(goal, -1)}>-1</button>\n\t\t\t\t\t\t\t\t\t<button onclick={() => update_progress(goal, 1)}>+1</button>\n\t\t\t\t\t\t\t\t\t<button onclick={() => update_progress(goal, 5)}>+5</button>\n\t\t\t\t\t\t\t\t\t<button onclick={() => update_progress(goal, 10)}>+10</button>\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t\t{#if goal.deadline}\n\t\t\t\t\t\t\t\t<div class=\"deadline-info\">\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:calendar\" width={16} />\n\t\t\t\t\t\t\t\t\t<span>\n\t\t\t\t\t\t\t\t\t\t{#if days_left !== null}\n\t\t\t\t\t\t\t\t\t\t\t{#if days_left > 0}\n\t\t\t\t\t\t\t\t\t\t\t\t{days_left} {content.days_remaining}\n\t\t\t\t\t\t\t\t\t\t\t{:else if days_left === 0}\n\t\t\t\t\t\t\t\t\t\t\t\t{content.due_today}\n\t\t\t\t\t\t\t\t\t\t\t{:else}\n\t\t\t\t\t\t\t\t\t\t\t\t{Math.abs(days_left)} {content.days_overdue}\n\t\t\t\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t\t\t({format_date(goal.deadline)})\n\t\t\t\t\t\t\t\t\t</span>\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t{/if}\n\n\t\t\t\t\t\t\t{#if goal_milestones.length > 0}\n\t\t\t\t\t\t\t\t<div class=\"milestones-section\">\n\t\t\t\t\t\t\t\t\t<h4>{content.milestones}</h4>\n\t\t\t\t\t\t\t\t\t{#each goal_milestones as ms}\n\t\t\t\t\t\t\t\t\t\t<div class=\"milestone-item\" class:reached={goal.current >= ms.target}>\n\t\t\t\t\t\t\t\t\t\t\t<Icon icon={goal.current >= ms.target ? 'lucide:check-circle' : 'lucide:circle'} width={16} />\n\t\t\t\t\t\t\t\t\t\t\t<span>{ms.name}</span>\n\t\t\t\t\t\t\t\t\t\t\t<span class=\"milestone-target\">{ms.target} {goal.unit}</span>\n\t\t\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t{/if}\n\n\t\t\t\t\t\t\t<div class=\"goal-actions\">\n\t\t\t\t\t\t\t\t<button class=\"edit-btn\" onclick={() => start_edit(goal)}>\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:pencil\" width={14} />\n\t\t\t\t\t\t\t\t\t{content.edit}\n\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t\t<button class=\"delete-btn\" onclick={() => delete_goal(goal.id)}>\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:trash-2\" width={14} />\n\t\t\t\t\t\t\t\t\t{content.delete}\n\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t{/if}\n\t\t\t\t</div>\n\t\t\t{/each}\n\t\t</div>\n\t{/if}\n</div>\n\n<style>\n\t.page {\n\t\tmin-height: 100vh;\n\t\tbackground: var(--bg-color);\n\t\tfont-family: var(--font);\n\t\tcolor: var(--text-color);\n\t}\n\n\t.header {\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: center;\n\t\tpadding: 1.5rem 2rem;\n\t\tbackground: var(--card-bg);\n\t\tborder-bottom: 1px solid var(--border-color);\n\t\tgap: 1rem;\n\t\tflex-wrap: wrap;\n\t}\n\n\t.header h1 {\n\t\tmargin: 0;\n\t\tfont-size: 1.5rem;\n\t\tfont-weight: 700;\n\t\tcolor: var(--heading-color);\n\t}\n\n\t.summary {\n\t\tdisplay: flex;\n\t\tgap: 1.5rem;\n\t\tmargin-top: 0.5rem;\n\t}\n\n\t.summary-item {\n\t\tfont-size: 0.875rem;\n\t}\n\n\t.summary-item strong {\n\t\tcolor: var(--heading-color);\n\t}\n\n\t.add-btn {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.5rem;\n\t\tpadding: 0.625rem 1.25rem;\n\t\tbackground: var(--accent-color);\n\t\tcolor: white;\n\t\tborder: none;\n\t\tborder-radius: var(--radius);\n\t\tfont-size: 0.875rem;\n\t\tfont-weight: 600;\n\t\tcursor: pointer;\n\t\ttransition: all 0.2s;\n\t}\n\n\t.add-btn:hover {\n\t\tfilter: brightness(1.1);\n\t}\n\n\t.loading {\n\t\tdisplay: flex;\n\t\tjustify-content: center;\n\t\tpadding: 6rem;\n\t}\n\n\t.empty {\n\t\ttext-align: center;\n\t\tpadding: 4rem 2rem;\n\t\tmax-width: 400px;\n\t\tmargin: 0 auto;\n\t}\n\n\t.empty h3 {\n\t\tmargin: 1rem 0 0.5rem;\n\t\tcolor: var(--heading-color);\n\t}\n\n\t.empty p {\n\t\tmargin-bottom: 1.5rem;\n\t}\n\n\t.goals-list {\n\t\tmax-width: 800px;\n\t\tmargin: 0 auto;\n\t\tpadding: 2rem;\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tgap: 1rem;\n\t}\n\n\t.goal-card {\n\t\tbackground: var(--card-bg);\n\t\tborder: 1px solid var(--border-color);\n\t\tborder-radius: var(--radius);\n\t\tpadding: 1.25rem;\n\t\ttransition: all 0.2s;\n\t}\n\n\t.goal-card:hover {\n\t\tborder-color: var(--accent-color);\n\t}\n\n\t.goal-card.complete {\n\t\tbackground: color-mix(in srgb, var(--success-color) 10%, var(--card-bg));\n\t}\n\n\t.goal-header {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 1rem;\n\t\tcursor: pointer;\n\t}\n\n\t.goal-icon {\n\t\twidth: 44px;\n\t\theight: 44px;\n\t\tborder-radius: 10px;\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tjustify-content: center;\n\t\tcolor: white;\n\t\tflex-shrink: 0;\n\t}\n\n\t.goal-info {\n\t\tflex: 1;\n\t\tmin-width: 0;\n\t}\n\n\t.goal-info h3 {\n\t\tmargin: 0;\n\t\tfont-size: 1rem;\n\t\tfont-weight: 600;\n\t\tcolor: var(--heading-color);\n\t}\n\n\t.category-tag {\n\t\tfont-size: 0.75rem;\n\t\tfont-weight: 500;\n\t}\n\n\t.goal-status {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.375rem;\n\t\tfont-size: 0.8125rem;\n\t\tfont-weight: 600;\n\t}\n\n\t.progress-section {\n\t\tmargin-top: 1rem;\n\t}\n\n\t.progress-bar {\n\t\theight: 10px;\n\t\tbackground: var(--bg-color);\n\t\tborder-radius: 5px;\n\t\toverflow: visible;\n\t\tposition: relative;\n\t}\n\n\t.progress-fill {\n\t\theight: 100%;\n\t\tborder-radius: 5px;\n\t\ttransition: width 0.3s ease;\n\t}\n\n\t.milestone-marker {\n\t\tposition: absolute;\n\t\ttop: -3px;\n\t\twidth: 6px;\n\t\theight: 16px;\n\t\tbackground: var(--border-color);\n\t\tborder-radius: 3px;\n\t\ttransform: translateX(-50%);\n\t}\n\n\t.milestone-marker.reached {\n\t\tbackground: var(--heading-color);\n\t}\n\n\t.progress-details {\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\tmargin-top: 0.5rem;\n\t\tfont-size: 0.8125rem;\n\t}\n\n\t.progress-text strong {\n