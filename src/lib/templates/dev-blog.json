	"kits": ["developer"],
	"frontend_code": "<script>\n\timport { fade } from 'svelte/transition'\n\timport Icon from '@iconify/svelte'\n\timport data from '$data'\n\timport content from '$content'\n\timport { marked } from 'marked'\n\timport dayjs from 'dayjs'\n\n\t// Auth state\n\tlet unlocked = $state(false)\n\tlet password_input = $state('')\n\tlet password_error = $state(false)\n\n\t// Routing state\n\tlet route = $state({ view: 'list', slug: null, id: null })\n\n\t// Parse hash route\n\tfunction parseRoute() {\n\t\tconst hash = window.location.hash.slice(1) || '/'\n\t\tif (hash === '/' || hash === '') {\n\t\t\treturn { view: 'list', slug: null, id: null }\n\t\t}\n\t\tconst parts = hash.split('/').filter(Boolean)\n\t\tif (parts[0] === 'post' && parts[1]) {\n\t\t\treturn { view: 'post', slug: parts[1], id: null }\n\t\t}\n\t\tif (parts[0] === 'new') {\n\t\t\treturn { view: 'editor', slug: null, id: null }\n\t\t}\n\t\tif (parts[0] === 'edit' && parts[1]) {\n\t\t\treturn { view: 'editor', slug: null, id: parts[1] }\n\t\t}\n\t\treturn { view: 'list', slug: null, id: null }\n\t}\n\n\t// Navigate with view transition\n\tfunction navigate(hash) {\n\t\tif (document.startViewTransition) {\n\t\t\tdocument.startViewTransition(() => {\n\t\t\t\twindow.location.hash = hash\n\t\t\t\troute = parseRoute()\n\t\t\t\twindow.scrollTo(0, 0)\n\t\t\t})\n\t\t} else {\n\t\t\twindow.location.hash = hash\n\t\t\troute = parseRoute()\n\t\t\twindow.scrollTo(0, 0)\n\t\t}\n\t}\n\n\t// Init routing\n\t$effect(() => {\n\t\troute = parseRoute()\n\t\tconst handleHash = () => { route = parseRoute() }\n\t\twindow.addEventListener('hashchange', handleHash)\n\t\treturn () => window.removeEventListener('hashchange', handleHash)\n\t})\n\n\t// Check localStorage for unlock\n\t$effect(() => {\n\t\tconst stored = localStorage.getItem('devlog_unlocked')\n\t\tif (stored === 'true') unlocked = true\n\t})\n\n\tfunction check_password() {\n\t\tif (password_input === content.admin_password) {\n\t\t\tunlocked = true\n\t\t\tlocalStorage.setItem('devlog_unlocked', 'true')\n\t\t\tpassword_error = false\n\t\t} else {\n\t\t\tpassword_error = true\n\t\t}\n\t}\n\n\tfunction lock() {\n\t\tunlocked = false\n\t\tlocalStorage.removeItem('devlog_unlocked')\n\t}\n\n\t// Data state\n\tlet posts = $state([])\n\tlet loading = $state(true)\n\tlet searchQuery = $state('')\n\tlet editorPost = $state({ title: '', slug: '', content: '', tags: '', published: false })\n\tlet isNewPost = $state(false)\n\n\tdata.posts.subscribe(items => {\n\t\tposts = items\n\t\tloading = false\n\t})\n\n\tlet filteredPosts = $derived.by(() => {\n\t\tlet filtered = posts\n\t\tif (searchQuery) {\n\t\t\tconst q = searchQuery.toLowerCase()\n\t\t\tfiltered = filtered.filter(p =>\n\t\t\t\tp.title.toLowerCase().includes(q) ||\n\t\t\t\tp.content.toLowerCase().includes(q) ||\n\t\t\t\t(p.tags && p.tags.toLowerCase().includes(q))\n\t\t\t)\n\t\t}\n\t\tif (!unlocked) {\n\t\t\tfiltered = filtered.filter(p => p.published)\n\t\t}\n\t\treturn [...filtered].sort((a, b) => new Date(b.created_at) - new Date(a.created_at))\n\t})\n\n\tlet activePost = $derived.by(() => {\n\t\tif (route.view === 'post' && route.slug) {\n\t\t\treturn posts.find(p => p.slug === route.slug)\n\t\t}\n\t\treturn null\n\t})\n\n\t// Setup editor when route changes\n\t$effect(() => {\n\t\tif (route.view === 'editor') {\n\t\t\tif (route.id) {\n\t\t\t\tconst post = posts.find(p => p.id === route.id)\n\t\t\t\tif (post) {\n\t\t\t\t\teditorPost = { ...post }\n\t\t\t\t\tisNewPost = false\n\t\t\t\t}\n\t\t\t} else {\n\t\t\t\teditorPost = { title: '', slug: '', content: '', tags: '', published: true }\n\t\t\t\tisNewPost = true\n\t\t\t}\n\t\t}\n\t})\n\n\tfunction viewPost(slug) {\n\t\tnavigate(`/post/${slug}`)\n\t}\n\n\tfunction goHome() {\n\t\tnavigate('/')\n\t}\n\n\tfunction openEditor(post = null) {\n\t\tif (!unlocked) return\n\t\tif (post) {\n\t\t\tnavigate(`/edit/${post.id}`)\n\t\t} else {\n\t\t\tnavigate('/new')\n\t\t}\n\t}\n\n\tasync function savePost() {\n\t\tif (!editorPost.title) return\n\t\tif (!editorPost.slug) {\n\t\t\teditorPost.slug = editorPost.title\n\t\t\t\t.toLowerCase()\n\t\t\t\t.replace(/[^a-z0-9]+/g, '-')\n\t\t\t\t.replace(/(^-|-$)+/g, '')\n\t\t}\n\t\ttry {\n\t\t\tif (isNewPost) {\n\t\t\t\tawait data.posts.create({\n\t\t\t\t\t...editorPost,\n\t\t\t\t\tcreated_at: new Date().toISOString()\n\t\t\t\t})\n\t\t\t} else {\n\t\t\t\tawait data.posts.update(editorPost.id, {\n\t\t\t\t\t...editorPost,\n\t\t\t\t\tupdated_at: new Date().toISOString()\n\t\t\t\t})\n\t\t\t}\n\t\t\tgoHome()\n\t\t} catch (e) {\n\t\t\tconsole.error('Error saving post:', e)\n\t\t\talert('Failed to save post')\n\t\t}\n\t}\n\n\tasync function deletePost(id) {\n\t\tif (confirm('Are you sure you want to delete this post?')) {\n\t\t\tawait data.posts.delete(id)\n\t\t\tgoHome()\n\t\t}\n\t}\n\n\tfunction renderMarkdown(text) {\n\t\tif (!text) return ''\n\t\treturn marked(text)\n\t}\n</script>\n\n<div class=\"app\">\n\t<header class=\"header\">\n\t\t<div class=\"container header-content\">\n\t\t\t<div class=\"logo\" onclick={goHome}>\n\t\t\t\t{#if content.logo}\n\t\t\t\t\t<img src={content.logo} alt=\"Logo\" class=\"logo-img\" />\n\t\t\t\t{/if}\n\t\t\t\t<div class=\"logo-text\">\n\t\t\t\t\t<h1>{content.blog_title}</h1>\n\t\t\t\t\t{#if content.blog_subtitle}\n\t\t\t\t\t\t<p class=\"subtitle\">{content.blog_subtitle}</p>\n\t\t\t\t\t{/if}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t\t\n\t\t\t<div class=\"actions\">\n\t\t\t\t{#if route.view === 'list'}\n\t\t\t\t\t<div class=\"search-box\">\n\t\t\t\t\t\t<Icon icon=\"lucide:search\" width={16} />\n\t\t\t\t\t\t<input \n\t\t\t\t\t\t\ttype=\"text\" \n\t\t\t\t\t\t\tplaceholder={content.search_placeholder}\n\t\t\t\t\t\t\tbind:value={searchQuery}\n\t\t\t\t\t\t/>\n\t\t\t\t\t</div>\n\t\t\t\t\t{#if unlocked}\n\t\t\t\t\t\t<button class=\"btn-primary\" onclick={() => openEditor()}>\n\t\t\t\t\t\t\t<Icon icon=\"lucide:plus\" width={16} />\n\t\t\t\t\t\t\t<span class=\"desktop-only\">{content.new_post_button}</span>\n\t\t\t\t\t\t</button>\n\t\t\t\t\t\t<button class=\"btn-icon\" onclick={lock} title=\"Lock\">\n\t\t\t\t\t\t\t<Icon icon=\"lucide:lock\" width={16} />\n\t\t\t\t\t\t</button>\n\t\t\t\t\t{/if}\n\t\t\t\t{:else}\n\t\t\t\t\t<button class=\"btn-ghost\" onclick={goHome}>\n\t\t\t\t\t\t<Icon icon=\"lucide:arrow-left\" width={16} />\n\t\t\t\t\t\t{content.back_button}\n\t\t\t\t\t</button>\n\t\t\t\t{/if}\n\t\t\t</div>\n\t\t</div>\n\t</header>\n\n\t<main class=\"main container\">\n\t\t{#if loading}\n\t\t\t<div class=\"loading\">\n\t\t\t\t<Icon icon=\"lucide:loader-2\" width={32} class=\"spin\" />\n\t\t\t</div>\n\t\t{:else}\n\t\t\t{#key route.view + route.slug + route.id}\n\t\t\t\t{#if route.view === 'list'}\n\t\t\t\t\t<div class=\"post-list\" in:fade={{ duration: 150 }}>\n\t\t\t\t\t\t{#if filteredPosts.length === 0}\n\t\t\t\t\t\t\t<div class=\"empty-state\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:file-text\" width={48} />\n\t\t\t\t\t\t\t\t<p>{content.no_posts_message}</p>\n\t\t\t\t\t\t\t\t{#if searchQuery}\n\t\t\t\t\t\t\t\t\t<button class=\"btn-link\" onclick={() => searchQuery = ''}>Clear search</button>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t{:else}\n\t\t\t\t\t\t\t{#each filteredPosts as post (post.id)}\n\t\t\t\t\t\t\t\t<article class=\"post-card\" onclick={() => viewPost(post.slug)}>\n\t\t\t\t\t\t\t\t\t<div class=\"post-meta\">\n\t\t\t\t\t\t\t\t\t\t<span class=\"date\">{dayjs(post.created_at).format('MMM D, YYYY')}</span>\n\t\t\t\t\t\t\t\t\t\t{#if !post.published}\n\t\t\t\t\t\t\t\t\t\t\t<span class=\"badge draft\">Draft</span>\n\t\t\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t\t\t{#if post.tags}\n\t\t\t\t\t\t\t\t\t\t\t<div class=\"tags\">\n\t\t\t\t\t\t\t\t\t\t\t\t{#each post.tags.split(',').slice(0, 3) as tag}\n\t\t\t\t\t\t\t\t\t\t\t\t\t<span class=\"tag\">#{tag.trim()}</span>\n\t\t\t\t\t\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t\t<h2>{post.title}</h2>\n\t\t\t\t\t\t\t\t\t<p class=\"excerpt\">\n\t\t\t\t\t\t\t\t\t\t{post.content.substring(0, 150).replace(/[#*`]/g, '')}...\n\t\t\t\t\t\t\t\t\t</p>\n\t\t\t\t\t\t\t\t\t<div class=\"post-footer\">\n\t\t\t\t\t\t\t\t\t\t<span class=\"read-more\">Read more <Icon icon=\"lucide:arrow-right\" width={14} /></span>\n\t\t\t\t\t\t\t\t\t\t{#if unlocked}\n\t\t\t\t\t\t\t\t\t\t\t<button class=\"btn-icon\" onclick={(e) => { e.stopPropagation(); openEditor(post); }}>\n\t\t\t\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:edit-2\" width={14} />\n\t\t\t\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t</article>\n\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t{/if}\n\n\t\t\t\t\t\t{#if !unlocked}\n\t\t\t\t\t\t\t<div class=\"unlock-section\">\n\t\t\t\t\t\t\t\t<button class=\"btn-ghost unlock-trigger\" onclick={() => document.getElementById('pw').focus()}>\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:lock\" width={14} />\n\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t\t<form class=\"unlock-form\" onsubmit={(e) => { e.preventDefault(); check_password(); }}>\n\t\t\t\t\t\t\t\t\t<input \n\t\t\t\t\t\t\t\t\t\tid=\"pw\"\n\t\t\t\t\t\t\t\t\t\ttype=\"password\" \n\t\t\t\t\t\t\t\t\t\tplaceholder=\"Admin password\"\n\t\t\t\t\t\t\t\t\t\tbind:value={password_input}\n\t\t\t\t\t\t\t\t\t\tclass:error={password_error}\n\t\t\t\t\t\t\t\t\t/>\n\t\t\t\t\t\t\t\t\t<button type=\"submit\" class=\"btn-primary\">\n\t\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:unlock\" width={14} />\n\t\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t\t</form>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t{/if}\n\t\t\t\t\t</div>\n\n\t\t\t\t{:else if route.view === 'post' && activePost}\n\t\t\t\t\t<article class=\"post-detail\" in:fade={{ duration: 150 }}>\n\t\t\t\t\t\t<header class=\"post-header\">\n\t\t\t\t\t\t\t<div class=\"post-meta-top\">\n\t\t\t\t\t\t\t\t<span class=\"date\">{dayjs(activePost.created_at).format('MMMM D, YYYY')}</span>\n\t\t\t\t\t\t\t\t{#if !activePost.published}\n\t\t\t\t\t\t\t\t\t<span class=\"badge draft\">Draft</span>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t<h1 class=\"post-title\">{activePost.title}</h1>\n\t\t\t\t\t\t\t{#if activePost.tags}\n\t\t\t\t\t\t\t\t<div class=\"tags\">\n\t\t\t\t\t\t\t\t\t{#each activePost.tags.split(',') as tag}\n\t\t\t\t\t\t\t\t\t\t<span class=\"tag\">#{tag.trim()}</span>\n\t\t\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t</header>\n\t\t\t\t\t\t\n\t\t\t\t\t\t<div class=\"post-content markdown-body\">\n\t\t\t\t\t\t\t{@html renderMarkdown(activePost.content)}\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t{#if unlocked}\n\t\t\t\t\t\t\t<div class=\"post-actions\">\n\t\t\t\t\t\t\t\t<button class=\"btn-secondary\" onclick={() => openEditor(activePost)}>\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:edit\" width={16} /> Edit Post\n\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t{/if}\n\t\t\t\t\t</article>\n\n\t\t\t\t{:else if route.view === 'editor' && unlocked}\n\t\t\t\t\t<div class=\"editor\" in:fade={{ duration: 150 }}>\n\t\t\t\t\t\t<div class=\"editor-header\">\n\t\t\t\t\t\t\t<h2>{isNewPost ? 'New Post' : 'Edit Post'}</h2>\n\t\t\t\t\t\t\t<div class=\"editor-actions\">\n\t\t\t\t\t\t\t\t{#if !isNewPost}\n\t\t\t\t\t\t\t\t\t<button class=\"btn-danger\" onclick={() => deletePost(editorPost.id)}>\n\t\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:trash-2\" width={16} />\n\t\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t<button class=\"btn-primary\" onclick={savePost}>\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:save\" width={16} /> Save\n\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t\t<label for=\"title\">Title</label>\n\t\t\t\t\t\t\t<input id=\"title\" type=\"text\" bind:value={editorPost.title} placeholder=\"Post Title\" />\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t<div class=\"form-row\">\n\t\t\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t\t\t<label for=\"slug\">Slug</label>\n\t\t\t\t\t\t\t\t<input id=\"slug\" type=\"text\" bind:value={editorPost.slug} placeholder=\"post-url-slug\" />\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t<div class=\"form-group checkbox-group\">\n\t\t\t\t\t\t\t\t<label class=\"checkbox-label\">\n\t\t\t\t\t\t\t\t\t<input type=\"checkbox\" bind:checked={editorPost.published} />\n\t\t\t\t\t\t\t\t\t<span>Published</span>\n\t\t\t\t\t\t\t\t</label>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t\t<label for=\"tags\">Tags (comma separated)</label>\n\t\t\t\t\t\t\t<input id=\"tags\" type=\"text\" bind:value={editorPost.tags} placeholder=\"javascript, svelte, web\" />\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t<div class=\"form-group full-height\">\n\t\t\t\t\t\t\t<label for=\"content\">Content (Markdown)</label>\n\t\t\t\t\t\t\t<textarea id=\"content\" bind:value={editorPost.content} placeholder=\"Write your post here...\"></textarea>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t{/if}\n\t\t\t{/key}\n\t\t{/if}\n\t</main>\n\n\t<footer class=\"footer\">\n\t\t<div class=\"container\">\n\t\t\t<p>{content.footer_text}</p>\n\t\t</div>\n\t</footer>\n</div>\n\n<style global>\n\t/* View Transitions */\n\t@keyframes fade-in {\n\t\tfrom { opacity: 0; transform: translateY(10px); }\n\t\tto { opacity: 1; transform: translateY(0); }\n\t}\n\t@keyframes fade-out {\n\t\tfrom { opacity: 1; transform: translateY(0); }\n\t\tto { opacity: 0; transform: translateY(-10px); }\n\t}\n\t::view-transition-old(root) {\n\t\tanimation: fade-out 0.15s ease-out;\n\t}\n\t::view-transition-new(root) {\n\t\tanimation: fade-in 0.15s ease-out;\n\t}\n\n\t.app {\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tmin-height: 100vh;\n\t\tbackground-color: var(--bg-color, #f8fafc);\n\t\tcolor: var(--text-color, #1e293b);\n\t\tfont-family: var(--font-main, 'Inter', sans-serif);\n\t\tline-height: 1.6;\n\t}\n\n\t.container {\n\t\tmax-width: var(--container-width, 800px);\n\t\tmargin: 0 auto;\n\t\tpadding: 0 1.5rem;\n\t\twidth: 100%;\n\t\tbox-sizing: border-box;\n\t}\n\n\t.header {\n\t\tbackground: var(--header-bg, #ffffff);\n\t\tborder-bottom: 1px solid var(--border-color, 