{
	"id": "notes",
	"name": "Notes",
	"description": "Note-taking app with rich text editing and search",
	"preview": "lucide:file-text",
	"tags": [
		"productivity",
		"intermediate",
		"data"
	],
	"kits": [
		"business",
		"daily",
		"developer"
	],
	"frontend_code": "<script>\n\timport Icon from \"@iconify/svelte\";\n\timport content from \"$content\";\n\timport data from \"$data\";\n\timport { Editor } from \"@tiptap/core\";\n\timport StarterKit from \"@tiptap/starter-kit\";\n\timport Underline from \"@tiptap/extension-underline\";\n\timport Link from \"@tiptap/extension-link\";\n\n\tlet notes = $state([]);\n\tlet selected_id = $state(null);\n\tlet search = $state(\"\");\n\tlet loading = $state(true);\n\tlet editor_el = $state(null);\n\tlet editor_instance = null;\n\tlet editorState = $state({ editor: null });\n\tlet save_timeout = null;\n\tlet last_note_id = null;\n\tlet is_updating = false;\n\n\t// Mobile state\n\tlet show_sidebar = $state(true);\n\tlet is_mobile = $state(false);\n\n\tdata.notes.subscribe((items) => {\n\t\tnotes = items;\n\t\tif (!items.find((n) => n.id === selected_id)) {\n\t\t\tselected_id = items[0]?.id ?? null;\n\t\t}\n\t\tloading = false;\n\t});\n\n\t// Check if mobile\n\t$effect(() => {\n\t\tif (typeof window === \"undefined\") return;\n\t\tconst check = () => {\n\t\t\tis_mobile = window.innerWidth < 768;\n\t\t\tif (!is_mobile) show_sidebar = true;\n\t\t};\n\t\tcheck();\n\t\twindow.addEventListener(\"resize\", check);\n\t\treturn () => window.removeEventListener(\"resize\", check);\n\t});\n\n\t// Initialize Tiptap when element is ready\n\t$effect(() => {\n\t\tif (!editor_el || !selected_note) return;\n\t\tif (typeof window === \"undefined\") return;\n\n\t\tif (!editor_instance) {\n\t\t\teditor_instance = new Editor({\n\t\t\t\telement: editor_el,\n\t\t\t\textensions: [\n\t\t\t\t\tStarterKit,\n\t\t\t\t\tUnderline,\n\t\t\t\t\tLink.configure({\n\t\t\t\t\t\topenOnClick: false,\n\t\t\t\t\t}),\n\t\t\t\t],\n\t\t\t\tcontent: selected_note.content || \"\",\n\t\t\t\tonUpdate: ({ editor: e }) => {\n\t\t\t\t\tif (!is_updating) debounced_save(e.getHTML());\n\t\t\t\t},\n\t\t\t\tonTransaction: ({ editor }) => {\n\t\t\t\t\teditorState = { editor };\n\t\t\t\t},\n\t\t\t});\n\t\t\teditorState = { editor: editor_instance };\n\t\t\tlast_note_id = selected_note.id;\n\t\t}\n\n\t\tif (last_note_id !== selected_note.id) {\n\t\t\tis_updating = true;\n\t\t\teditor_instance.commands.setContent(selected_note.content || \"\");\n\t\t\tlast_note_id = selected_note.id;\n\t\t\tsetTimeout(() => (is_updating = false), 0);\n\t\t}\n\t});\n\n\tlet selected_note = $derived.by(() =>\n\t\tnotes.find((n) => n.id === selected_id),\n\t);\n\n\tlet filtered_notes = $derived.by(() => {\n\t\tconst filtered = notes.filter(\n\t\t\t(n) =>\n\t\t\t\tn.title.toLowerCase().includes(search.toLowerCase()) ||\n\t\t\t\t(n.content || \"\").toLowerCase().includes(search.toLowerCase()),\n\t\t);\n\n\t\t// Sort: pinned first, then by updated date\n\t\treturn filtered.sort((a, b) => {\n\t\t\tif (a.pinned && !b.pinned) return -1;\n\t\t\tif (!a.pinned && b.pinned) return 1;\n\t\t\treturn new Date(b.updated) - new Date(a.updated);\n\t\t});\n\t});\n\n\tasync function create_note() {\n\t\tconst new_note = await data.notes.create({\n\t\t\ttitle: \"Untitled\",\n\t\t\tcontent: \"\",\n\t\t\tpinned: false,\n\t\t\tupdated: new Date().toISOString(),\n\t\t});\n\t\tselected_id = new_note.id;\n\t\tif (is_mobile) show_sidebar = false;\n\t}\n\n\tasync function update_note(field, value) {\n\t\tif (!selected_id) return;\n\t\tawait data.notes.update(selected_id, {\n\t\t\t[field]: value,\n\t\t\tupdated: new Date().toISOString(),\n\t\t});\n\t}\n\n\tasync function toggle_pin(id, e) {\n\t\te.stopPropagation();\n\t\tconst note = notes.find((n) => n.id === id);\n\t\tif (note) {\n\t\t\tawait data.notes.update(id, { pinned: !note.pinned });\n\t\t}\n\t}\n\n\tfunction debounced_save(html) {\n\t\tif (save_timeout) clearTimeout(save_timeout);\n\t\tsave_timeout = setTimeout(() => {\n\t\t\tif (selected_id) update_note(\"content\", html);\n\t\t}, 500);\n\t}\n\n\tasync function delete_note(id) {\n\t\tawait data.notes.delete(id);\n\t\tif (is_mobile) show_sidebar = true;\n\t}\n\n\tfunction select_note(id) {\n\t\tselected_id = id;\n\t\tif (is_mobile) show_sidebar = false;\n\t}\n\n\tfunction go_back() {\n\t\tshow_sidebar = true;\n\t}\n\n\tfunction format_date(ts) {\n\t\tif (!ts) return \"\";\n\t\treturn new Date(ts).toLocaleDateString();\n\t}\n\n\tfunction set_link() {\n\t\tconst url = window.prompt(\"Enter URL\");\n\t\tif (url) {\n\t\t\teditorState.editor.chain().focus().setLink({ href: url }).run();\n\t\t}\n\t}\n</script>\n\n<div class=\"app\">\n\t<div class=\"sidebar\" class:hide={is_mobile && !show_sidebar}>\n\t\t<div class=\"sidebar-header\">\n\t\t\t<input\n\t\t\t\ttype=\"text\"\n\t\t\t\tbind:value={search}\n\t\t\t\tplaceholder={content.search_placeholder} />\n\t\t\t<button onclick={create_note}\n\t\t\t\t><Icon icon=\"lucide:plus\" width={18} /></button>\n\t\t</div>\n\n\t\t<div class=\"notes-list\">\n\t\t\t{#if loading}\n\t\t\t\t<p class=\"empty\">{content.loading_message}</p>\n\t\t\t{:else if filtered_notes.length === 0}\n\t\t\t\t<p class=\"empty\">{content.empty_sidebar}</p>\n\t\t\t{:else}\n\t\t\t\t{#each filtered_notes as note (note.id)}\n\t\t\t\t\t<div\n\t\t\t\t\t\tclass=\"note-item\"\n\t\t\t\t\t\tclass:selected={note.id === selected_id}\n\t\t\t\t\t\tclass:pinned={note.pinned}\n\t\t\t\t\t\tonclick={() => select_note(note.id)}\n\t\t\t\t\t\tonkeydown={(e) => e.key === \"Enter\" && select_note(note.id)}\n\t\t\t\t\t\trole=\"button\"\n\t\t\t\t\t\ttabindex=\"0\">\n\t\t\t\t\t\t<div class=\"note-content\">\n\t\t\t\t\t\t\t<span class=\"note-title\">{note.title || \"Untitled\"}</span>\n\t\t\t\t\t\t\t<span class=\"note-date\">{format_date(note.updated)}</span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t\t<button\n\t\t\t\t\t\t\tclass=\"pin-btn\"\n\t\t\t\t\t\t\tclass:active={note.pinned}\n\t\t\t\t\t\t\tonclick={(e) => toggle_pin(note.id, e)}\n\t\t\t\t\t\t\ttitle={note.pinned ? \"Unpin note\" : \"Pin note\"}>\n\t\t\t\t\t\t\t<Icon\n\t\t\t\t\t\t\t\ticon={note.pinned ? \"lucide:pin-off\" : \"lucide:pin\"}\n\t\t\t\t\t\t\t\twidth={14} />\n\t\t\t\t\t\t</button>\n\t\t\t\t\t</div>\n\t\t\t\t{/each}\n\t\t\t{/if}\n\t\t</div>\n\t\t<footer class=\"footer\">\n\t\t\tbuilt with <a href=\"https://tinykit.studio\" target=\"_blank\"\n\t\t\t\t>tinykit.studio</a>\n\t\t</footer>\n\t</div>\n\n\t<div class=\"editor\">\n\t\t{#if selected_note}\n\t\t\t<div class=\"editor-header\">\n\t\t\t\t{#if is_mobile}\n\t\t\t\t\t<button class=\"back-btn\" onclick={go_back}\n\t\t\t\t\t\t><Icon icon=\"lucide:chevron-left\" width={20} /></button>\n\t\t\t\t{/if}\n\t\t\t\t<input\n\t\t\t\t\ttype=\"text\"\n\t\t\t\t\tclass=\"title-input\"\n\t\t\t\t\tvalue={selected_note.title}\n\t\t\t\t\toninput={(e) => update_note(\"title\", e.target.value)}\n\t\t\t\t\tplaceholder={content.title_placeholder} />\n\t\t\t\t<button\n\t\t\t\t\tclass=\"pin-btn-header\"\n\t\t\t\t\tclass:active={selected_note.pinned}\n\t\t\t\t\tonclick={(e) => toggle_pin(selected_note.id, e)}\n\t\t\t\t\ttitle={selected_note.pinned ? \"Unpin note\" : \"Pin note\"}>\n\t\t\t\t\t<Icon\n\t\t\t\t\t\ticon={selected_note.pinned ? \"lucide:pin-off\" : \"lucide:pin\"}\n\t\t\t\t\t\twidth={18} />\n\t\t\t\t</button>\n\t\t\t\t<button\n\t\t\t\t\tclass=\"delete-btn\"\n\t\t\t\t\tonclick={() => delete_note(selected_note.id)}\n\t\t\t\t\ttitle=\"Delete note\"><Icon icon=\"lucide:trash-2\" width={18} /></button>\n\t\t\t</div>\n\n\t\t\t<div class=\"editor-container\">\n\t\t\t\t{#if editorState.editor}\n\t\t\t\t\t<div class=\"toolbar\">\n\t\t\t\t\t\t<div class=\"toolbar-group\">\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"bold\")}\n\t\t\t\t\t\t\t\tonclick={() =>\n\t\t\t\t\t\t\t\t\teditorState.editor.chain().focus().toggleBold().run()}\n\t\t\t\t\t\t\t\ttitle=\"Bold\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:bold\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"italic\")}\n\t\t\t\t\t\t\t\tonclick={() =>\n\t\t\t\t\t\t\t\t\teditorState.editor.chain().focus().toggleItalic().run()}\n\t\t\t\t\t\t\t\ttitle=\"Italic\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:italic\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"underline\")}\n\t\t\t\t\t\t\t\tonclick={() =>\n\t\t\t\t\t\t\t\t\teditorState.editor.chain().focus().toggleUnderline().run()}\n\t\t\t\t\t\t\t\ttitle=\"Underline\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:underline\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"strike\")}\n\t\t\t\t\t\t\t\tonclick={() =>\n\t\t\t\t\t\t\t\t\teditorState.editor.chain().focus().toggleStrike().run()}\n\t\t\t\t\t\t\t\ttitle=\"Strikethrough\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:strikethrough\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t<div class=\"toolbar-divider\"></div>\n\n\t\t\t\t\t\t<div class=\"toolbar-group\">\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"heading\", {\n\t\t\t\t\t\t\t\t\tlevel: 1,\n\t\t\t\t\t\t\t\t})}\n\t\t\t\t\t\t\t\tonclick={() =>\n\t\t\t\t\t\t\t\t\teditorState.editor\n\t\t\t\t\t\t\t\t\t\t.chain()\n\t\t\t\t\t\t\t\t\t\t.focus()\n\t\t\t\t\t\t\t\t\t\t.toggleHeading({ level: 1 })\n\t\t\t\t\t\t\t\t\t\t.run()}\n\t\t\t\t\t\t\t\ttitle=\"Heading 1\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:heading-1\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"heading\", {\n\t\t\t\t\t\t\t\t\tlevel: 2,\n\t\t\t\t\t\t\t\t})}\n\t\t\t\t\t\t\t\tonclick={() =>\n\t\t\t\t\t\t\t\t\teditorState.editor\n\t\t\t\t\t\t\t\t\t\t.chain()\n\t\t\t\t\t\t\t\t\t\t.focus()\n\t\t\t\t\t\t\t\t\t\t.toggleHeading({ level: 2 })\n\t\t\t\t\t\t\t\t\t\t.run()}\n\t\t\t\t\t\t\t\ttitle=\"Heading 2\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:heading-2\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t<div class=\"toolbar-divider\"></div>\n\n\t\t\t\t\t\t<div class=\"toolbar-group\">\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"bulletList\")}\n\t\t\t\t\t\t\t\tonclick={() =>\n\t\t\t\t\t\t\t\t\teditorState.editor.chain().focus().toggleBulletList().run()}\n\t\t\t\t\t\t\t\ttitle=\"Bullet List\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:list\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"orderedList\")}\n\t\t\t\t\t\t\t\tonclick={() =>\n\t\t\t\t\t\t\t\t\teditorState.editor.chain().focus().toggleOrderedList().run()}\n\t\t\t\t\t\t\t\ttitle=\"Numbered List\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:list-ordered\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t<div class=\"toolbar-divider\"></div>\n\n\t\t\t\t\t\t<div class=\"toolbar-group\">\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"blockquote\")}\n\t\t\t\t\t\t\t\tonclick={() =>\n\t\t\t\t\t\t\t\t\teditorState.editor.chain().focus().toggleBlockquote().run()}\n\t\t\t\t\t\t\t\ttitle=\"Quote\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:quote\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"codeBlock\")}\n\t\t\t\t\t\t\t\tonclick={() =>\n\t\t\t\t\t\t\t\t\teditorState.editor.chain().focus().toggleCodeBlock().run()}\n\t\t\t\t\t\t\t\ttitle=\"Code Block\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:code\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tclass:active={editorState.editor.isActive(\"link\")}\n\t\t\t\t\t\t\t\tonclick={set_link}\n\t\t\t\t\t\t\t\ttitle=\"Link\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:link\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t<div class=\"toolbar-divider\"></div>\n\n\t\t\t\t\t\t<div class=\"toolbar-group\">\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tonclick={() => editorState.editor.chain().focus().undo().run()}\n\t\t\t\t\t\t\t\tdisabled={!editorState.editor.can().undo()}\n\t\t\t\t\t\t\t\ttitle=\"Undo\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:undo\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"toolbar-btn\"\n\t\t\t\t\t\t\t\tonclick={() => editorState.editor.chain().focus().redo().run()}\n\t\t\t\t\t\t\t\tdisabled={!editorState.editor.can().redo()}\n\t\t\t\t\t\t\t\ttitle=\"Redo\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:redo\" width={16} />\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t{/if}\n\t\t\t\t<div bind:this={editor_el} class=\"tiptap-wrapper\"></div>\n\t\t\t</div>\n\t\t{:else}\n\t\t\t<div class=\"empty-state\">\n\t\t\t\t{#if is_mobile}\n\t\t\t\t\t<button class=\"back-btn-large\" onclick={go_back}\n\t\t\t\t\t\t><Icon icon=\"lucide:chevron-left\" width={20} /><span>Notes</span\n\t\t\t\t\t\t></button>\n\t\t\t\t{/if}\n\t\t\t\t<p>{content.empty_editor}</p>\n\t\t\t</div>\n\t\t{/if}\n\t</div>\n</div>\n\n<style>\n\t.app {\n\t\tdisplay: flex;\n\t\theight: 100vh;\n\t\theight: 100dvh;\n\t\tbackground: var(--page-background);\n\t\tfont-family: var(--body-font);\n\t\toverflow: hidden;\n\t}\n\n\t.sidebar {\n\t\twidth: 280px;\n\t\tbackground: var(--sidebar-background);\n\t\tborder-right: 1px solid var(--border-color);\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tflex-shrink: 0;\n\t}\n\t.sidebar-header {\n\t\tdisplay: flex;\n\t\tgap: 8px;\n\t\tpadding: 16px;\n\t\tborder-bottom: 1px solid var(--border-color);\n\t}\n\t.sidebar-header input {\n\t\tflex: 1;\n\t\tpadding: 8px 12px;\n\t\tborder: 1px solid var(--border-color);\n\t\tborder-radius: 6px;\n\t\tbackground: var(--input-background);\n\t\tcolor: var(--body-text-color);\n\t\tfont-size: 16px;\n\