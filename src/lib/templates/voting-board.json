	"frontend_code": "<script>\n\timport Icon from '@iconify/svelte'\n\timport content from '$content'\n\timport data from '$data'\n\n\tconst STORAGE_KEY = 'voting_board_votes'\n\n\tlet features = $state([])\n\tlet loading = $state(true)\n\tlet sort_by = $state('votes')\n\tlet filter_status = $state('all')\n\tlet voted_ids = $state(load_votes())\n\n\tlet new_title = $state('')\n\tlet new_description = $state('')\n\tlet submitting = $state(false)\n\tlet show_form = $state(false)\n\tlet submitted = $state(false)\n\n\tfunction load_votes() {\n\t\ttry {\n\t\t\treturn JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]')\n\t\t} catch {\n\t\t\treturn []\n\t\t}\n\t}\n\n\tfunction save_vote(feature_id) {\n\t\tvoted_ids = [...voted_ids, feature_id]\n\t\tlocalStorage.setItem(STORAGE_KEY, JSON.stringify(voted_ids))\n\t}\n\n\tfunction has_voted(feature_id) {\n\t\treturn voted_ids.includes(feature_id)\n\t}\n\n\tdata.features.subscribe(items => {\n\t\tfeatures = items\n\t\tloading = false\n\t})\n\n\tconst status_options = [\n\t\t{ value: 'new', label: 'New', color: '#3b82f6' },\n\t\t{ value: 'planned', label: 'Planned', color: '#8b5cf6' },\n\t\t{ value: 'in-progress', label: 'In Progress', color: '#f59e0b' },\n\t\t{ value: 'shipped', label: 'Shipped', color: '#22c55e' }\n\t]\n\n\tlet sorted_features = $derived.by(() => {\n\t\tlet approved = features.filter(f => f.approved)\n\t\tlet filtered = filter_status === 'all' \n\t\t\t? approved \n\t\t\t: approved.filter(f => f.status === filter_status)\n\n\t\treturn [...filtered].sort((a, b) => {\n\t\t\tif (sort_by === 'votes') return (b.votes || 0) - (a.votes || 0)\n\t\t\tif (sort_by === 'newest') return new Date(b.created_at).getTime() - new Date(a.created_at).getTime()\n\t\t\tif (sort_by === 'status') {\n\t\t\t\tconst order = { 'shipped': 0, 'in-progress': 1, 'planned': 2, 'new': 3 }\n\t\t\t\treturn order[a.status] - order[b.status]\n\t\t\t}\n\t\t\treturn 0\n\t\t})\n\t})\n\n\tfunction get_status_info(status) {\n\t\treturn status_options.find(s => s.value === status) || status_options[0]\n\t}\n\n\tasync function submit_feature(e) {\n\t\te.preventDefault()\n\t\tif (!new_title.trim()) return\n\n\t\tsubmitting = true\n\t\ttry {\n\t\t\tawait data.features.create({\n\t\t\t\ttitle: new_title.trim(),\n\t\t\t\tdescription: new_description.trim(),\n\t\t\t\tvotes: 0,\n\t\t\t\tstatus: 'new',\n\t\t\t\tapproved: false,\n\t\t\t\tcreated_at: new Date().toISOString()\n\t\t\t})\n\t\t\tnew_title = ''\n\t\t\tnew_description = ''\n\t\t\tshow_form = false\n\t\t\tsubmitted = true\n\t\t\tsetTimeout(() => submitted = false, 5000)\n\t\t} finally {\n\t\t\tsubmitting = false\n\t\t}\n\t}\n\n\tasync function upvote(feature) {\n\t\tif (has_voted(feature.id)) return\n\t\tsave_vote(feature.id)\n\t\tawait data.features.update(feature.id, {\n\t\t\tvotes: (feature.votes || 0) + 1\n\t\t})\n\t}\n</script>\n\n<div class=\"page\">\n\t<header class=\"header\">\n\t\t<div class=\"header-content\">\n\t\t\t<h1>{content.title}</h1>\n\t\t\t<p>{content.description}</p>\n\t\t</div>\n\t\t<button class=\"btn-primary\" onclick={() => show_form = !show_form}>\n\t\t\t<Icon icon={show_form ? 'lucide:x' : 'lucide:plus'} width={18} />\n\t\t\t{show_form ? content.cancel_button : content.submit_button}\n\t\t</button>\n\t</header>\n\n\t{#if submitted}\n\t\t<div class=\"success-message\">\n\t\t\t<Icon icon=\"lucide:check-circle\" width={18} />\n\t\t\t<span>{content.success_message}</span>\n\t\t</div>\n\t{/if}\n\n\t{#if show_form}\n\t\t<form class=\"submit-form\" onsubmit={submit_feature}>\n\t\t\t<input\n\t\t\t\ttype=\"text\"\n\t\t\t\tplaceholder={content.title_placeholder}\n\t\t\t\tbind:value={new_title}\n\t\t\t\trequired\n\t\t\t/>\n\t\t\t<textarea\n\t\t\t\tplaceholder={content.description_placeholder}\n\t\t\t\tbind:value={new_description}\n\t\t\t\trows=\"3\"\n\t\t\t></textarea>\n\t\t\t<button type=\"submit\" class=\"btn-primary\" disabled={submitting}>\n\t\t\t\t{submitting ? content.submitting_text : content.submit_feature_button}\n\t\t\t</button>\n\t\t</form>\n\t{/if}\n\n\t<div class=\"controls\">\n\t\t<div class=\"filters\">\n\t\t\t<button \n\t\t\t\tclass:active={filter_status === 'all'}\n\t\t\t\tonclick={() => filter_status = 'all'}\n\t\t\t>All</button>\n\t\t\t{#each status_options as status (status.value)}\n\t\t\t\t<button \n\t\t\t\t\tclass:active={filter_status === status.value}\n\t\t\t\t\tonclick={() => filter_status = status.value}\n\t\t\t\t>{status.label}</button>\n\t\t\t{/each}\n\t\t</div>\n\t\t<div class=\"sort\">\n\t\t\t<span>{content.sort_label}</span>\n\t\t\t<select bind:value={sort_by}>\n\t\t\t\t<option value=\"votes\">{content.sort_votes}</option>\n\t\t\t\t<option value=\"newest\">{content.sort_newest}</option>\n\t\t\t\t<option value=\"status\">{content.sort_status}</option>\n\t\t\t</select>\n\t\t</div>\n\t</div>\n\n\t{#if loading}\n\t\t<div class=\"loading\">\n\t\t\t<Icon icon=\"lucide:loader-2\" width={24} class=\"spin\" />\n\t\t</div>\n\t{:else if sorted_features.length === 0}\n\t\t<div class=\"empty\">\n\t\t\t<Icon icon=\"lucide:inbox\" width={48} />\n\t\t\t<p>{content.empty_text}</p>\n\t\t</div>\n\t{:else}\n\t\t<div class=\"features-list\">\n\t\t\t{#each sorted_features as feature (feature.id)}\n\t\t\t\t{@const status_info = get_status_info(feature.status)}\n\t\t\t\t<div class=\"feature-card\">\n\t\t\t\t\t<button \n\t\t\t\t\t\tclass=\"vote-btn\" \n\t\t\t\t\t\tclass:voted={has_voted(feature.id)}\n\t\t\t\t\t\tonclick={() => upvote(feature)}\n\t\t\t\t\t\tdisabled={has_voted(feature.id)}\n\t\t\t\t\t>\n\t\t\t\t\t\t<Icon icon={has_voted(feature.id) ? 'lucide:check' : 'lucide:chevron-up'} width={20} />\n\t\t\t\t\t\t<span>{feature.votes || 0}</span>\n\t\t\t\t\t</button>\n\t\t\t\t\t<div class=\"feature-content\">\n\t\t\t\t\t\t<div class=\"feature-header\">\n\t\t\t\t\t\t\t<h3>{feature.title}</h3>\n\t\t\t\t\t\t\t<span \n\t\t\t\t\t\t\t\tclass=\"status-badge\"\n\t\t\t\t\t\t\t\tstyle=\"--status-color: {status_info.color}\"\n\t\t\t\t\t\t\t>{status_info.label}</span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t\t{#if feature.description}\n\t\t\t\t\t\t\t<p>{feature.description}</p>\n\t\t\t\t\t\t{/if}\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\t\t\t{/each}\n\t\t</div>\n\t{/if}\n</div>\n\n<style>\n\t.page {\n\t\tmin-height: 100vh;\n\t\tbackground: var(--bg-color, #f8fafc);\n\t\tpadding: 2rem;\n\t\tfont-family: var(--font, system-ui, sans-serif);\n\t}\n\n\t.header {\n\t\tmax-width: 800px;\n\t\tmargin: 0 auto 2rem;\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: flex-start;\n\t\tgap: 1rem;\n\t\tflex-wrap: wrap;\n\t}\n\n\t.header h1 {\n\t\tfont-size: 1.75rem;\n\t\tfont-weight: 700;\n\t\tcolor: var(--heading-color, #0f172a);\n\t\tmargin: 0 0 0.25rem;\n\t}\n\n\t.header p {\n\t\tcolor: var(--text-color, #64748b);\n\t\tmargin: 0;\n\t}\n\n\t.btn-primary {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.5rem;\n\t\tpadding: 0.625rem 1rem;\n\t\tbackground: var(--accent-color, #3b82f6);\n\t\tcolor: white;\n\t\tborder: none;\n\t\tborder-radius: var(--radius, 8px);\n\t\tfont-size: 0.875rem;\n\t\tfont-weight: 600;\n\t\tcursor: pointer;\n\t\ttransition: all 0.2s;\n\t}\n\n\t.btn-primary:hover {\n\t\tfilter: brightness(1.1);\n\t}\n\n\t.btn-primary:disabled {\n\t\topacity: 0.7;\n\t\tcursor: not-allowed;\n\t}\n\n\t.success-message {\n\t\tmax-width: 800px;\n\t\tmargin: 0 auto 1.5rem;\n\t\tpadding: 0.875rem 1rem;\n\t\tbackground: #dcfce7;\n\t\tborder: 1px solid #86efac;\n\t\tborder-radius: var(--radius, 8px);\n\t\tcolor: #166534;\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.5rem;\n\t\tfont-size: 0.875rem;\n\t}\n\n\t.submit-form {\n\t\tmax-width: 800px;\n\t\tmargin: 0 auto 2rem;\n\t\tbackground: var(--card-bg, #ffffff);\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: var(--radius, 8px);\n\t\tpadding: 1.25rem;\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tgap: 0.75rem;\n\t}\n\n\t.submit-form input,\n\t.submit-form textarea {\n\t\twidth: 100%;\n\t\tpadding: 0.75rem;\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: var(--radius, 8px);\n\t\tfont-size: 0.9rem;\n\t\tbackground: var(--bg-color, #f8fafc);\n\t\tcolor: var(--heading-color, #0f172a);\n\t\tresize: vertical;\n\t}\n\n\t.submit-form input:focus,\n\t.submit-form textarea:focus {\n\t\toutline: none;\n\t\tborder-color: var(--accent-color, #3b82f6);\n\t}\n\n\t.submit-form button {\n\t\talign-self: flex-end;\n\t}\n\n\t.controls {\n\t\tmax-width: 800px;\n\t\tmargin: 0 auto 1.5rem;\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: center;\n\t\tgap: 1rem;\n\t\tflex-wrap: wrap;\n\t}\n\n\t.filters {\n\t\tdisplay: flex;\n\t\tgap: 0.5rem;\n\t\tflex-wrap: wrap;\n\t}\n\n\t.filters button {\n\t\tpadding: 0.375rem 0.75rem;\n\t\tbackground: transparent;\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: var(--radius, 8px);\n\t\tcolor: var(--text-color, #64748b);\n\t\tfont-size: 0.8rem;\n\t\tcursor: pointer;\n\t\ttransition: all 0.2s;\n\t}\n\n\t.filters button:hover {\n\t\tborder-color: var(--accent-color, #3b82f6);\n\t}\n\n\t.filters button.active {\n\t\tbackground: var(--accent-color, #3b82f6);\n\t\tborder-color: var(--accent-color, #3b82f6);\n\t\tcolor: white;\n\t}\n\n\t.sort {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.5rem;\n\t\tcolor: var(--text-color, #64748b);\n\t\tfont-size: 0.875rem;\n\t}\n\n\t.sort select {\n\t\tpadding: 0.375rem 0.75rem;\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: var(--radius, 8px);\n\t\tbackground: var(--card-bg, #ffffff);\n\t\tcolor: var(--heading-color, #0f172a);\n\t\tfont-size: 0.8rem;\n\t\tcursor: pointer;\n\t}\n\n\t.loading, .empty {\n\t\tmax-width: 800px;\n\t\tmargin: 4rem auto;\n\t\ttext-align: center;\n\t\tcolor: var(--text-color, #64748b);\n\t}\n\n\t.empty p {\n\t\tmargin-top: 1rem;\n\t}\n\n\t.features-list {\n\t\tmax-width: 800px;\n\t\tmargin: 0 auto;\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tgap: 0.75rem;\n\t}\n\n\t.feature-card {\n\t\tdisplay: flex;\n\t\tgap: 1rem;\n\t\tbackground: var(--card-bg, #ffffff);\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: var(--radius, 8px);\n\t\tpadding: 1rem;\n\t\ttransition: border-color 0.2s;\n\t}\n\n\t.feature-card:hover {\n\t\tborder-color: var(--accent-color, #3b82f6);\n\t}\n\n\t.vote-btn {\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\talign-items: center;\n\t\tgap: 0.125rem;\n\t\tpadding: 0.5rem 0.75rem;\n\t\tbackground: var(--bg-color, #f8fafc);\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: var(--radius, 8px);\n\t\tcolor: var(--text-color, #64748b);\n\t\tcursor: pointer;\n\t\ttransition: all 0.2s;\n\t\tflex-shrink: 0;\n\t}\n\n\t.vote-btn:hover:not(:disabled) {\n\t\tborder-color: var(--accent-color, #3b82f6);\n\t\tcolor: var(--accent-color, #3b82f6);\n\t\tbackground: #eff6ff;\n\t}\n\n\t.vote-btn.voted {\n\t\tbackground: var(--accent-color, #3b82f6);\n\t\tborder-color: var(--accent-color, #3b82f6);\n\t\tcolor: white;\n\t\tcursor: default;\n\t}\n\n\t.vote-btn span {\n\t\tfont-size: 0.875rem;\n\t\tfont-weight: 600;\n\t}\n\n\t.feature-content {\n\t\tflex: 1;\n\t\tmin-width: 0;\n\t}\n\n\t.feature-header {\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: flex-start;\n\t\tgap: 0.75rem;\n\t\tmargin-bottom: 0.5rem;\n\t}\n\n\t.feature-header h3 {\n\t\tfont-size: 1rem;\n\t\tfont-weight: 600;\n\t\tcolor: var(--heading-color, #0f172a);\n\t\tmargin: 0;\n\t}\n\n\t.feature-content p {\n\t\tcolor: var(--text-color, #64748b);\n\t\tfont-size: 0.875rem;\n\t\tmargin: 0;\n\t\tline-height: 1.5;\n\t}\n\n\t.status-badge {\n\t\tpadding: 0.25rem 0.5rem;\n\t\tbackground: color-mix(in srgb, var(--status-color) 15%, transparent);\n\t\tcolor: var(--status-color);\n\t\tborder-radius: 999px;\n\t\tfont-size: 0.75rem;\n\t\tfont-weight: 600;\n\t\tflex-shrink: 0;\n\t}\n\n\t:global(.spin) {\n\t\tanimation: spin 1s linear infinite;\n\t}\n\n\t@keyframes spin {\n\t\tfrom { transform: rotate(0deg); }\n\t\tto { transform: rotate(360deg); }\n\t}\n\n\t@media (max-width: 600px) {\n\t\t.header {\n\t\t\tflex-direction: column;\n\t\t}\n\n\t\t.controls {\n\t\t\tflex-direction: column;\n\t\t\talign-items: stretch;\n\t\t}\n\n\t\t.sort {\n\t\t\tjustify-content: space-between;\n\t\t}\n\t}\n</style>",
