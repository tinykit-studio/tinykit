{
	"id": "voting-board",
	"name": "Voting Board",
	"description": "Feature request board with upvotes and status tracking",
	"preview": "lucide:vote",
	"tags": [
		"launch",
		"feedback",
		"intermediate"
	],
	"kits": [
		"launch",
		"community"
