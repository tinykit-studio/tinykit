	"frontend_code": "<script>\n\timport content from '$content'\n\timport data from '$data'\n\n\t// Invoice header data\n\tlet invoice = $state({\n\t\tcompany_name: '',\n\t\tinvoice_number: '',\n\t\tdate: new Date().toISOString().split('T')[0],\n\t\tdue_date: new Date(Date.now() + 7 * 24 * 60 * 60 * 1000).toISOString().split('T')[0],\n\t\tfrom_email: '',\n\t\tfrom_address: '',\n\t\tto_name: '',\n\t\tto_email: '',\n\t\tto_address: '',\n\t\tcurrency: '$',\n\t\ttax_rate: 10,\n\t\tnotes: ''\n\t})\n\n\t// Line items\n\tlet items = $state([\n\t\t\n\t])\n\n\tlet loading = $state(true)\n\tlet invoice_record_id = $state(null) // Cache the record ID to avoid list() on save\n\tlet initial_load_done = $state(false) // Only update from subscription on first load\n\n\t// Subscribe to invoice collection (single record)\n\tdata.invoice.subscribe(records => {\n\t\t\tif (records.length > 0) {\n\t\t\tconst record = records[0]\n\t\t\t// Cache the record ID for saves\n\t\t\tinvoice_record_id = record.id\n\t\t\t// Only update local state on initial load, not on subsequent subscription updates\n\t\t\tif (!initial_load_done) {\n\t\t\t\tinitial_load_done = true\n\t\t\t\tinvoice = {\n\t\t\t\t\tcompany_name: record.company_name || invoice.company_name,\n\t\t\t\t\tinvoice_number: record.invoice_number || invoice.invoice_number,\n\t\t\t\t\tdate: record.date || invoice.date,\n\t\t\t\t\tdue_date: record.due_date || invoice.due_date,\n\t\t\t\t\tfrom_email: record.from_email || invoice.from_email,\n\t\t\t\t\tfrom_address: record.from_address || invoice.from_address,\n\t\t\t\t\tto_name: record.to_name || invoice.to_name,\n\t\t\t\t\tto_email: record.to_email || invoice.to_email,\n\t\t\t\t\tto_address: record.to_address || invoice.to_address,\n\t\t\t\t\tcurrency: record.currency || invoice.currency,\n\t\t\t\t\ttax_rate: record.tax_rate ?? invoice.tax_rate,\n\t\t\t\t\tnotes: record.notes ?? invoice.notes\n\t\t\t\t}\n\t\t\t}\n\t\t}\n\t\tloading = false\n\t});\n\n\t// Subscribe to items collection\n\tdata.items.subscribe(records => {\n\t\t\tif (records.length > 0) {\n\t\t\titems = records.map(r => ({\n\t\t\t\tid: r.id,\n\t\t\t\tdescription: r.description || '',\n\t\t\t\tquantity: r.quantity || 1,\n\t\t\t\tprice: r.price || 0\n\t\t\t}))\n\t\t}\n\t});\n\n\t// Computed values\n\tlet subtotal = $derived(items.reduce((sum, item) => sum + item.price * item.quantity, 0))\n\tlet tax = $derived(subtotal * (invoice.tax_rate / 100))\n\tlet total = $derived(subtotal + tax)\n\n\t// Debounced save for invoice header - uses cached record ID\n\tlet save_timeout = null\n\tasync function save_invoice() {\n\t\tif (save_timeout) clearTimeout(save_timeout)\n\t\tsave_timeout = setTimeout(async () => {\n\t\t\tif (invoice_record_id) {\n\t\t\t\t// Use cached ID - avoids list() which would trigger subscription\n\t\t\t\tawait data.invoice.update(invoice_record_id, invoice)\n\t\t\t} else {\n\t\t\t\t// No record exists yet, create one\n\t\t\t\tconst created = await data.invoice.create(invoice)\n\t\t\t\tinvoice_record_id = created.id\n\t\t\t}\n\t\t}, 500)\n\t}\n\n\t// Save items\n\tasync function save_item(item) {\n\t\tawait data.items.update(item.id, {\n\t\t\tdescription: item.description,\n\t\t\tquantity: item.quantity,\n\t\t\tprice: item.price\n\t\t})\n\t}\n\n\tasync function add_item() {\n\t\tawait data.items.create({\n\t\t\tdescription: '',\n\t\t\tquantity: 1,\n\t\t\tprice: 0\n\t\t})\n\t\t// Note: subscription will automatically update items array\n\t}\n\n\tasync function remove_item(id) {\n\t\tawait data.items.delete(id)\n\t\titems = items.filter(item => item.id !== id)\n\t}\n\n\tfunction autogrow(el) {\n\t\tel.style.height = \"auto\"\n\t\tel.style.height = el.scrollHeight + \"px\"\n\t}\n\n\t// Svelte action to auto-resize textarea on mount and input\n\tfunction autogrow_action(node) {\n\t\tconst resize = () => autogrow(node)\n\t\tresize()\n\t\tsetTimeout(resize, 100)\n\t\tnode.addEventListener('input', resize)\n\t\treturn { destroy() { node.removeEventListener('input', resize) } }\n\t}\n\n\tfunction print_invoice() {\n\t\twindow.print()\n\t}\n</script>\n\n<main>\n\t<div class=\"invoice-container\">\n\t\t<div class=\"header\">\n\t\t\t<div class=\"title-section\">\n\t\t\t\t<input\n\t\t\t\t\ttype=\"text\"\n\t\t\t\t\tclass=\"h1-input\"\n\t\t\t\t\tbind:value={invoice.company_name}\n\t\t\t\t\tplaceholder=\"Your Company Name\"\n\t\t\t\t\tonchange={save_invoice}\n\t\t\t\t\taria-label=\"Company name\"\n\t\t\t\t/>\n\t\t\t\t<div class=\"invoice-meta\">\n\t\t\t\t\t<div class=\"meta-group\">\n\t\t\t\t\t\t<label for=\"invoice-number\">{content.invoice_number_label}</label>\n\t\t\t\t\t\t<input id=\"invoice-number\" type=\"text\" bind:value={invoice.invoice_number} onchange={save_invoice} />\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"meta-group\">\n\t\t\t\t\t\t<label for=\"invoice-date\">{content.date_label}</label>\n\t\t\t\t\t\t<input id=\"invoice-date\" type=\"date\" bind:value={invoice.date} onchange={save_invoice} />\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"meta-group\">\n\t\t\t\t\t\t<label for=\"due-date\">{content.due_date_label}</label>\n\t\t\t\t\t\t<input id=\"due-date\" type=\"date\" bind:value={invoice.due_date} onchange={save_invoice} />\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\t\t\t</div>\n\n\t\t\t<div class=\"contact-grid\">\n\t\t\t\t<div class=\"contact-section\">\n\t\t\t\t\t<h3>{content.from_label}</h3>\n\t\t\t\t\t<input type=\"text\" bind:value={invoice.from_email} placeholder=\"Email\" onchange={save_invoice} aria-label=\"From email\" />\n\t\t\t\t\t<textarea bind:value={invoice.from_address} placeholder=\"Address\" rows=\"3\" onchange={save_invoice} aria-label=\"From address\"></textarea>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"contact-section\">\n\t\t\t\t\t<h3>{content.bill_to_label}</h3>\n\t\t\t\t\t<input type=\"text\" bind:value={invoice.to_name} placeholder=\"Client Name\" onchange={save_invoice} aria-label=\"Client name\" />\n\t\t\t\t\t<input type=\"text\" bind:value={invoice.to_email} placeholder=\"Client Email\" onchange={save_invoice} aria-label=\"Client email\" />\n\t\t\t\t\t<textarea bind:value={invoice.to_address} placeholder=\"Client Address\" rows=\"3\" onchange={save_invoice} aria-label=\"Client address\"></textarea>\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</div>\n\n\t\t<div class=\"items-table\">\n\t\t\t<div class=\"table-header\">\n\t\t\t\t<div class=\"col-desc\">{content.description_label}</div>\n\t\t\t\t<div class=\"col-qty\">{content.quantity_label}</div>\n\t\t\t\t<div class=\"col-price\">{content.price_label}</div>\n\t\t\t\t<div class=\"col-total\">{content.total_label}</div>\n\t\t\t\t<div class=\"col-action no-print\"></div>\n\t\t\t</div>\n\n\t\t\t{#each items as item (item.id)}\n\t\t\t\t<div class=\"table-row\">\n\t\t\t\t\t<div class=\"col-desc\">\n\t\t\t\t\t\t<input\n\t\t\t\t\t\t\ttype=\"text\"\n\t\t\t\t\t\t\tbind:value={item.description}\n\t\t\t\t\t\t\tplaceholder=\"Item description\"\n\t\t\t\t\t\t\tonchange={() => save_item(item)}\n\t\t\t\t\t\t\taria-label=\"Item description\"\n\t\t\t\t\t\t/>\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"col-qty\">\n\t\t\t\t\t\t<input type=\"number\" min=\"0\" bind:value={item.quantity} onchange={() => save_item(item)} aria-label=\"Quantity\" />\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"col-price\">\n\t\t\t\t\t\t<div class=\"input-prefix\">\n\t\t\t\t\t\t\t<span>{invoice.currency}</span>\n\t\t\t\t\t\t\t<input\n\t\t\t\t\t\t\t\ttype=\"number\"\n\t\t\t\t\t\t\t\tmin=\"0\"\n\t\t\t\t\t\t\t\tstep=\"0.01\"\n\t\t\t\t\t\t\t\tbind:value={item.price}\n\t\t\t\t\t\t\t\tonchange={() => save_item(item)}\n\t\t\t\t\t\t\t\taria-label=\"Price\"\n\t\t\t\t\t\t\t/>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"col-total\">\n\t\t\t\t\t\t{invoice.currency}{(item.quantity * item.price).toFixed(2)}\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"col-action no-print\">\n\t\t\t\t\t\t{#if items.length > 1}\n\t\t\t\t\t\t\t<button\n\t\t\t\t\t\t\t\tclass=\"icon-btn delete\"\n\t\t\t\t\t\t\t\tonclick={() => remove_item(item.id)}\n\t\t\t\t\t\t\t\ttitle=\"Remove Item\"\n\t\t\t\t\t\t\t>\n\t\t\t\t\t\t\t\t&times;\n\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t{/if}\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\t\t\t{/each}\n\t\t</div>\n\n\t\t<div class=\"actions no-print\">\n\t\t\t<button class=\"btn-primary\" onclick={add_item}>{content.add_item_button}</button>\n\t\t</div>\n\n\t\t<div class=\"invoice-bottom\">\n\t\t\t<div class=\"notes-section\">\n\t\t\t\t<h3>{content.notes_label}</h3>\n\t\t\t\t<textarea\n\t\t\t\t\tbind:value={invoice.notes}\n\t\t\t\t\trows=\"1\"\n\t\t\t\t\tuse:autogrow_action\n\t\t\t\t\tplaceholder=\"Enter notes, payment terms, or thank you message...\"\n\t\t\t\t\tonchange={save_invoice}\n\t\t\t\t\taria-label=\"Notes\"\n\t\t\t\t></textarea>\n\t\t\t</div>\n\n\t\t\t<div class=\"summary-section\">\n\t\t\t\t<div class=\"summary-row\">\n\t\t\t\t\t<span>{content.subtotal_label}</span>\n\t\t\t\t\t<span>{invoice.currency}{subtotal.toFixed(2)}</span>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"summary-row\">\n\t\t\t\t\t<label for=\"tax-rate\">{content.tax_rate_label}</label>\n\t\t\t\t\t<input\n\t\t\t\t\t\tid=\"tax-rate\"\n\t\t\t\t\t\ttype=\"number\"\n\t\t\t\t\t\tclass=\"tax-input\"\n\t\t\t\t\t\tbind:value={invoice.tax_rate}\n\t\t\t\t\t\tmin=\"0\"\n\t\t\t\t\t\tstep=\"0.5\"\n\t\t\t\t\t\tonchange={save_invoice}\n\t\t\t\t\t/>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"summary-row\">\n\t\t\t\t\t<span>{content.tax_label}</span>\n\t\t\t\t\t<span>{invoice.currency}{tax.toFixed(2)}</span>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"summary-row total\">\n\t\t\t\t\t<span>{content.grand_total_label}</span>\n\t\t\t\t\t<span>{invoice.currency}{total.toFixed(2)}</span>\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</div>\n\n\t\t<div class=\"footer no-print\">\n\t\t\t<button class=\"btn-print\" onclick={print_invoice}>{content.print_button}</button>\n\t\t</div>\n\t</div>\n</main>\n\n<style>\n\t:global(*) {\n\t\tbox-sizing: border-box;\n\t}\n\n\t:global(body) {\n\t\tfont-family:\n\t\t\tvar(--body-font, 'Inter'),\n\t\t\t-apple-system,\n\t\t\tBlinkMacSystemFont,\n\t\t\t'Segoe UI',\n\t\t\tRoboto,\n\t\t\tOxygen,\n\t\t\tUbuntu,\n\t\t\tCantarell,\n\t\t\t'Open Sans',\n\t\t\t'Helvetica Neue',\n\t\t\tsans-serif;\n\t\tbackground-color: var(--page-background, #f3f4f6);\n\t\tmargin: 0;\n\t\tpadding: 20px;\n\t\tcolor: var(--body-text-color, #1f2937);\n\t}\n\n\t.invoice-container {\n\t\tmax-width: 800px;\n\t\tmargin: 0 auto;\n\t\tbackground: var(--card-background, #ffffff);\n\t\tpadding: 40px;\n\t\tborder-radius: var(--card-radius, 8px);\n\t\tbox-shadow:\n\t\t\t0 4px 6px -1px rgba(0, 0, 0, 0.1),\n\t\t\t0 2px 4px -1px rgba(0, 0, 0, 0.06);\n\t}\n\n\t/* Universal Input Styles */\n\tinput,\n\ttextarea {\n\t\twidth: 100%;\n\t\tborder: 1px solid transparent;\n\t\tpadding: 4px 8px;\n\t\tpadding-left: 0;\n\t\tborder-radius: 4px;\n\t\tfont-family: inherit;\n\t\tfont-size: inherit;\n\t\tcolor: inherit;\n\t\tbackground: transparent;\n\t\ttransition: all 0.2s;\n\t}\n\n\tinput:hover,\n\ttextarea:hover {\n\t\tbackground-color: var(--input-hover-background, #f9fafb);\n\t\tborder-color: var(--border-color, #e5e7eb);\n\t}\n\n\tinput:focus,\n\ttextarea:focus {\n\t\toutline: none;\n\t\tbackground-color: var(--card-background, #ffffff);\n\t\tborder-color: var(--accent-color, #3b82f6);\n\t\tbox-shadow: 0 0 0 1px var(--accent-color, #3b82f6);\n\t}\n\n\t/* Header Section */\n\t.header {\n\t\tmargin-bottom: 40px;\n\t}\n\n\t.title-section {\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: flex-start;\n\t\tmargin-bottom: 30px;\n\t}\n\n\t.h1-input {\n\t\tfont-size: 2.5rem;\n\t\tfont-weight: 700;\n\t\twidth: 60%;\n\t\tpadding: 0;\n\t\tmargin: 0;\n\t}\n\n\t.invoice-meta {\n\t\ttext-align: right;\n\t}\n\n\t.meta-group {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tjustify-content: flex-end;\n\t\tmargin-bottom: 8px;\n\t}\n\n\t.meta-group label {\n\t\tfont-weight: 600;\n\t\tmargin-right: 12px;\n\t\tcolor: var(--label-color, #4b5563);\n\t}\n\n\t.meta-group input {\n\t\twidth: 140px;\n\t\ttext-align: right;\n\t}\n\n\t.contact-grid {\n\t\tdisplay: grid;\n\t\tgrid-template-columns: 1fr 1fr;\n\t\tgap: 40px;\n\t}\n\n\t.contact-section h3 {\n\t\tfont-size: 0.875rem;\n\t\ttext-transform: uppercase;\n\t\tletter-spacing: 0.05em;\n\t\tcolor: var(--label-color, #6b7280);\n\t\tmargin-bottom: 8px;\n\t\ttext-align: left;\n\t}\n\n\ttextarea {\n\t\tresize: none;\n\t}\n\n\t/* Items Table */\n\t.items-table {\n\t\tmargin-bottom: 30px;\n\t}\n\n\t.table-header {\n\t\tdisplay: grid;\n\t\tgrid-template-columns: 3fr 1fr 1.5fr 1fr 40px;\n\t\tgap: 16px;\n\t\tpadding: 8px 16px;\n\t\tbackground-color: var(--table-header-background, #f9fafb);\n\t\tborder-radius: 4px;\n\t\tfont-weight: 600;\n\t\tfont-size: 0.875rem;\n\t\tcolor: var(--label-color, #4b5563);\n\t}\n\n\t.table-row {\n\t\tdisplay: grid;\n\t\tgrid-template-columns: 3fr 1fr 1.5fr 1fr 40px;\n\t\tgap: 16px;\n\t\tpadding: 8px 16px;\n\t\talign-items: center;\n\t\tborder-bottom: 1px solid var(--border-color, #f3f4f6);\n\t}\n\n\t.input-prefix {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t}\n\n\t.input-prefix span {\n\t\tcolor: var(--label-color, #6b7280);\n\t\tmargin-right: 4px;\n\t}\n\n\t.col-total {\n\t\ttext-align: right;\n\t\tfont-weight: 500;\n\t}\n\n\t/* Buttons */\n\tbutton {\n\t\tcursor: pointer;\n\t\tborder: none;\n\t\tborder-radius: 4px;\n\t\ttransition: all 0.2s;\n\t}\n\n\t.btn-primary {\n\t\tbackground-color: var(--button-secondary-background, #eff6ff);\n\t\tcolor: var(--accent-color, #3b82f6);\n\t\tpadding: 8px 16px;\n\t\tfont-weight: 500;\n\t}\n\n\t.btn-primary:hover {\n\t\tbackground-color: var(--button-secondary-hover, #dbeafe);\n\t}\n\n\t.icon-btn.delete {\n\t\tbackground: transparent;\n\t\tcolor: var(--danger-color, #ef4444);\n\t\tfont-size: 1.25rem;\n\t\twidth: 24px;\n\t\theight: 24px;\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tjustify-content: center;\n\t\tpadding: 0;\n\t}\n\n\t.icon-btn.delete:hover {\n\t\tbackground-color: var(--danger-background, #fee2e2);\n\t}\n\n\t.btn-print {\n\t\tbackground-color: var(--button-primary-background, #111827);\n\t\tcolor: var(--button-primary-text, #ffffff);\n\t\tpadding: 12px 24px;\n\t\tfont-weight: 600;\n\t\tfont-size: 1rem;\n\t\tbox-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);\n\t}\n\n\t.btn-print:hover {\n\t\tbackground-color: var(--button-primary-hover, #1f2937);\n\t\ttransform: translateY(-1px);\n\t\tbox-shadow: 0 6px 8px -1px rgba(0, 0, 0, 0.1);\n\t}\n\n\t/* Invoice Bottom (Notes + Summary) */\n\t.invoice-bottom {\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: flex-start;\n\t\tmargin-top: 40px;\n\t\tgap: 40px;\n\t}\n\n\t.notes-section {\n\t\tflex: 1;\n\t}\n\n\t.notes-section h3 {\n\t\tfont-size: 0.875rem;\n\t\ttext-transform: uppercase;\n\t\tletter-spacing: 0.05em;\n\t\tcolor: var(--label-color, #6b7280);\n\t\tmargin-bottom: 8px;\n\t\tmargin-top: 0;\n\t\ttext-align: left;\n\t}\n\n\t/* Summary Section */\n\t.summary-section {\n\t\twidth: 300px;\n\t}\n\n\t.summary-row {\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: center;\n\t\tpadding: 8px 0;\n\t\tborder-bottom: 1px solid var(--border-color, #f3f4f6);\n\t}\n\n\t.summary-row.total {\n\t\tborder-bottom: none;\n\t\tfont-weight: 700;\n\t\tfont-size: 1.25rem;\n\t\tpadding-top: 16px;\n\t\tmargin-top: 8px;\n\t\tborder-top: 2px solid var(--border-color, #e5e7eb);\n\t}\n\n\t.tax-input {\n\t\twidth: 60px;\n\t\ttext-align: right;\n\t}\n\n\t.footer {\n\t\tmargin-top: 60px;\n\t\ttext-align: center;\n\t}\n\n\t/* Print Styles */\n\t@media print {\n\t\t:global(body) {\n\t\t\tbackground-color: white;\n\t\t\tpadding: 0;\n\t\t\t-webkit-print-color-adjust: exact;\n\t\t}\n\n\t\t.invoice-container {\n\t\t\tbox-shadow: none;\n\t\t\tpadding: 0;\n\t\t\tmargin: 0;\n\t\t\tmax-width: 100%;\n\t\t}\n\n\t\t.no-print {\n\t\t\tdisplay: none !important;\n\t\t}\n\n\t\tinput,\n\t\ttextarea {\n\t\t\tborder: none !important;\n\t\t\tbackground: transparent !important;\n\t\t\tpadding: 0 !important;\n\t\t}\n\n\t\tinput::placeholder,\n\t\ttextarea::placeholder {\n\t\t\tcolor: transparent;\n\t\t}\n\n\t\t.summary-section {\n\t\t\tpage-break-inside: avoid;\n\t\t}\n\t}\n</style>",
