{
	"id": "bookmarks",
	"name": "Bookmark Manager",
	"description": "Save and organize your favorite links",
	"preview": "lucide:bookmark",
	"tags": [
		"productivity",
		"intermediate",
		"data"
	],
	"kits": [
		"collections",
		"feeds"
	],
	"frontend_code": "<script>\n\timport Icon from '@iconify/svelte'\n\timport { flip } from 'svelte/animate'\n\timport { proxy } from '$tinykit'\n\timport content from '$content'\n\timport data from '$data'\n\n\tlet bookmarks = $state([])\n\tlet loading = $state(true)\n\tlet search = $state('')\n\tlet filter_tag = $state('')\n\tlet show_dialog = $state(false)\n\tlet fetching_meta = $state(false)\n\tlet view_mode = $state(localStorage.getItem('bookmarks_view_mode') || 'cards')\n\t\n\t// Form state\n\tlet new_url = $state('')\n\tlet new_title = $state('')\n\tlet new_description = $state('')\n\tlet new_tags = $state('')\n\tlet new_favicon = $state('')\n\tlet new_og_image = $state('')\n\n\t// Drag state\n\tlet dragging_id = $state(null)\n\tlet drag_over_id = $state(null)\n\n\t// Dialog ref\n\tlet dialog_el = $state(null)\n\n\tfunction set_view_mode(mode) {\n\t\tview_mode = mode\n\t\tlocalStorage.setItem('bookmarks_view_mode', mode)\n\t}\n\n\tfunction open_dialog() {\n\t\tshow_dialog = true\n\t\tdialog_el?.showModal()\n\t}\n\n\tfunction close_dialog() {\n\t\tshow_dialog = false\n\t\tdialog_el?.close()\n\t\treset_form()\n\t}\n\n\tfunction reset_form() {\n\t\tnew_url = ''\n\t\tnew_title = ''\n\t\tnew_description = ''\n\t\tnew_tags = ''\n\t\tnew_favicon = ''\n\t\tnew_og_image = ''\n\t}\n\n\tdata.bookmarks.subscribe(items => {\n\t\tbookmarks = items.sort((a, b) => (a.order ?? 999) - (b.order ?? 999))\n\t\tloading = false\n\t})\n\n\tlet all_tags = $derived.by(() => {\n\t\tconst tags = new Set()\n\t\tbookmarks.forEach(b => {\n\t\t\tif (b.tags) {\n\t\t\t\tb.tags.split(',').forEach(t => tags.add(t.trim()))\n\t\t\t}\n\t\t})\n\t\treturn Array.from(tags).sort()\n\t})\n\n\tlet tag_counts = $derived.by(() => {\n\t\tconst counts = {}\n\t\tbookmarks.forEach(b => {\n\t\t\tif (b.tags) {\n\t\t\t\tb.tags.split(',').forEach(t => {\n\t\t\t\t\tconst tag = t.trim()\n\t\t\t\t\tcounts[tag] = (counts[tag] || 0) + 1\n\t\t\t\t})\n\t\t\t}\n\t\t})\n\t\treturn counts\n\t})\n\n\tlet filtered_bookmarks = $derived.by(() => {\n\t\treturn bookmarks.filter(b => {\n\t\t\tconst matches_search = !search || \n\t\t\t\tb.title?.toLowerCase().includes(search.toLowerCase()) ||\n\t\t\t\tb.url?.toLowerCase().includes(search.toLowerCase()) ||\n\t\t\t\tb.description?.toLowerCase().includes(search.toLowerCase())\n\t\t\t\n\t\t\tconst matches_tag = !filter_tag || \n\t\t\t\t(b.tags && b.tags.split(',').map(t => t.trim()).includes(filter_tag))\n\t\t\t\n\t\t\treturn matches_search && matches_tag\n\t\t})\n\t})\n\n\tfunction get_domain(url) {\n\t\ttry {\n\t\t\treturn new URL(url).hostname.replace('www.', '')\n\t\t} catch {\n\t\t\treturn url\n\t\t}\n\t}\n\n\tfunction get_proxied_image(url) {\n\t\tif (!url) return null\n\t\treturn proxy.url(url)\n\t}\n\n\tasync function add_bookmark() {\n\t\tif (!new_url.trim()) return\n\t\t\n\t\tawait data.bookmarks.create({\n\t\t\tid: crypto.randomUUID(),\n\t\t\turl: new_url.trim(),\n\t\t\ttitle: new_title.trim() || get_domain(new_url),\n\t\t\tdescription: new_description.trim(),\n\t\t\ttags: new_tags.trim(),\n\t\t\tfavicon: new_favicon || new URL(new_url.trim()).origin + '/favicon.ico',\n\t\t\tog_image: new_og_image,\n\t\t\torder: bookmarks.length,\n\t\t\tcreated_at: new Date().toISOString()\n\t\t})\n\t\t\n\t\tclose_dialog()\n\t}\n\n\tasync function delete_bookmark(id) {\n\t\tawait data.bookmarks.delete(id)\n\t}\n\n\tfunction handle_keydown(e) {\n\t\tif (e.key === 'Enter' && e.metaKey) add_bookmark()\n\t}\n\n\tasync function handle_url_paste(e) {\n\t\tconst pasted = e.clipboardData?.getData('text') || ''\n\t\tif (!pasted.match(/^https?:\\/\\//)) return\n\t\tif (fetching_meta) return\n\t\t\n\t\tsetTimeout(async () => {\n\t\t\ttry {\n\t\t\t\tfetching_meta = true\n\t\t\t\tconst html = await proxy.text(pasted)\n\t\t\t\tconst doc = new DOMParser().parseFromString(html, 'text/html')\n\t\t\t\t\n\t\t\t\tconst title = doc.querySelector('meta[property=\"og:title\"]')?.content || doc.querySelector('title')?.textContent\n\t\t\t\tconst desc = doc.querySelector('meta[property=\"og:description\"]')?.content || doc.querySelector('meta[name=\"description\"]')?.content\n\t\t\t\tconst og_image = doc.querySelector('meta[property=\"og:image\"]')?.content\n\t\t\t\tconst icon = doc.querySelector('link[rel=\"icon\"]')?.href || doc.querySelector('link[rel=\"shortcut icon\"]')?.href || doc.querySelector('link[rel*=\"icon\"]')?.href\n\t\t\t\t\n\t\t\t\tif (title && !new_title) new_title = title.trim()\n\t\t\t\tif (desc && !new_description) new_description = desc.trim()\n\t\t\t\tif (og_image) {\n\t\t\t\t\tconst base = new URL(pasted)\n\t\t\t\t\tnew_og_image = og_image.startsWith('http') ? og_image : new URL(og_image, base.origin).href\n\t\t\t\t}\n\t\t\t\tif (icon) {\n\t\t\t\t\tconst base = new URL(pasted)\n\t\t\t\t\tnew_favicon = icon.startsWith('http') ? icon : new URL(icon, base.origin).href\n\t\t\t\t} else {\n\t\t\t\t\tnew_favicon = new URL(pasted).origin + '/favicon.ico'\n\t\t\t\t}\n\t\t\t} catch (err) {\n\t\t\t\tconsole.warn('Failed to fetch metadata:', err)\n\t\t\t} finally {\n\t\t\t\tfetching_meta = false\n\t\t\t}\n\t\t}, 100)\n\t}\n\n\tfunction handle_drag_start(e, id) {\n\t\tdragging_id = id\n\t\te.dataTransfer.effectAllowed = 'move'\n\t}\n\n\tfunction handle_drag_over(e, id) {\n\t\te.preventDefault()\n\t\tif (id !== dragging_id) drag_over_id = id\n\t}\n\n\tfunction handle_drag_leave() {\n\t\tdrag_over_id = null\n\t}\n\n\tasync function handle_drop(e, target_id) {\n\t\te.preventDefault()\n\t\tif (!dragging_id || dragging_id === target_id) return\n\t\t\n\t\tconst from_idx = bookmarks.findIndex(b => b.id === dragging_id)\n\t\tconst to_idx = bookmarks.findIndex(b => b.id === target_id)\n\t\tif (from_idx === -1 || to_idx === -1) return\n\t\t\n\t\tconst reordered = [...bookmarks]\n\t\tconst [moved] = reordered.splice(from_idx, 1)\n\t\treordered.splice(to_idx, 0, moved)\n\t\t\n\t\tfor (let i = 0; i < reordered.length; i++) {\n\t\t\tif (reordered[i].order !== i) {\n\t\t\t\tawait data.bookmarks.update(reordered[i].id, { order: i })\n\t\t\t}\n\t\t}\n\t\t\n\t\tdragging_id = null\n\t\tdrag_over_id = null\n\t}\n\n\tfunction handle_drag_end() {\n\t\tdragging_id = null\n\t\tdrag_over_id = null\n\t}\n</script>\n\n<div class=\"page\">\n\t<header class=\"header\">\n\t\t<h1>{content.app_title}</h1>\n\t\t<div class=\"header-center\">\n\t\t\t<div class=\"search-box\">\n\t\t\t\t<Icon icon=\"lucide:search\" width={18} />\n\t\t\t\t<input\n\t\t\t\t\ttype=\"text\"\n\t\t\t\t\tbind:value={search}\n\t\t\t\t\tplaceholder={content.search_placeholder}\n\t\t\t\t/>\n\t\t\t</div>\n\t\t</div>\n\t\t<div class=\"header-right\">\n\t\t\t<div class=\"view-toggle\">\n\t\t\t\t<button \n\t\t\t\t\tclass=\"view-btn\" \n\t\t\t\t\tclass:active={view_mode === 'list'}\n\t\t\t\t\tonclick={() => set_view_mode('list')}\n\t\t\t\t\ttitle=\"List view\"\n\t\t\t\t>\n\t\t\t\t\t<Icon icon=\"lucide:list\" width={18} />\n\t\t\t\t</button>\n\t\t\t\t<button \n\t\t\t\t\tclass=\"view-btn\" \n\t\t\t\t\tclass:active={view_mode === 'cards'}\n\t\t\t\t\tonclick={() => set_view_mode('cards')}\n\t\t\t\t\ttitle=\"Card view\"\n\t\t\t\t>\n\t\t\t\t\t<Icon icon=\"lucide:layout-grid\" width={18} />\n\t\t\t\t</button>\n\t\t\t</div>\n\t\t\t<button class=\"add-btn\" onclick={open_dialog}>\n\t\t\t\t<Icon icon={'lucide:plus'} width={20} />\n\t\t\t\t{content.add_button}\n\t\t\t</button>\n\t\t</div>\n\t</header>\n\n\t<dialog bind:this={dialog_el} class=\"dialog\" onclose={close_dialog}>\n\t\t<div class=\"dialog-header\">\n\t\t\t<h2>Add Bookmark</h2>\n\t\t\t<button class=\"dialog-close\" onclick={close_dialog}>\n\t\t\t\t<Icon icon=\"lucide:x\" width={20} />\n\t\t\t</button>\n\t\t</div>\n\t\t<div class=\"form-container\">\n\t\t\t<div class=\"form\" onkeydown={handle_keydown}>\n\t\t\t\t<input\n\t\t\t\t\ttype=\"url\"\n\t\t\t\t\tbind:value={new_url}\n\t\t\t\t\tplaceholder={fetching_meta ? 'Fetching page info...' : content.url_placeholder}\n\t\t\t\t\tonpaste={handle_url_paste}\n\t\t\t\t\tautofocus\n\t\t\t\t/>\n\t\t\t\t<input\n\t\t\t\t\ttype=\"text\"\n\t\t\t\t\tbind:value={new_title}\n\t\t\t\t\tplaceholder={content.title_placeholder}\n\t\t\t\t/>\n\t\t\t\t<input\n\t\t\t\t\ttype=\"text\"\n\t\t\t\t\tbind:value={new_description}\n\t\t\t\t\tplaceholder={content.description_placeholder}\n\t\t\t\t/>\n\t\t\t\t<input\n\t\t\t\t\ttype=\"text\"\n\t\t\t\t\tbind:value={new_tags}\n\t\t\t\t\tplaceholder={content.tags_placeholder}\n\t\t\t\t/>\n\t\t\t\t{#if new_og_image}\n\t\t\t\t\t<div class=\"preview-image\">\n\t\t\t\t\t\t<img src={get_proxied_image(new_og_image)} alt=\"Preview\" />\n\t\t\t\t\t</div>\n\t\t\t\t{/if}\n\t\t\t\t<button class=\"submit-btn\" onclick={add_bookmark}>{content.save_button}</button>\n\t\t\t</div>\n\t</dialog>\n\n\t<div class=\"layout\">\n\t\t<aside class=\"sidebar\">\n\t\t\t<div class=\"sidebar-section\">\n\t\t\t\t<span class=\"sidebar-label\">Filter by tag</span>\n\t\t\t\t<button \n\t\t\t\t\tclass=\"sidebar-tag\" \n\t\t\t\t\tclass:active={!filter_tag}\n\t\t\t\t\tonclick={() => filter_tag = ''}\n\t\t\t\t>\n\t\t\t\t\tAll Bookmarks\n\t\t\t\t\t<span class=\"tag-count\">{bookmarks.length}</span>\n\t\t\t\t</button>\n\t\t\t\t{#each all_tags as tag (tag)}\n\t\t\t\t\t<button \n\t\t\t\t\t\tclass=\"sidebar-tag\" \n\t\t\t\t\t\tclass:active={filter_tag === tag}\n\t\t\t\t\t\tonclick={() => filter_tag = tag}\n\t\t\t\t\t>\n\t\t\t\t\t\t#{tag}\n\t\t\t\t\t\t<span class=\"tag-count\">{tag_counts[tag] || 0}</span>\n\t\t\t\t\t</button>\n\t\t\t\t{/each}\n\t\t\t</div>\n\t\t</aside>\n\n\t\t<main class=\"main-content\">\n\t\t\t{#if loading}\n\t\t\t\t<div class=\"loading\">\n\t\t\t\t\t<Icon icon=\"lucide:loader-2\" width={24} class=\"spin\" />\n\t\t\t\t</div>\n\t\t\t{:else if filtered_bookmarks.length === 0}\n\t\t\t\t<div class=\"empty\">\n\t\t\t\t\t<Icon icon=\"lucide:bookmark-plus\" width={48} />\n\t\t\t\t\t<p>{search || filter_tag ? content.no_results : content.empty_state}</p>\n\t\t\t\t</div>\n\t\t\t{:else if view_mode === 'cards'}\n\t\t\t\t<div class=\"bookmarks cards-view\">\n\t\t\t\t\t{#each filtered_bookmarks as bookmark (bookmark.id)}\n\t\t\t\t\t\t<div \n\t\t\t\t\t\t\tclass=\"card\"\n\t\t\t\t\t\t\tclass:dragging={dragging_id === bookmark.id}\n\t\t\t\t\t\t\tclass:drag-over={drag_over_id === bookmark.id}\n\t\t\t\t\t\t\tdraggable=\"true\"\n\t\t\t\t\t\t\tondragstart={(e) => handle_drag_start(e, bookmark.id)}\n\t\t\t\t\t\t\tondragover={(e) => handle_drag_over(e, bookmark.id)}\n\t\t\t\t\t\t\tondragleave={handle_drag_leave}\n\t\t\t\t\t\t\tondrop={(e) => handle_drop(e, bookmark.id)}\n\t\t\t\t\t\t\tondragend={handle_drag_end}\n\t\t\t\t\t\t\tanimate:flip={{ duration: 200 }}\n\t\t\t\t\t\t>\n\t\t\t\t\t\t\t{#if bookmark.og_image}\n\t\t\t\t\t\t\t\t<div class=\"card-image\">\n\t\t\t\t\t\t\t\t\t<img src={get_proxied_image(bookmark.og_image)} alt=\"\" />\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t<div class=\"card-body\">\n\t\t\t\t\t\t\t\t<div class=\"card-header\">\n\t\t\t\t\t\t\t\t\t<span class=\"card-title\">{bookmark.title}</span>\n\t\t\t\t\t\t\t\t\t<button \n\t\t\t\t\t\t\t\t\t\tclass=\"delete-btn\" \n\t\t\t\t\t\t\t\t\t\tonclick={(e) => { e.preventDefault(); e.stopPropagation(); delete_bookmark(bookmark.id) }}\n\t\t\t\t\t\t\t\t\t>\n\t\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:x\" width={16} />\n\t\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t<a href={bookmark.url} target=\"_blank\" rel=\"noopener\" class=\"card-url\">{bookmark.url}</a>\n\t\t\t\t\t\t\t\t{#if bookmark.description}\n\t\t\t\t\t\t\t\t\t<p class=\"card-desc\">{bookmark.description}</p>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t{#if bookmark.tags}\n\t\t\t\t\t\t\t\t\t<div class=\"card-tags\">\n\t\t\t\t\t\t\t\t\t\t{#each bookmark.tags.split(',') as tag (tag)}\n\t\t\t\t\t\t\t\t\t\t\t<span class=\"mini-tag\">#{tag.trim()}</span>\n\t\t\t\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t<a href={bookmark.url} target=\"_blank\" rel=\"noopener\" class=\"visit-btn\">\n\t\t\t\t\t\t\t\t\tVisit Site\n\t\t\t\t\t\t\t\t</a>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t{/each}\n\t\t\t\t</div>\n\t\t\t{:else}\n\t\t\t\t<div class=\"bookmarks list-view\">\n\t\t\t\t\t{#each filtered_bookmarks as bookmark (bookmark.id)}\n\t\t\t\t\t\t<a \n\t\t\t\t\t\t\thref={bookmark.url} \n\t\t\t\t\t\t\ttarget=\"_blank\" \n\t\t\t\t\t\t\trel=\"noopener\" \n\t\t\t\t\t\t\tclass=\"bookmark-row\"\n\t\t\t\t\t\t\tclass:dragging={dragging_id === bookmark.id}\n\t\t\t\t\t\t\tclass:drag-over={drag_over_id === bookmark.id}\n\t\t\t\t\t\t\tdraggable=\"true\"\n\t\t\t\t\t\t\tondragstart={(e) => handle_drag_start(e, bookmark.id)}\n\t\t\t\t\t\t\tondragover={(e) => handle_drag_over(e, bookmark.id)}\n\t\t\t\t\t\t\tondragleave={handle_drag_leave}\n\t\t\t\t\t\t\tondrop={(e) => handle_drop(e, bookmark.id)}\n\t\t\t\t\t\t\tondragend={handle_drag_end}\n\t\t\t\t\t\t\tanimate:flip={{ duration: 200 }}\n\t\t\t\t\t\t>\n\t\t\t\t\t\t\t<div class=\"drag-handle\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:grip-vertical\" width={16} />\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t<div class=\"favicon\">\n\t\t\t\t\t\t\t\t{#if bookmark.favicon}\n\t\t\t\t\t\t\t\t\t<img src={bookmark.favicon} alt=\"\" onerror={(e) => e.target.style.display = 'none'} />\n\t\t\t\t\t\t\t\t{:else}\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:link\" width={16} />\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t<div class=\"bookmark-content\">\n\t\t\t\t\t\t\t\t<span class=\"bookmark-title\">{bookmark.title}</span>\n\t\t\t\t\t\t\t\t<span class=\"bookmark-url\">{get_domain(bookmark.url)}</span>\n\t\t\t\t\t\t\t\t{#if bookmark.description}\n\t\t\t\t\t\t\t\t\t<span class=\"bookmark-desc\">{bookmark.description}</span>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t{#if bookmark.tags}\n\t\t\t\t\t\t\t\t\t<div class=\"bookmark-tags\">\n\t\t\t\t\t\t\t\t\t\t{#each bookmark.tags.split(',') as tag (tag)}\n\t\t\t\t\t\t\t\t\t\t\t<span class=\"mini-tag\">#{tag.trim()}</span>\n\t\t\t\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t<button \n\t\t\t\t\t\t\t\tclass=\"delete-btn\" \n\t\t\t\t\t\t\t\tonclick={(e) => { e.preventDefaul