{
	"id": "landing-page",
	"name": "Landing Page",
	"description": "SaaS landing page with waitlist, features, testimonials & pricing",
	"preview": "lucide:rocket",
	"tags": ["marketing", "saas", "waitlist"],
	"kits": ["launch", "personal-site"],
	"frontend_code": "<script>\n\timport { fade, fly, slide } from 'svelte/transition'\n\timport Icon from '@iconify/svelte'\n\timport content from '$content'\n\timport data from '$data'\n\n\tlet email = $state('')\n\tlet loading = $state(false)\n\tlet success = $state(false)\n\tlet error = $state('')\n\tlet is_menu_open = $state(false)\n\n\tlet leads = $state([])\n\tdata.leads.subscribe(items => leads = items)\n\n\tasync function join_waitlist(e) {\n\t\te.preventDefault()\n\t\tif (!email) return\n\t\t\n\t\tloading = true\n\t\terror = ''\n\t\t\n\t\ttry {\n\t\t\tif (leads.some(l => l.email === email)) {\n\t\t\t\tthrow new Error('You are already on the list!')\n\t\t\t}\n\n\t\t\tawait data.leads.create({\n\t\t\t\temail,\n\t\t\t\tcreated_at: new Date().toISOString()\n\t\t\t})\n\t\t\t\n\t\t\tsuccess = true\n\t\t\temail = ''\n\t\t\tsetTimeout(() => success = false, 5000)\n\t\t} catch (err) {\n\t\t\terror = err.message || 'Something went wrong. Please try again.'\n\t\t} finally {\n\t\t\tloading = false\n\t\t}\n\t}\n</script>\n\n<div class=\"app\">\n\t<!-- Navigation -->\n\t<nav class=\"navbar\">\n\t\t<div class=\"container nav-container\">\n\t\t\t<div class=\"logo\">\n\t\t\t\t<Icon icon={content.logo_icon} width={24} />\n\t\t\t\t<span>{content.app_name}</span>\n\t\t\t</div>\n\t\t\t\n\t\t\t<div class=\"desktop-nav\">\n\t\t\t\t<a href=\"#features\">{content.nav_features}</a>\n\t\t\t\t<a href=\"#testimonials\">{content.nav_testimonials}</a>\n\t\t\t\t<a href=\"#pricing\">{content.nav_pricing}</a>\n\t\t\t\t<button class=\"btn btn-sm btn-primary\" onclick={() => document.getElementById('hero-form').focus()}>\n\t\t\t\t\t{content.nav_cta}\n\t\t\t\t</button>\n\t\t\t</div>\n\n\t\t\t<button class=\"mobile-toggle\" onclick={() => is_menu_open = !is_menu_open}>\n\t\t\t\t<Icon icon={is_menu_open ? \"lucide:x\" : \"lucide:menu\"} width={24} />\n\t\t\t</button>\n\t\t</div>\n\n\t\t{#if is_menu_open}\n\t\t\t<div class=\"mobile-menu\" transition:slide>\n\t\t\t\t<a href=\"#features\" onclick={() => is_menu_open = false}>{content.nav_features}</a>\n\t\t\t\t<a href=\"#testimonials\" onclick={() => is_menu_open = false}>{content.nav_testimonials}</a>\n\t\t\t\t<a href=\"#pricing\" onclick={() => is_menu_open = false}>{content.nav_pricing}</a>\n\t\t\t</div>\n\t\t{/if}\n\t</nav>\n\n\t<!-- Hero Section -->\n\t<section class=\"hero\">\n\t\t<div class=\"container hero-content\">\n\t\t\t<div class=\"hero-text\">\n\t\t\t\t<div class=\"badge\" in:fly={{ y: 20, duration: 800 }}>\n\t\t\t\t\t{content.hero_badge}\n\t\t\t\t</div>\n\t\t\t\t<h1 in:fly={{ y: 20, duration: 800, delay: 100 }}>{content.hero_headline}</h1>\n\t\t\t\t<p in:fly={{ y: 20, duration: 800, delay: 200 }}>{content.hero_subhead}</p>\n\t\t\t\t\n\t\t\t\t<form class=\"waitlist-form\" onsubmit={join_waitlist} in:fly={{ y: 20, duration: 800, delay: 300 }}>\n\t\t\t\t\t<div class=\"input-group\">\n\t\t\t\t\t\t<input \n\t\t\t\t\t\t\tid=\"hero-form\"\n\t\t\t\t\t\t\ttype=\"email\" \n\t\t\t\t\t\t\tplaceholder={content.email_placeholder} \n\t\t\t\t\t\t\tbind:value={email}\n\t\t\t\t\t\t\trequired\n\t\t\t\t\t\t/>\n\t\t\t\t\t\t<button type=\"submit\" class=\"btn btn-primary\" disabled={loading}>\n\t\t\t\t\t\t\t{#if loading}\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:loader-2\" class=\"spin\" />\n\t\t\t\t\t\t\t{:else}\n\t\t\t\t\t\t\t\t{content.hero_cta}\n\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t</button>\n\t\t\t\t\t</div>\n\t\t\t\t\t{#if success}\n\t\t\t\t\t\t<div class=\"message success\" transition:fade>\n\t\t\t\t\t\t\t<Icon icon=\"lucide:check-circle\" width={16} />\n\t\t\t\t\t\t\t{content.success_message}\n\t\t\t\t\t\t</div>\n\t\t\t\t\t{/if}\n\t\t\t\t\t{#if error}\n\t\t\t\t\t\t<div class=\"message error\" transition:fade>\n\t\t\t\t\t\t\t<Icon icon=\"lucide:alert-circle\" width={16} />\n\t\t\t\t\t\t\t{error}\n\t\t\t\t\t\t</div>\n\t\t\t\t\t{/if}\n\t\t\t\t</form>\n\n\t\t\t\t<div class=\"social-proof\" in:fly={{ y: 20, duration: 800, delay: 400 }}>\n\t\t\t\t\t<div class=\"avatars\">\n\t\t\t\t\t\t<div class=\"avatar\" style=\"background-image: url('{content.avatar_1}')\"></div>\n\t\t\t\t\t\t<div class=\"avatar\" style=\"background-image: url('{content.avatar_2}')\"></div>\n\t\t\t\t\t\t<div class=\"avatar\" style=\"background-image: url('{content.avatar_3}')\"></div>\n\t\t\t\t\t\t<div class=\"avatar\" style=\"background-image: url('{content.avatar_4}')\"></div>\n\t\t\t\t\t</div>\n\t\t\t\t\t<span>{content.social_proof_text}</span>\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t\t\n\t\t\t<div class=\"hero-image\" in:fly={{ y: 40, duration: 1000, delay: 200 }}>\n\t\t\t\t<div class=\"browser-mockup\">\n\t\t\t\t\t<div class=\"browser-header\">\n\t\t\t\t\t\t<div class=\"dots\">\n\t\t\t\t\t\t\t<span></span><span></span><span></span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"browser-content\">\n\t\t\t\t\t\t<div class=\"placeholder-ui\">\n\t\t\t\t\t\t\t<div class=\"sidebar\"></div>\n\t\t\t\t\t\t\t<div class=\"main\">\n\t\t\t\t\t\t\t\t<div class=\"header-bar\"></div>\n\t\t\t\t\t\t\t\t<div class=\"grid\">\n\t\t\t\t\t\t\t\t\t<div class=\"card\"></div>\n\t\t\t\t\t\t\t\t\t<div class=\"card\"></div>\n\t\t\t\t\t\t\t\t\t<div class=\"card\"></div>\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</div>\n\t</section>\n\n\t<!-- Features Section -->\n\t<section id=\"features\" class=\"features\">\n\t\t<div class=\"container\">\n\t\t\t<div class=\"section-header\">\n\t\t\t\t<h2>{content.features_title}</h2>\n\t\t\t\t<p>{content.features_subtitle}</p>\n\t\t\t</div>\n\t\t\t\n\t\t\t<div class=\"features-grid\">\n\t\t\t\t{#each content.features as feature}\n\t\t\t\t\t<div class=\"feature-card\">\n\t\t\t\t\t\t<div class=\"icon-box\">\n\t\t\t\t\t\t\t<Icon icon={feature.icon} width={24} />\n\t\t\t\t\t\t</div>\n\t\t\t\t\t\t<h3>{feature.title}</h3>\n\t\t\t\t\t\t<p>{feature.desc}</p>\n\t\t\t\t\t</div>\n\t\t\t\t{/each}\n\t\t\t</div>\n\t\t</div>\n\t</section>\n\n\t<!-- Testimonials -->\n\t<section id=\"testimonials\" class=\"testimonials\">\n\t\t<div class=\"container\">\n\t\t\t<div class=\"section-header\">\n\t\t\t\t<h2>{content.testimonials_title}</h2>\n\t\t\t</div>\n\t\t\t<div class=\"testimonials-grid\">\n\t\t\t\t<div class=\"testimonial-card\">\n\t\t\t\t\t<p>\"{content.testimonial_1_text}\"</p>\n\t\t\t\t\t<div class=\"author\">\n\t\t\t\t\t\t<img src={content.testimonial_1_image} alt={content.testimonial_1_author} />\n\t\t\t\t\t\t<div>\n\t\t\t\t\t\t\t<strong>{content.testimonial_1_author}</strong>\n\t\t\t\t\t\t\t<span>{content.testimonial_1_role}</span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"testimonial-card\">\n\t\t\t\t\t<p>\"{content.testimonial_2_text}\"</p>\n\t\t\t\t\t<div class=\"author\">\n\t\t\t\t\t\t<img src={content.testimonial_2_image} alt={content.testimonial_2_author} />\n\t\t\t\t\t\t<div>\n\t\t\t\t\t\t\t<strong>{content.testimonial_2_author}</strong>\n\t\t\t\t\t\t\t<span>{content.testimonial_2_role}</span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</div>\n\t</section>\n\n\t<!-- Pricing -->\n\t<section id=\"pricing\" class=\"pricing\">\n\t\t<div class=\"container\">\n\t\t\t<div class=\"section-header\">\n\t\t\t\t<h2>{content.pricing_title}</h2>\n\t\t\t\t<p>{content.pricing_subtitle}</p>\n\t\t\t</div>\n\t\t\t\n\t\t\t<div class=\"pricing-grid\">\n\t\t\t\t<div class=\"pricing-card\">\n\t\t\t\t\t<div class=\"plan-name\">{content.plan_1_name}</div>\n\t\t\t\t\t<div class=\"price\">{content.plan_1_price}<span>{content.price_suffix}</span></div>\n\t\t\t\t\t<ul class=\"features-list\">\n\t\t\t\t\t\t{#each content.plan_1_features as feature}\n\t\t\t\t\t\t\t<li><Icon icon=\"lucide:check\" width={16} /> {feature}</li>\n\t\t\t\t\t\t{/each}\n\t\t\t\t\t</ul>\n\t\t\t\t\t<button class=\"btn btn-outline\">{content.plan_1_cta}</button>\n\t\t\t\t</div>\n\t\t\t\t\n\t\t\t\t<div class=\"pricing-card featured\">\n\t\t\t\t\t<div class=\"featured-badge\">{content.featured_badge}</div>\n\t\t\t\t\t<div class=\"plan-name\">{content.plan_2_name}</div>\n\t\t\t\t\t<div class=\"price\">{content.plan_2_price}<span>{content.price_suffix}</span></div>\n\t\t\t\t\t<ul class=\"features-list\">\n\t\t\t\t\t\t{#each content.plan_2_features as feature}\n\t\t\t\t\t\t\t<li><Icon icon=\"lucide:check\" width={16} /> {feature}</li>\n\t\t\t\t\t\t{/each}\n\t\t\t\t\t</ul>\n\t\t\t\t\t<button class=\"btn btn-primary\">{content.plan_2_cta}</button>\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</div>\n\t</section>\n\n\t<!-- Footer -->\n\t<footer class=\"footer\">\n\t\t<div class=\"container\">\n\t\t\t<div class=\"footer-content\">\n\t\t\t\t<div class=\"footer-brand\">\n\t\t\t\t\t<div class=\"footer-logo\">\n\t\t\t\t\t\t<Icon icon={content.logo_icon} width={24} />\n\t\t\t\t\t\t<span>{content.app_name}</span>\n\t\t\t\t\t</div>\n\t\t\t\t\t<p>{content.footer_desc}</p>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"footer-links\">\n\t\t\t\t\t{#each content.footer_sections as section}\n\t\t\t\t\t\t<div class=\"link-group\">\n\t\t\t\t\t\t\t<h4>{section.title}</h4>\n\t\t\t\t\t\t\t{#each section.links as link}\n\t\t\t\t\t\t\t\t<a href={link.href}>{link.text}</a>\n\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t</div>\n\t\t\t\t\t{/each}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t\t<div class=\"footer-bottom\">\n\t\t\t\t<p>&copy; {new Date().getFullYear()} {content.app_name}. {content.copyright_text}</p>\n\t\t\t</div>\n\t\t</div>\n\t</footer>\n</div>\n\n<style>\n\t* {\n\t\tbox-sizing: border-box;\n\t\tmargin: 0;\n\t\tpadding: 0;\n\t}\n\n\t.app {\n\t\tfont-family: var(--font-main, 'Inter', sans-serif);\n\t\tbackground-color: var(--bg-body, #ffffff);\n\t\tcolor: var(--text-main, #0f172a);\n\t\tline-height: 1.6;\n\t\toverflow-x: hidden;\n\t}\n\n\th1, h2, h3, h4 {\n\t\tfont-family: var(--font-heading, 'Inter', sans-serif);\n\t\tfont-weight: 700;\n\t\tline-height: 1.2;\n\t\tcolor: var(--text-main, #0f172a);\n\t}\n\n\ta {\n\t\ttext-decoration: none;\n\t\tcolor: inherit;\n\t\ttransition: color 0.2s;\n\t}\n\n\tbutton {\n\t\tcursor: pointer;\n\t\tfont-family: inherit;\n\t\tborder: none;\n\t\tbackground: none;\n\t}\n\n\t.container {\n\t\tmax-width: 1200px;\n\t\tmargin: 0 auto;\n\t\tpadding: 0 1.5rem;\n\t}\n\n\t/* Buttons */\n\t.btn {\n\t\tdisplay: inline-flex;\n\t\talign-items: center;\n\t\tjustify-content: center;\n\t\tpadding: 0.75rem 1.5rem;\n\t\tborder-radius: var(--radius-md, 0.5rem);\n\t\tfont-weight: 600;\n\t\ttransition: all 0.2s;\n\t\tgap: 0.5rem;\n\t}\n\n\t.btn-sm {\n\t\tpadding: 0.5rem 1rem;\n\t\tfont-size: 0.875rem;\n\t}\n\n\t.btn-primary {\n\t\tbackground-color: var(--primary, #3b82f6);\n\t\tcolor: white;\n\t}\n\n\t.btn-primary:hover {\n\t\tbackground-color: var(--primary-hover, #2563eb);\n\t\ttransform: translateY(-1px);\n\t}\n\n\t.btn-primary:disabled {\n\t\topacity: 0.7;\n\t\tcursor: not-allowed;\n\t\ttransform: none;\n\t}\n\n\t.btn-outline {\n\t\tborder: 1px solid var(--border, #e2e8f0);\n\t\tcolor: var(--text-main, #0f172a);\n\t\tbackground: white;\n\t}\n\n\t.btn-outline:hover {\n\t\tborder-color: var(--primary, #3b82f6);\n\t\tcolor: var(--primary, #3b82f6);\n\t}\n\n\t/* Navbar */\n\t.navbar {\n\t\tposition: fixed;\n\t\ttop: 0;\n\t\tleft: 0;\n\t\tright: 0;\n\t\tbackground: rgba(255, 255, 255, 0.9);\n\t\tbackdrop-filter: blur(10px);\n\t\tborder-bottom: 1px solid var(--border, #e2e8f0);\n\t\tz-index: 100;\n\t\theight: 70px;\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t}\n\n\t.nav-container {\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: center;\n\t\twidth: 100%;\n\t}\n\n\t.logo {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.5rem;\n\t\tfont-weight: 800;\n\t\tfont-size: 1.25rem;\n\t\tcolor: var(--primary, #3b82f6);\n\t}\n\n\t.desktop-nav {\n\t\tdisplay: none;\n\t\talign-items: center;\n\t\tgap: 2rem;\n\t}\n\n\t.desktop-nav a {\n\t\tfont-weight: 500;\n\t\tcolor: var(--text-muted, #64748b);\n\t}\n\n\t.desktop-nav a:hover {\n\t\tcolor: var(--primary, #3b82f6);\n\t}\n\n\t.mobile-toggle {\n\t\tdisplay: block;\n\t\tcolor: var(--text-main, #0f172a);\n\t}\n\n\t.mobile-menu {\n\t\tposition: absolute;\n\t\ttop: 70px;\n\t\tleft: 0;\n\t\tright: 0;\n\t\tbackground: white;\n\t\tborder-bottom: 1px solid var(--border, #e2e8f0);\n\t\tpadding: 1rem;\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tgap: 1rem;\n\t\tbox-shadow: var(--shadow-md, 0 4px 6px -1px rgb(0 0 0 / 0.1));\n\t}\n\n\t.mobile-menu a {\n\t\tpadding: 0.5rem;\n\t\tfont-weight: 500;\n\t}\n\n\t/* Hero */\n\t.hero {\n\t\tpadding: 8rem 0 4rem;\n\t\tbackground: linear-gradient(to bottom, var(--bg-surface, #f8fafc), var(--bg-body, #ffffff));\n\t\toverflow: hidden;\n\t}\n\n\t.hero-content {\n\t\tdisplay: grid;\n\t\tgrid-template-columns: 1fr;\n\t\tgap: 3rem;\n\t\talign-items: center;\n\t}\n\n\t.hero-text {\n\t\tmax-width: 600px;\n\t}\n\n\t.badge {\n\t\tdisplay: inline-block;\n\t\tpadding: 0.25rem 0.75rem;\n\t\tbackground: #eff6ff;\n\t\tcolor: var(--primary, #3b82f6);\n\t\tborder-radius: 999px;\n\t\tfont-size: 0.875rem;\n\t\tfont-weight: 600;\n\t\tmargin-bottom: 1.5rem;\n\t}\n\n\t.hero h1 {\n\t\tfont-size: 2.5rem;\n\t\tmargin-bottom: 1.5rem;\n\t\tletter-spacing: -0.02em;\n\t}\n\n\t.hero p {\n\t\tfont-size: 1.125rem;\n\t\tcolor: var(--text-muted, #64748b);\n\t\tmargin-bottom: 2rem;\n\t}\n\n\t.waitlist-form {\n\t\tmargin-bottom: 2rem;\n\t\tmax-width: 450px;\n\t}\n\n\t.input-group {\n\t\tdisplay: flex;\n\t\tgap: 0.5rem;\n\t}\n\n\t.input-group input {\n\t\tflex: 1;\n\t\tpadding: 0.75rem 1rem;\n\t\tborder: 1px solid var(--border, #e2e8f0);\n\t\tborder-radius: var(--radius-md, 0.5rem);\n\t\tfont-size: 1rem;\n\t\toutline: none;\n\t\ttransition: border-color 0.2s;\n\t}\n\n\t.input-group input:focus {\n\t\tborder-color: var(--primary, #3b82f6);\n\t\tbox-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);\n\t}\n\n\t.message {\n\t\tmargin-top: 0.75rem;\n\t\tfont-size: 0.875rem;\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.5rem;\n\t}\n\n\t.message.success { color: #10b981; }\n\t.message.error { color: #ef4444; }\n\n\t.social-proof {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 1rem;\n\t}\n\n\t.avatars {\n\t\tdisplay: flex;\n\t\tmargin-left: 0.5rem;\n\t}\n\n\t.avatar {\n\t\twidth: 32px;\n\t\theight: 32px;\n\t\tborder-radius: 50%;\n\t\tborder: 2px solid white;\n\t\tmargin-left: -0.5rem;\n\t\tbackground-size: cover;\n\t}\n\n\t.social-proof span {\n\t\tfont-size: 0.875rem;\n\t\tcolor: var(--text-muted, #64748b);\n\t}\n\n\t/* Browser Mockup */\n\t.browser-mockup {\n\t\tbackground: white;\n\t\tborder-radius: var(--radius-lg, 1rem);\n\t\tbox-shadow: var(--shadow-lg, 0 10px 15px -3px rgb(0 0 0 / 0.1));\n\t\tborder: 1px solid var(--border, #e2e8f0);\n\t\toverflow: hidden;\n\t\ttransform: perspective(1000px) rotateY(-5deg) rotateX(5deg);\n\t\ttransition: transform 0.5s;\n\t}\n\n\t.browser-mockup:hover {\n\t\ttransform: perspective(1000px) rotateY(0) rotateX(0);\n\t}\n\n\t.browser-header {\n\t\tbackground: #f1f5f9;\n\t\tpadding: 0.75rem;\n\t\tborder-bottom: 1px solid var(--border, #e2e8f0);\n\t}\n\n\t.dots {\n\t\tdisplay: flex;\n\t\tgap: 0.4rem;\n\t}\n\n\t.dots span {\n\t\twidth: 10px;\n\t\theight: 10px;\n\t\tborder-radius: 50%;\n\t\tbackground: #cbd5e1;\n\t}\n\n\t.dots span:nth-child(1) { background: #ef4444; }\n\t.dots span:nth-child(2) { background: #eab308; }\n\t.dots span:nth-child(3) { background: #22c55e; }\n\n\t.browser-content {\n\t\tpadding: 1rem;\n\t\theight: 300px;\n\t\tbackground: white;\n\t}\n\n\t.placeholder-ui {\n\t\tdisplay: flex;\n\t\theight: 100%;\n\t\tgap: 1rem;\n\t}\n\n\t.sidebar {\n\t\twidth: 60px;\n\t\tbackground: #f8fafc;\n\t\tborder-radius: var(--radius-sm, 0.375rem);\n\t}\n\n\t.main {\n\t\tflex: 1;\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tgap: 1rem;\n\t}\n\n\t.header-bar {\n\t\theight: 40px;\n\t\tbackground: #f8fafc;\n\t\tborder-radius: var(--radius-sm, 0.375rem);\n\t\twidth: 100%;\n\t}\n\n\t.grid {\n\t\tdisplay: grid;\n\t\tgrid-template-columns: repeat(3, 1fr);\n\t\tgap: 1rem;\n\t}\n\n\t.card {\n\t\theight: 100px;\n\t\tbackground: #f1f5f9;\n\t\tborder-radius: var(--radius-sm, 0.375rem);\n\t}\n\n\t/* Sections */\n\tsection {\n\t\tpadding: 5rem 0;\n\t}\n\n\t.