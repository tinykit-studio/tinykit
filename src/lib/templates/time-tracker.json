{
	"id": "time-tracker",
	"name": "Time Tracker",
	"description": "Track billable hours with start/stop timer, manual entries, and project association",
	"preview": "lucide:timer",
	"tags": [
		"business",
		"freelance",
		"intermediate",
		"data"
	],
	"kits": ["freelance", "business"],
	"frontend_code": "<script>\n\timport Icon from '@iconify/svelte'\n\timport content from '$content'\n\timport data from '$data'\n\n\tlet entries = $state([])\n\tlet projects = $state([])\n\tlet loading = $state(true)\n\tlet view = $state('today')\n\tlet filter_project = $state('all')\n\tlet filter_billable = $state('all')\n\n\t// Timer state\n\tlet timer_running = $state(false)\n\tlet timer_start = $state(null)\n\tlet timer_project = $state('')\n\tlet timer_description = $state('')\n\tlet timer_billable = $state(true)\n\tlet timer_elapsed = $state(0)\n\tlet timer_interval = null\n\n\t// Manual entry modal\n\tlet modal_open = $state(false)\n\tlet editing_entry = $state(null)\n\tlet form = $state({\n\t\tproject_id: '',\n\t\tdescription: '',\n\t\tdate: new Date().toISOString().split('T')[0],\n\t\tstart_time: '09:00',\n\t\tend_time: '10:00',\n\t\tbillable: true\n\t})\n\n\tdata.entries.subscribe(items => {\n\t\tentries = items.map(e => ({\n\t\t\t...e,\n\t\t\tduration: e.duration || 0\n\t\t}))\n\t\tloading = false\n\t})\n\n\tdata.projects.subscribe(items => {\n\t\tprojects = items\n\t\tif (items.length > 0 && !timer_project) {\n\t\t\ttimer_project = items[0].id\n\t\t}\n\t})\n\n\tlet today = $derived(new Date().toISOString().split('T')[0])\n\n\tlet filtered_entries = $derived.by(() => {\n\t\tlet result = entries\n\n\t\t// Filter by view\n\t\tif (view === 'today') {\n\t\t\tresult = result.filter(e => e.date === today)\n\t\t} else if (view === 'week') {\n\t\t\tconst week_ago = new Date()\n\t\t\tweek_ago.setDate(week_ago.getDate() - 7)\n\t\t\tresult = result.filter(e => new Date(e.date) >= week_ago)\n\t\t}\n\n\t\t// Filter by project\n\t\tif (filter_project !== 'all') {\n\t\t\tresult = result.filter(e => e.project_id === filter_project)\n\t\t}\n\n\t\t// Filter by billable\n\t\tif (filter_billable === 'billable') {\n\t\t\tresult = result.filter(e => e.billable)\n\t\t} else if (filter_billable === 'non-billable') {\n\t\t\tresult = result.filter(e => !e.billable)\n\t\t}\n\n\t\t// Sort by date/time descending\n\t\treturn [...result].sort((a, b) => {\n\t\t\tconst date_cmp = b.date.localeCompare(a.date)\n\t\t\tif (date_cmp !== 0) return date_cmp\n\t\t\treturn (b.start_time || '').localeCompare(a.start_time || '')\n\t\t})\n\t})\n\n\tlet grouped_entries = $derived.by(() => {\n\t\tconst groups = {}\n\t\tfor (const entry of filtered_entries) {\n\t\t\tif (!groups[entry.date]) {\n\t\t\t\tgroups[entry.date] = []\n\t\t\t}\n\t\t\tgroups[entry.date].push(entry)\n\t\t}\n\t\treturn Object.entries(groups).sort((a, b) => b[0].localeCompare(a[0]))\n\t})\n\n\tlet stats = $derived.by(() => {\n\t\tconst total_seconds = filtered_entries.reduce((sum, e) => sum + (e.duration || 0), 0)\n\t\tconst billable_seconds = filtered_entries.filter(e => e.billable).reduce((sum, e) => sum + (e.duration || 0), 0)\n\t\treturn {\n\t\t\ttotal_hours: total_seconds / 3600,\n\t\t\tbillable_hours: billable_seconds / 3600,\n\t\t\tentry_count: filtered_entries.length\n\t\t}\n\t})\n\n\tfunction get_project(id) {\n\t\treturn projects.find(p => p.id === id)\n\t}\n\n\tfunction format_duration(seconds) {\n\t\tconst hrs = Math.floor(seconds / 3600)\n\t\tconst mins = Math.floor((seconds % 3600) / 60)\n\t\tconst secs = seconds % 60\n\t\tif (hrs > 0) {\n\t\t\treturn `${hrs}:${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`\n\t\t}\n\t\treturn `${mins}:${secs.toString().padStart(2, '0')}`\n\t}\n\n\tfunction format_hours(hours) {\n\t\treturn hours.toFixed(1) + 'h'\n\t}\n\n\tfunction format_date_header(date) {\n\t\tconst d = new Date(date + 'T00:00:00')\n\t\tconst t = new Date()\n\t\tt.setHours(0, 0, 0, 0)\n\t\tconst diff = Math.floor((t - d) / (1000 * 60 * 60 * 24))\n\t\tif (diff === 0) return 'Today'\n\t\tif (diff === 1) return 'Yesterday'\n\t\treturn d.toLocaleDateString('en-US', { weekday: 'short', month: 'short', day: 'numeric' })\n\t}\n\n\tfunction start_timer() {\n\t\ttimer_running = true\n\t\ttimer_start = Date.now()\n\t\ttimer_elapsed = 0\n\t\ttimer_interval = setInterval(() => {\n\t\t\ttimer_elapsed = Math.floor((Date.now() - timer_start) / 1000)\n\t\t}, 1000)\n\t}\n\n\tasync function stop_timer() {\n\t\tif (!timer_running) return\n\t\tclearInterval(timer_interval)\n\t\ttimer_running = false\n\n\t\tconst start = new Date(timer_start)\n\t\tconst end = new Date()\n\n\t\tawait data.entries.create({\n\t\t\tproject_id: timer_project,\n\t\t\tdescription: timer_description,\n\t\t\tdate: start.toISOString().split('T')[0],\n\t\t\tstart_time: start.toTimeString().slice(0, 5),\n\t\t\tend_time: end.toTimeString().slice(0, 5),\n\t\t\tduration: timer_elapsed,\n\t\t\tbillable: timer_billable\n\t\t})\n\n\t\ttimer_description = ''\n\t\ttimer_elapsed = 0\n\t\ttimer_start = null\n\t}\n\n\tfunction open_manual_modal() {\n\t\tediting_entry = null\n\t\tform = {\n\t\t\tproject_id: projects.length > 0 ? projects[0].id : '',\n\t\t\tdescription: '',\n\t\t\tdate: today,\n\t\t\tstart_time: '09:00',\n\t\t\tend_time: '10:00',\n\t\t\tbillable: true\n\t\t}\n\t\tmodal_open = true\n\t}\n\n\tfunction open_edit_modal(entry) {\n\t\tediting_entry = entry\n\t\tconst duration_mins = Math.floor((entry.duration || 0) / 60)\n\t\tconst start = entry.start_time || '09:00'\n\t\tconst [h, m] = start.split(':').map(Number)\n\t\tconst end_mins = h * 60 + m + duration_mins\n\t\tconst end_time = `${Math.floor(end_mins / 60).toString().padStart(2, '0')}:${(end_mins % 60).toString().padStart(2, '0')}`\n\n\t\tform = {\n\t\t\tproject_id: entry.project_id || '',\n\t\t\tdescription: entry.description || '',\n\t\t\tdate: entry.date || today,\n\t\t\tstart_time: start,\n\t\t\tend_time: entry.end_time || end_time,\n\t\t\tbillable: entry.billable !== false\n\t\t}\n\t\tmodal_open = true\n\t}\n\n\tfunction close_modal() {\n\t\tmodal_open = false\n\t\tediting_entry = null\n\t}\n\n\tfunction calc_duration(start, end) {\n\t\tconst [sh, sm] = start.split(':').map(Number)\n\t\tconst [eh, em] = end.split(':').map(Number)\n\t\tconst start_mins = sh * 60 + sm\n\t\tconst end_mins = eh * 60 + em\n\t\treturn Math.max(0, (end_mins - start_mins) * 60)\n\t}\n\n\tasync function save_entry() {\n\t\tconst duration = calc_duration(form.start_time, form.end_time)\n\t\tconst entry_data = {\n\t\t\tproject_id: form.project_id,\n\t\t\tdescription: form.description,\n\t\t\tdate: form.date,\n\t\t\tstart_time: form.start_time,\n\t\t\tend_time: form.end_time,\n\t\t\tduration,\n\t\t\tbillable: form.billable\n\t\t}\n\n\t\tif (editing_entry) {\n\t\t\tawait data.entries.update(editing_entry.id, entry_data)\n\t\t} else {\n\t\t\tawait data.entries.create(entry_data)\n\t\t}\n\t\tclose_modal()\n\t}\n\n\tasync function delete_entry(id) {\n\t\tif (confirm('Delete this time entry?')) {\n\t\t\tawait data.entries.delete(id)\n\t\t\tclose_modal()\n\t\t}\n\t}\n\n\tasync function add_project() {\n\t\tconst name = prompt('Project name:')\n\t\tif (name?.trim()) {\n\t\t\tconst p = await data.projects.create({ name: name.trim(), hourly_rate: 0, color: '#3b82f6' })\n\t\t\ttimer_project = p.id\n\t\t}\n\t}\n\n\tfunction export_timesheet() {\n\t\tlet csv = 'Date,Project,Description,Start,End,Duration (hrs),Billable\\n'\n\t\tfor (const entry of filtered_entries) {\n\t\t\tconst proj = get_project(entry.project_id)\n\t\t\tcsv += `\"${entry.date}\",\"${proj?.name || ''}\",\"${entry.description || ''}\",\"${entry.start_time || ''}\",\"${entry.end_time || ''}\",${((entry.duration || 0) / 3600).toFixed(2)},${entry.billable ? 'Yes' : 'No'}\\n`\n\t\t}\n\t\tconst blob = new Blob([csv], { type: 'text/csv' })\n\t\tconst url = URL.createObjectURL(blob)\n\t\tconst a = document.createElement('a')\n\t\ta.href = url\n\t\ta.download = `timesheet-${today}.csv`\n\t\ta.click()\n\t}\n\n\tfunction handle_backdrop(e) {\n\t\tif (e.target === e.currentTarget) close_modal()\n\t}\n</script>\n\n<div class=\"page\">\n\t<header class=\"header\">\n\t\t<h1>{content.title}</h1>\n\t\t<button class=\"export-btn\" onclick={export_timesheet}>\n\t\t\t<Icon icon=\"lucide:download\" width={16} />\n\t\t\t{content.export_button}\n\t\t</button>\n\t</header>\n\n\t<div class=\"timer-section\">\n\t\t<div class=\"timer-display\" class:running={timer_running}>\n\t\t\t<span class=\"timer-time\">{format_duration(timer_elapsed)}</span>\n\t\t</div>\n\t\t<div class=\"timer-controls\">\n\t\t\t<select bind:value={timer_project} class=\"timer-project\" disabled={timer_running}>\n\t\t\t\t{#each projects as p (p.id)}\n\t\t\t\t\t<option value={p.id}>{p.name}</option>\n\t\t\t\t{/each}\n\t\t\t</select>\n\t\t\t<button class=\"add-project-btn\" onclick={add_project} title=\"Add project\">\n\t\t\t\t<Icon icon=\"lucide:plus\" width={16} />\n\t\t\t</button>\n\t\t\t<input\n\t\t\t\ttype=\"text\"\n\t\t\t\tclass=\"timer-description\"\n\t\t\t\tbind:value={timer_description}\n\t\t\t\tplaceholder={content.description_placeholder}\n\t\t\t/>\n\t\t\t<label class=\"billable-toggle\">\n\t\t\t\t<input type=\"checkbox\" bind:checked={timer_billable} />\n\t\t\t\t<Icon icon={timer_billable ? 'lucide:dollar-sign' : 'lucide:circle-off'} width={16} />\n\t\t\t</label>\n\t\t\t{#if timer_running}\n\t\t\t\t<button class=\"timer-btn stop\" onclick={stop_timer}>\n\t\t\t\t\t<Icon icon=\"lucide:square\" width={18} />\n\t\t\t\t\tStop\n\t\t\t\t</button>\n\t\t\t{:else}\n\t\t\t\t<button class=\"timer-btn start\" onclick={start_timer}>\n\t\t\t\t\t<Icon icon=\"lucide:play\" width={18} />\n\t\t\t\t\tStart\n\t\t\t\t</button>\n\t\t\t{/if}\n\t\t</div>\n\t</div>\n\n\t<div class=\"stats-bar\">\n\t\t<div class=\"stat\">\n\t\t\t<span class=\"stat-value\">{format_hours(stats.total_hours)}</span>\n\t\t\t<span class=\"stat-label\">Total</span>\n\t\t</div>\n\t\t<div class=\"stat billable\">\n\t\t\t<span class=\"stat-value\">{format_hours(stats.billable_hours)}</span>\n\t\t\t<span class=\"stat-label\">Billable</span>\n\t\t</div>\n\t\t<div class=\"stat\">\n\t\t\t<span class=\"stat-value\">{stats.entry_count}</span>\n\t\t\t<span class=\"stat-label\">Entries</span>\n\t\t</div>\n\t</div>\n\n\t<div class=\"filters\">\n\t\t<div class=\"view-tabs\">\n\t\t\t<button class:active={view === 'today'} onclick={() => view = 'today'}>Today</button>\n\t\t\t<button class:active={view === 'week'} onclick={() => view = 'week'}>Week</button>\n\t\t\t<button class:active={view === 'all'} onclick={() => view = 'all'}>All</button>\n\t\t</div>\n\t\t<div class=\"filter-controls\">\n\t\t\t<select bind:value={filter_project}>\n\t\t\t\t<option value=\"all\">All Projects</option>\n\t\t\t\t{#each projects as p (p.id)}\n\t\t\t\t\t<option value={p.id}>{p.name}</option>\n\t\t\t\t{/each}\n\t\t\t</select>\n\t\t\t<select bind:value={filter_billable}>\n\t\t\t\t<option value=\"all\">All Time</option>\n\t\t\t\t<option value=\"billable\">Billable</option>\n\t\t\t\t<option value=\"non-billable\">Non-billable</option>\n\t\t\t</select>\n\t\t\t<button class=\"manual-btn\" onclick={open_manual_modal}>\n\t\t\t\t<Icon icon=\"lucide:plus\" width={16} />\n\t\t\t\tManual Entry\n\t\t\t</button>\n\t\t</div>\n\t</div>\n\n\t<div class=\"entries-list\">\n\t\t{#if loading}\n\t\t\t<p class=\"loading\">Loading...</p>\n\t\t{:else if grouped_entries.length === 0}\n\t\t\t<div class=\"empty\">\n\t\t\t\t<Icon icon=\"lucide:clock\" width={48} />\n\t\t\t\t<p>{content.empty_state}</p>\n\t\t\t</div>\n\t\t{:else}\n\t\t\t{#each grouped_entries as [date, day_entries] (date)}\n\t\t\t\t<div class=\"day-group\">\n\t\t\t\t\t<div class=\"day-header\">\n\t\t\t\t\t\t<span class=\"day-label\">{format_date_header(date)}</span>\n\t\t\t\t\t\t<span class=\"day-total\">\n\t\t\t\t\t\t\t{format_hours(day_entries.reduce((sum, e) => sum + (e.duration || 0), 0) / 3600)}\n\t\t\t\t\t\t</span>\n\t\t\t\t\t</div>\n\t\t\t\t\t{#each day_entries as entry (entry.id)}\n\t\t\t\t\t\t{@const proj = get_project(entry.project_id)}\n\t\t\t\t\t\t<button class=\"entry-card\" onclick={() => open_edit_modal(entry)}>\n\t\t\t\t\t\t\t<div class=\"entry-project\" style=\"--project-color: {proj?.color || '#94a3b8'}\">\n\t\t\t\t\t\t\t\t<span class=\"project-dot\"></span>\n\t\t\t\t\t\t\t\t<span class=\"project-name\">{proj?.name || 'No Project'}</span>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t<div class=\"entry-description\">{entry.description || 'No description'}</div>\n\t\t\t\t\t\t\t<div class=\"entry-meta\">\n\t\t\t\t\t\t\t\t{#if entry.start_time}\n\t\t\t\t\t\t\t\t\t<span class=\"entry-time\">{entry.start_time} - {entry.end_time}</span>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t{#if entry.billable}\n\t\t\t\t\t\t\t\t\t<span class=\"billable-badge\">\n\t\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:dollar-sign\" width={12} />\n\t\t\t\t\t\t\t\t\t</span>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t<div class=\"entry-duration\">{format_hours((entry.duration || 0) / 3600)}</div>\n\t\t\t\t\t\t</button>\n\t\t\t\t\t{/each}\n\t\t\t\t</div>\n\t\t\t{/each}\n\t\t{/if}\n\t</div>\n\n\t<footer class=\"footer\">built with <a href=\"https://tinykit.studio\" target=\"_blank\">tinykit.studio</a></footer>\n</div>\n\n{#if modal_open}\n\t<div class=\"modal-backdrop\" onclick={handle_backdrop}>\n\t\t<div class=\"modal\">\n\t\t\t<div class=\"modal-header\">\n\t\t\t\t<h2>{editing_entry ? 'Edit Entry' : 'Add Time Entry'}</h2>\n\t\t\t\t<button class=\"close-btn\" onclick={close_modal}>\n\t\t\t\t\t<Icon icon=\"lucide:x\" width={20} />\n\t\t\t\t</button>\n\t\t\t</div>\n\t\t\t<div class=\"modal-body\">\n\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t<label>Project</label>\n\t\t\t\t\t<select bind:value={form.project_id}>\n\t\t\t\t\t\t{#each projects as p (p.id)}\n\t\t\t\t\t\t\t<option value={p.id}>{p.name}</option>\n\t\t\t\t\t\t{/each}\n\t\t\t\t\t</select>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t<label>Description</label>\n\t\t\t\t\t<input type=\"text\" bind:value={form.description} placeholder=\"What did you work on?\" />\n\t\t\t\t</div>\n\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t<label>Date</label>\n\t\t\t\t\t<input type=\"date\" bind:value={form.date} />\n\t\t\t\t</div>\n\t\t\t\t<div class=\"form-row\">\n\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t<label>Start Time</label>\n\t\t\t\t\t\t<input type=\"time\" bind:value={form.start_time} />\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t<label>End Time</label>\n\t\t\t\t\t\t<input type=\"time\" bind:value={form.end_time} />\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t<label class=\"checkbox-label\">\n\t\t\t\t\t\t<input type=\"checkbox\" bind:checked={form.billable} />\n\t\t\t\t\t\t<span>Billable</span>\n\t\t\t\t\t</label>\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t\t<div class=\"modal-footer\">\n\t\t\t\t{#if editing_entry}\n\t\t\t\t\t<button class=\"delete-btn\" onclick={() => delete_entry(editing_entry.id)}>\n\t\t\t\t\t\t<Icon icon=\"lucide:trash-2\" width={16} />\n\t\t\t\t\t</button>\n\t\t\t\t{/if}\n\t\t\t\t<div class=\"footer-actions\">\n\t\t\t\t\t<button class=\"cancel-btn\" onclick={close_modal}>Cancel</button>\n\t\t\t\t\t<button class=\"save-btn\" onclick={save_entry}>Save</button>\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</div>\n\t</div>\n{/if}\n\n<style>\n\t.page {\n\t\tmin-height: 100vh;\n\t\tbackground: var(--page-background, #f8fafc);\n\t\tfont-family: var(--font-family, Inter, system-ui, sans-serif);\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t}\n\n\t.header {\n\t\tbackground: var(--header-background, #ffffff);\n\t\tpadding: 1.5rem;\n\t\tborder-bottom: 1px solid var(--border-color, #e2e8f0);\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: center;\n\t}\n\n\t.header h1 {\n\t\tmargin: 0;\n\t\tfont-size: 1.5rem;\n\t\tfont-weight: 600;\n\t\tcolor: var(--heading-color, #1e293b);\n\t}\n\n\t.export-btn {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.375rem;\n\t\tpadding: 0.5rem 1rem;\n\t\tbackground: var(--card-background, #ffffff);\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: 8px;\n\t\tcolor: var(--body-text, #334155);\n\t\tfont-weight: 500;\n\t\tcursor: pointer;\n\t}\n\n\t.export-btn:hover { background: var(--hover-background, #f1f5f9); }\n\n\t.timer-section {\n\t\tbackground: var(--timer-background, #1e293b);\n\t\tpadding: 2rem;\n\t\ttext-align: center;\n\t}\n\n\t.timer-display {\n\t\tmargin-bottom: 1.5rem;\n\t}\n\n\t.timer-time {\n\t\tfont-size: 4rem;\n\t\tfont-weight: 700;\n\t\tcolor: #ffffff;\n\t\tfont-variant-numeric: tabular-nums;\n\t\tletter-spacing: 0.02em;\n\t}\n\n\t.timer-display.running .timer-time {\n\t\tcolor: var(--timer-running-color, #22c55e);\n\t}\n\n\t.timer-controls {\n\t\tdisplay: flex;\n\t\tgap: 0.75rem;\n\t\tjustify-content: center;\n\t\talign-items: center;\n\t\tflex-wrap: wrap;\n\t}\n\n\t.timer-project {\n\t\tpadding: 0.625rem 1rem;\n\t\tbackground: rgba(255,255,255,0.1);\n\t\tborder: 1px solid rgba(255,255,255,0.2);\n\t\tborder-radius: 8px;\n\t\tcolor: #ffffff;\n\t\tfont-size: 0.875rem;\n\t}\n\n\t.timer-project option { color: #1e293b; }\n\n\t.add-project-btn {\n\t\tpadding: 0.625rem;\n\t\tbackground: rgba(255,255,255,0.1);\n\t\tborder: 1px solid rgba(255,255,255,0.2);\n\t\tborder-radius: 8px;\n\t\tcolor: #ffffff;\n\t\tcursor: pointer;\n\t}\n\n\t.add-project-btn:hover { background: rgba(255,255,255,0.2); }\n\n\t.timer-description {\n\t\tflex: 1;\n\t\tmin-width: 200px;\n\t\tpadding: 0.625rem 1rem;\n\t\tbackground: rgba(255,255,255,0.1);\n\t\tborder: 1px solid rgba(255,255,255,0.2);\n\t\tborder-radius: 8px;\n\t\tcolor: #ffffff;\n\t\tfont-size: 0.875rem;\n\t}\n\n\t.timer-description::placeholder { color: rgba(255,255,255,0.5); }\n\n\t.billable-toggle {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tjustify-content: center;\n\t\twidth: 40px;\n\t\theight: 40px;\n\t\tbackground: rgba(255,255,255,0.1);\n\t\tborder: 1px solid rgba(255,255,255,0.2);\n\t\tborder-radius: 8px;\n\t\tcolor: rgba(255,255,255,0.5);\n\t\tcursor: pointer;\n\t}\n\n\t.billable-toggle:has(input:checked) {\n\t\tbackground: var(--billable-color, #22c55e);\n\t\tborder-color: var(--billable-color, #22c55e);\n\t\tcolor: #ffffff;\n\t}\n\n\t.billable-toggle input { display: none; }\n\n\t.timer-btn {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.5rem;\n\t\