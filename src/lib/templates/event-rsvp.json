{
	"id": "event-rsvp",
	"name": "Event RSVP",
	"description": "Collect RSVPs with guest list and realtime attendee count",
	"preview": "lucide:calendar-check",
	"tags": [
		"social",
		"intermediate",
		"realtime"
	],
	"kits": [
		"community",
		"event"
	],
	"frontend_code": "<script>\n\timport Icon from '@iconify/svelte'\n\timport content from '$content'\n\timport data from '$data'\n\n\tlet guests = $state([])\n\tlet loading = $state(true)\n\tlet submitted = $state(false)\n\tlet submitting = $state(false)\n\n\t// Form fields\n\tlet name = $state('')\n\tlet email = $state('')\n\tlet status = $state('attending')\n\tlet guests_count = $state(1)\n\tlet dietary = $state('')\n\tlet message = $state('')\n\n\t// Admin state\n\tlet show_password_modal = $state(false)\n\tlet flipped = $state(false)\n\tlet password_input = $state('')\n\tlet password_error = $state(false)\n\n\t// Check if already RSVPed or admin\n\t$effect(() => {\n\t\tconst stored = localStorage.getItem('rsvp_submitted')\n\t\tif (stored) {\n\t\t\tsubmitted = true\n\t\t}\n\t\tconst admin = localStorage.getItem('rsvp_admin')\n\t\tif (admin === content.host_password) {\n\t\t\tflipped = true\n\t\t}\n\t})\n\n\t// Subscribe to realtime updates\n\tdata.guests.subscribe(items => {\n\t\t\tguests = items.sort((a, b) => new Date(b.created_at) - new Date(a.created_at))\n\t\tloading = false\n\t});\n\n\tfunction check_password() {\n\t\tif (password_input === content.host_password) {\n\t\t\tlocalStorage.setItem('rsvp_admin', password_input)\n\t\t\tflipped = true\n\t\t\tshow_password_modal = false\n\t\t\tpassword_error = false\n\t\t} else {\n\t\t\tpassword_error = true\n\t\t}\n\t}\n\n\tfunction exit_admin() {\n\t\tlocalStorage.removeItem('rsvp_admin')\n\t\tflipped = false\n\t}\n\n\tlet dietary_summary = $derived.by(() => {\n\t\tconst items = guests.filter(g => g.status === 'attending' && g.dietary).map(g => g.dietary)\n\t\treturn items.length > 0 ? items : []\n\t})\n\n\tlet attending_count = $derived.by(() => \n\t\tguests.filter(g => g.status === 'attending').reduce((sum, g) => sum + (g.guests_count || 1), 0)\n\t)\n\n\tlet maybe_count = $derived.by(() => \n\t\tguests.filter(g => g.status === 'maybe').length\n\t)\n\n\tlet declined_count = $derived.by(() => \n\t\tguests.filter(g => g.status === 'declined').length\n\t)\n\n\tasync function submit_rsvp(e) {\n\t\te.preventDefault()\n\t\tif (!name.trim() || !email.trim()) return\n\t\t\n\t\tsubmitting = true\n\t\t\n\t\tawait data.guests.create({\n\t\t\tname: name.trim(),\n\t\t\temail: email.trim(),\n\t\t\tstatus,\n\t\t\tguests_count: status === 'attending' ? guests_count : 0,\n\t\t\tdietary: dietary.trim(),\n\t\t\tmessage: message.trim(),\n\t\t\tcreated_at: new Date().toISOString()\n\t\t})\n\t\t\n\t\tlocalStorage.setItem('rsvp_submitted', 'true')\n\t\tsubmitted = true\n\t\tsubmitting = false\n\t}\n\n\tfunction reset_rsvp() {\n\t\tlocalStorage.removeItem('rsvp_submitted')\n\t\tsubmitted = false\n\t\tname = ''\n\t\temail = ''\n\t\tstatus = 'attending'\n\t\tguests_count = 1\n\t\tdietary = ''\n\t\tmessage = ''\n\t}\n\n\tfunction get_status_icon(s) {\n\t\tif (s === 'attending') return 'lucide:check-circle'\n\t\tif (s === 'maybe') return 'lucide:help-circle'\n\t\treturn 'lucide:x-circle'\n\t}\n\n\tfunction get_initials(name) {\n\t\treturn name.split(' ').map(n => n[0]).join('').toUpperCase().slice(0, 2)\n\t}\n</script>\n\n<div class=\"page\">\n\t<div class=\"card-wrapper\">\n\t\t<div class=\"card\" class:flipped={flipped}>\n\t\t\t<!-- FRONT: RSVP Form -->\n\t\t\t<div class=\"card-face card-front\">\n\t\t\t\t<!-- Event Header -->\n\t\t\t\t<div class=\"event-header\">\n\t\t\t\t\t<div class=\"event-badge\">\n\t\t\t\t\t\t<Icon icon=\"lucide:calendar\" width={20} />\n\t\t\t\t\t\t<span>{content.event_type}</span>\n\t\t\t\t\t</div>\n\t\t\t\t\t<h1 class=\"event-title\">{content.event_name}</h1>\n\t\t\t\t\t<p class=\"event-tagline\">{content.event_tagline}</p>\n\t\t\t\t</div>\n\n\t\t\t\t<!-- Event Details -->\n\t\t\t\t<div class=\"event-details\">\n\t\t\t\t\t<div class=\"detail-item\">\n\t\t\t\t\t\t<Icon icon=\"lucide:calendar-days\" width={20} />\n\t\t\t\t\t\t<div>\n\t\t\t\t\t\t\t<span class=\"detail-label\">{content.date_label}</span>\n\t\t\t\t\t\t\t<span class=\"detail-value\">{content.event_date}</span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"detail-item\">\n\t\t\t\t\t\t<Icon icon=\"lucide:clock\" width={20} />\n\t\t\t\t\t\t<div>\n\t\t\t\t\t\t\t<span class=\"detail-label\">{content.time_label}</span>\n\t\t\t\t\t\t\t<span class=\"detail-value\">{content.event_time}</span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"detail-item\">\n\t\t\t\t\t\t<Icon icon=\"lucide:map-pin\" width={20} />\n\t\t\t\t\t\t<div>\n\t\t\t\t\t\t\t<span class=\"detail-label\">{content.location_label}</span>\n\t\t\t\t\t\t\t<span class=\"detail-value\">{content.event_location}</span>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\n\t\t\t\t{#if content.event_description}\n\t\t\t\t\t<p class=\"event-description\">{content.event_description}</p>\n\t\t\t\t{/if}\n\n\t\t\t\t<!-- Stats -->\n\t\t\t\t<div class=\"stats\">\n\t\t\t\t\t<div class=\"stat attending\">\n\t\t\t\t\t\t<Icon icon=\"lucide:user-check\" width={18} />\n\t\t\t\t\t\t<span class=\"stat-count\">{attending_count}</span>\n\t\t\t\t\t\t<span class=\"stat-label\">{content.attending_label}</span>\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"stat maybe\">\n\t\t\t\t\t\t<Icon icon=\"lucide:user-round\" width={18} />\n\t\t\t\t\t\t<span class=\"stat-count\">{maybe_count}</span>\n\t\t\t\t\t\t<span class=\"stat-label\">{content.maybe_label}</span>\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"stat declined\">\n\t\t\t\t\t\t<Icon icon=\"lucide:user-x\" width={18} />\n\t\t\t\t\t\t<span class=\"stat-count\">{declined_count}</span>\n\t\t\t\t\t\t<span class=\"stat-label\">{content.declined_label}</span>\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\n\t\t\t\t<!-- RSVP Form or Thank You -->\n\t\t\t\t{#if submitted}\n\t\t\t\t\t<div class=\"thank-you\">\n\t\t\t\t\t\t<div class=\"thank-you-icon\">\n\t\t\t\t\t\t\t<Icon icon=\"lucide:party-popper\" width={32} />\n\t\t\t\t\t\t</div>\n\t\t\t\t\t\t<h2>{content.thank_you_title}</h2>\n\t\t\t\t\t\t<p>{content.thank_you_message}</p>\n\t\t\t\t\t\t<button class=\"change-btn\" onclick={reset_rsvp}>\n\t\t\t\t\t\t\t{content.change_rsvp_text}\n\t\t\t\t\t\t</button>\n\t\t\t\t\t</div>\n\t\t\t\t{:else}\n\t\t\t\t\t<form class=\"rsvp-form\" onsubmit={submit_rsvp}>\n\t\t\t\t\t\t<h2 class=\"form-title\">{content.form_title}</h2>\n\t\t\t\t\t\t\n\t\t\t\t\t\t<div class=\"form-row\">\n\t\t\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t\t\t<label for=\"name\">{content.name_label}</label>\n\t\t\t\t\t\t\t\t<input \n\t\t\t\t\t\t\t\t\tid=\"name\" \n\t\t\t\t\t\t\t\t\ttype=\"text\" \n\t\t\t\t\t\t\t\t\tbind:value={name}\n\t\t\t\t\t\t\t\t\tplaceholder={content.name_placeholder}\n\t\t\t\t\t\t\t\t\trequired\n\t\t\t\t\t\t\t\t/>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t\t\t<label for=\"email\">{content.email_label}</label>\n\t\t\t\t\t\t\t\t<input \n\t\t\t\t\t\t\t\t\tid=\"email\" \n\t\t\t\t\t\t\t\t\ttype=\"email\" \n\t\t\t\t\t\t\t\t\tbind:value={email}\n\t\t\t\t\t\t\t\t\tplaceholder={content.email_placeholder}\n\t\t\t\t\t\t\t\t\trequired\n\t\t\t\t\t\t\t\t/>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t\t<span class=\"form-legend\">{content.response_label}</span>\n\t\t\t\t\t\t\t<div class=\"status-options\">\n\t\t\t\t\t\t\t\t<button \n\t\t\t\t\t\t\t\t\ttype=\"button\"\n\t\t\t\t\t\t\t\t\tclass=\"status-btn\"\n\t\t\t\t\t\t\t\t\tclass:selected={status === 'attending'}\n\t\t\t\t\t\t\t\t\tonclick={() => status = 'attending'}\n\t\t\t\t\t\t\t\t>\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:check\" width={18} />\n\t\t\t\t\t\t\t\t\t{content.yes_option}\n\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t\t<button \n\t\t\t\t\t\t\t\t\ttype=\"button\"\n\t\t\t\t\t\t\t\t\tclass=\"status-btn maybe-btn\"\n\t\t\t\t\t\t\t\t\tclass:selected={status === 'maybe'}\n\t\t\t\t\t\t\t\t\tonclick={() => status = 'maybe'}\n\t\t\t\t\t\t\t\t>\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:help-circle\" width={18} />\n\t\t\t\t\t\t\t\t\t{content.maybe_option}\n\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t\t<button \n\t\t\t\t\t\t\t\t\ttype=\"button\"\n\t\t\t\t\t\t\t\t\tclass=\"status-btn decline-btn\"\n\t\t\t\t\t\t\t\t\tclass:selected={status === 'declined'}\n\t\t\t\t\t\t\t\t\tonclick={() => status = 'declined'}\n\t\t\t\t\t\t\t\t>\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:x\" width={18} />\n\t\t\t\t\t\t\t\t\t{content.no_option}\n\t\t\t\t\t\t\t\t</button>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t{#if status === 'attending'}\n\t\t\t\t\t\t\t<div class=\"form-row\">\n\t\t\t\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t\t\t\t<label for=\"guests_count\">{content.guests_label}</label>\n\t\t\t\t\t\t\t\t\t<select id=\"guests_count\" bind:value={guests_count}>\n\t\t\t\t\t\t\t\t\t\t<option value={1}>1</option>\n\t\t\t\t\t\t\t\t\t\t<option value={2}>2</option>\n\t\t\t\t\t\t\t\t\t\t<option value={3}>3</option>\n\t\t\t\t\t\t\t\t\t\t<option value={4}>4</option>\n\t\t\t\t\t\t\t\t\t\t<option value={5}>5+</option>\n\t\t\t\t\t\t\t\t\t</select>\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t\t\t\t<label for=\"dietary\">{content.dietary_label}</label>\n\t\t\t\t\t\t\t\t\t<input \n\t\t\t\t\t\t\t\t\t\tid=\"dietary\" \n\t\t\t\t\t\t\t\t\t\ttype=\"text\" \n\t\t\t\t\t\t\t\t\t\tbind:value={dietary}\n\t\t\t\t\t\t\t\t\t\tplaceholder={content.dietary_placeholder}\n\t\t\t\t\t\t\t\t\t/>\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t{/if}\n\n\t\t\t\t\t\t<div class=\"form-group\">\n\t\t\t\t\t\t\t<label for=\"message\">{content.message_label}</label>\n\t\t\t\t\t\t\t<textarea \n\t\t\t\t\t\t\t\tid=\"message\" \n\t\t\t\t\t\t\t\tbind:value={message}\n\t\t\t\t\t\t\t\tplaceholder={content.message_placeholder}\n\t\t\t\t\t\t\t\trows=\"3\"\n\t\t\t\t\t\t\t></textarea>\n\t\t\t\t\t\t</div>\n\n\t\t\t\t\t\t<button type=\"submit\" class=\"submit-btn\" disabled={submitting}>\n\t\t\t\t\t\t\t{#if submitting}\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:loader-2\" width={18} class=\"spin\" />\n\t\t\t\t\t\t\t\t{content.submitting_text}\n\t\t\t\t\t\t\t{:else}\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:send\" width={18} />\n\t\t\t\t\t\t\t\t{content.submit_button}\n\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t</button>\n\t\t\t\t\t</form>\n\t\t\t\t{/if}\n\n\t\t\t\t<!-- Guest List -->\n\t\t\t\t{#if !loading && guests.length > 0}\n\t\t\t\t\t<div class=\"guest-list\">\n\t\t\t\t\t\t<h3 class=\"guest-list-title\">\n\t\t\t\t\t\t\t<Icon icon=\"lucide:users\" width={18} />\n\t\t\t\t\t\t\t{content.guest_list_title}\n\t\t\t\t\t\t</h3>\n\t\t\t\t\t\t<div class=\"guests\">\n\t\t\t\t\t\t\t{#each guests.filter(g => g.status === 'attending') as guest (guest.id)}\n\t\t\t\t\t\t\t\t<div class=\"guest-item\">\n\t\t\t\t\t\t\t\t\t<div class=\"guest-avatar\">{get_initials(guest.name)}</div>\n\t\t\t\t\t\t\t\t\t<div class=\"guest-info\">\n\t\t\t\t\t\t\t\t\t\t<span class=\"guest-name\">{guest.name}</span>\n\t\t\t\t\t\t\t\t\t\t{#if guest.guests_count > 1}\n\t\t\t\t\t\t\t\t\t\t\t<span class=\"guest-plus\">+{guest.guests_count - 1}</span>\n\t\t\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t\t<Icon icon={get_status_icon(guest.status)} width={16} class=\"status-icon attending\" />\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t{/if}\n\n\t\t\t\t<div class=\"realtime-badge\">\n\t\t\t\t\t<span class=\"pulse\"></span>\n\t\t\t\t\t{content.realtime_label}\n\t\t\t\t</div>\n\t\t\t</div>\n\n\t\t\t<!-- BACK: Host Dashboard -->\n\t\t\t<div class=\"card-face card-back\">\n\t\t\t\t<div class=\"admin-header\">\n\t\t\t\t\t<h2><Icon icon=\"lucide:shield-check\" width={20} /> {content.admin_title}</h2>\n\t\t\t\t\t<button class=\"flip-btn\" onclick={exit_admin}>\n\t\t\t\t\t\t<Icon icon=\"lucide:rotate-ccw\" width={18} />\n\t\t\t\t\t\tBack\n\t\t\t\t\t</button>\n\t\t\t\t</div>\n\n\t\t\t\t<!-- Stats on back too -->\n\t\t\t\t<div class=\"stats admin-stats\">\n\t\t\t\t\t<div class=\"stat attending\">\n\t\t\t\t\t\t<span class=\"stat-count\">{attending_count}</span>\n\t\t\t\t\t\t<span class=\"stat-label\">{content.attending_label}</span>\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"stat maybe\">\n\t\t\t\t\t\t<span class=\"stat-count\">{maybe_count}</span>\n\t\t\t\t\t\t<span class=\"stat-label\">{content.maybe_label}</span>\n\t\t\t\t\t</div>\n\t\t\t\t\t<div class=\"stat declined\">\n\t\t\t\t\t\t<span class=\"stat-count\">{declined_count}</span>\n\t\t\t\t\t\t<span class=\"stat-label\">{content.declined_label}</span>\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\t\t\t\t\n\t\t\t\t{#if dietary_summary.length > 0}\n\t\t\t\t\t<div class=\"admin-section\">\n\t\t\t\t\t\t<h4><Icon icon=\"lucide:utensils\" width={16} /> {content.dietary_summary_title}</h4>\n\t\t\t\t\t\t<ul class=\"dietary-list\">\n\t\t\t\t\t\t\t{#each dietary_summary as item}\n\t\t\t\t\t\t\t\t<li>{item}</li>\n\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t</ul>\n\t\t\t\t\t</div>\n\t\t\t\t{/if}\n\n\t\t\t\t<div class=\"admin-section\">\n\t\t\t\t\t<h4><Icon icon=\"lucide:list\" width={16} /> {content.all_responses_title} ({guests.length})</h4>\n\t\t\t\t\t<div class=\"admin-guests\">\n\t\t\t\t\t\t{#each guests as guest (guest.id)}\n\t\t\t\t\t\t\t<div class=\"admin-guest\" class:attending={guest.status === 'attending'} class:maybe={guest.status === 'maybe'} class:declined={guest.status === 'declined'}>\n\t\t\t\t\t\t\t\t<div class=\"admin-guest-header\">\n\t\t\t\t\t\t\t\t\t<span class=\"admin-guest-name\">{guest.name}</span>\n\t\t\t\t\t\t\t\t\t<span class=\"admin-guest-status\">\n\t\t\t\t\t\t\t\t\t\t<Icon icon={get_status_icon(guest.status)} width={14} />\n\t\t\t\t\t\t\t\t\t\t{guest.status}\n\t\t\t\t\t\t\t\t\t</span>\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t<div class=\"admin-guest-details\">\n\t\t\t\t\t\t\t\t\t<a href=\"mailto:{guest.email}\" class=\"email-link\"><Icon icon=\"lucide:mail\" width={12} /> {guest.email}</a>\n\t\t\t\t\t\t\t\t\t{#if guest.status === 'attending' && guest.guests_count > 0}\n\t\t\t\t\t\t\t\t\t\t<span><Icon icon=\"lucide:users\" width={12} /> {guest.guests_count} {guest.guests_count === 1 ? 'guest' : 'guests'}</span>\n\t\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t\t{#if guest.dietary}\n\t\t\t\t\t\t\t\t\t\t<span><Icon icon=\"lucide:utensils\" width={12} /> {guest.dietary}</span>\n\t\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t\t{#if guest.message}\n\t\t\t\t\t\t\t\t\t<p class=\"admin-guest-message\">\"{guest.message}\"</p>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t{:else}\n\t\t\t\t\t\t\t<p class=\"no-guests\">{content.no_responses_text}</p>\n\t\t\t\t\t\t{/each}\n\t\t\t\t\t</div>\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</div>\n\t</div>\n\t<footer class=\"footer\">\n\t\t<span>built with <a href=\"https://tinykit.studio\" target=\"_blank\">tinykit.studio</a></span>\n\t\t<span class=\"footer-sep\">\u00b7</span>\n\t\t{#if flipped}\n\t\t\t<button class=\"host-link\" onclick={exit_admin}>Exit Host View</button>\n\t\t{:else}\n\t\t\t<button class=\"host-link\" onclick={() => show_password_modal = true}>Host</button>\n\t\t{/if}\n\t</footer>\n</div>\n\n{#if show_password_modal}\n\t<div class=\"modal-overlay\" onclick={() => show_password_modal = false}>\n\t\t<div class=\"modal\" onclick={(e) => e.stopPropagation()}>\n\t\t\t<h3>{content.host_login_title}</h3>\n\t\t\t<p>{content.host_login_description}</p>\n\t\t\t<input \n\t\t\t\ttype=\"password\" \n\t\t\t\tbind:value={password_input}\n\t\t\t\tplaceholder={content.host_password_placeholder}\n\t\t\t\tclass:error={password_error}\n\t\t\t\tonkeydown={(e) => e.key === 'Enter' && check_password()}\n\t\t\t/>\n\t\t\t{#if password_error}\n\t\t\t\t<p class=\"error-text\">{content.host_password_error}</p>\n\t\t\t{/if}\n\t\t\t<div class=\"modal-actions\">\n\t\t\t\t<button class=\"modal-cancel\" onclick={() => show_password_modal = false}>Cancel</button>\n\t\t\t\t<button class=\"modal-submit\" onclick={check_password}>Enter</button>\n\t\t\t</div>\n\t\t</div>\n\t</div>\n{/if}\n\n<style>\n\t.page {\n\t\tmin-height: 100vh;\n\t\tbackground: linear-gradient(135deg, var(--gradient-start, #667eea) 0%, var(--gradient-end, #764ba2) 100%);\n\t\tpadding: 2rem 1rem;\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\talign-items: center;\n\t\tjustify-content: center;\n\t\tfont-family: var(--body-font, system-ui, sans-serif);\n\t}\n\n\t.card-wrapper {\n\t\twidth: 100%;\n\t\tmax-width: 540px;\n\t\tperspective: 1200px;\n\t}\n\n\t.card {\n\t\tposition: relative;\n\t\twidth: 100%;\n\t\ttransform-style: preserve-3d;\n\t\ttransition: transform 0.6s ease-in-out;\n\t}\n\n\t.card.flipped {\n\t\ttransform: rotateY(180deg);\n\t}\n\n\t.card-face {\n\t\tbackground: var(--card-background, #ffffff);\n\t\tborder-radius: var(--card-radius, 24px);\n\t\tpadding: 2rem;\n\t\tbox-shadow: var(--card-shadow, 0 25px 50px -12px rgba(0, 0, 0, 0.25));\n\t\tbackface-visibility: hidden;\n\t}\n\n\t.card-front {\n\t\tposition: relative;\n\t}\n\n\t.card-back {\n\t\tposition: absolute;\n\t\ttop: 0;\n\t\tleft: 0;\n\t\twidth: 100%;\n\t\theight: 100%;\n\t\ttransform: rotateY(180deg);\n\t\toverflow-y: auto;\n\t\tmax-height: 90vh;\n\t}\n\n\t.container {\n\t\twidth: 100%;\n\t\tmax-width: 540px;\n\t\tbackground: var(--card-background, #ffffff);\n\t\tborder-radius: var(--card-radius, 24px);\n\t\tpadding: 2rem;\n\t\tbox-shadow: var(--card-shadow, 0 25px 50px -12px rgba(0, 0, 0, 0.25));\n\t}\n\n\t.event-header {\n\t\ttext-align: center;\n\t\tmargin-bottom: 1.5rem;\n\t}\n\n\t.event-badge {\n\t\tdisplay: inline-flex;\n\t\talign-items: center;\n\t\tgap: 6px;\n\t\tpadding: 6px 12px;\n\t\tbackground: var(--badge-background, #f0f4ff);\n\t\tcolor: var(--accent-color, #6366f1);\n\t\tborder-radius: 20px;\n\t\tfont-size: 0.8rem;\n\t\tfont-weight: 500;\n\t\tmargin-bottom: 1rem;\n\t}\n\n\t.event-title {\n\t\tcolor: var(--heading-color, #1e293b);\n\t\tfont-size: 1.75rem;\n\t\tfont-weight: 700;\n\t\tmargin: 0 0 0.5rem;\n\t\tline-height: 1.2;\n\t}\n\n\t.event-tagline {\n\t\tcolor: var(--secondary-text, #64748b);\n\t\tfont-size: 1rem;\n\t\tmargin: 0;\n\t}\n\n\t.event-details {\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tgap: 12px;\n\t\tpadding: 1.25rem;\n\t\tbackground: var(--details-background, #f8fafc);\n\t\tborder-radius: var(--inner-