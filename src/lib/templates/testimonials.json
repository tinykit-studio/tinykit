	"frontend_code": "<script>\n\timport Icon from '@iconify/svelte'\n\timport content from '$content'\n\timport data from '$data'\n\n\tlet testimonials = $state([])\n\tlet loading = $state(true)\n\tlet layout = $state('grid')\n\tlet show_featured_only = $state(false)\n\n\tdata.testimonials.subscribe(items => {\n\t\ttestimonials = items\n\t\tloading = false\n\t})\n\n\tlet displayed_testimonials = $derived(\n\t\tshow_featured_only\n\t\t\t? testimonials.filter(t => t.featured)\n\t\t\t: testimonials\n\t)\n\n\tlet featured = $derived(\n\t\ttestimonials.filter(t => t.featured)\n\t)\n\n\tfunction render_stars(rating) {\n\t\treturn Array.from({ length: 5 }, (_, i) => i < rating)\n\t}\n</script>\n\n<main class:carousel-layout={layout === 'carousel'}>\n\t<header class=\"header\">\n\t\t<h1>{content.title}</h1>\n\t\t<p class=\"subtitle\">{content.subtitle}</p>\n\t</header>\n\n\t{#if featured.length > 0}\n\t\t<section class=\"featured-section\">\n\t\t\t<div class=\"featured-testimonial\">\n\t\t\t\t<Icon icon=\"lucide:quote\" width={48} class=\"quote-icon\" />\n\t\t\t\t<blockquote>{featured[0].quote}</blockquote>\n\t\t\t\t<div class=\"featured-author\">\n\t\t\t\t\t{#if featured[0].photo_url}\n\t\t\t\t\t\t<img src={featured[0].photo_url} alt={featured[0].name} class=\"author-photo\" />\n\t\t\t\t\t{:else}\n\t\t\t\t\t\t<div class=\"author-photo placeholder\">\n\t\t\t\t\t\t\t<Icon icon=\"lucide:user\" width={24} />\n\t\t\t\t\t\t</div>\n\t\t\t\t\t{/if}\n\t\t\t\t\t<div class=\"author-info\">\n\t\t\t\t\t\t<span class=\"author-name\">{featured[0].name}</span>\n\t\t\t\t\t\t{#if featured[0].company}\n\t\t\t\t\t\t\t<span class=\"author-company\">{featured[0].title ? featured[0].title + ' at ' : ''}{featured[0].company}</span>\n\t\t\t\t\t\t{/if}\n\t\t\t\t\t</div>\n\t\t\t\t\t{#if featured[0].rating}\n\t\t\t\t\t\t<div class=\"author-rating\">\n\t\t\t\t\t\t\t{#each render_stars(featured[0].rating) as filled}\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:star\" width={16} class=\"star {filled ? 'filled' : ''}\" />\n\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t</div>\n\t\t\t\t\t{/if}\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</section>\n\t{/if}\n\n\t<section class=\"testimonials-section\">\n\t\t<div class=\"section-header\">\n\t\t\t<h2>{content.all_label}</h2>\n\t\t\t<div class=\"controls\">\n\t\t\t\t<label class=\"filter-toggle\">\n\t\t\t\t\t<input type=\"checkbox\" bind:checked={show_featured_only} />\n\t\t\t\t\t<span>Featured only</span>\n\t\t\t\t</label>\n\t\t\t\t<div class=\"layout-toggle\">\n\t\t\t\t\t<button class:active={layout === 'grid'} onclick={() => layout = 'grid'} title=\"Grid\">\n\t\t\t\t\t\t<Icon icon=\"lucide:grid-3x3\" width={18} />\n\t\t\t\t\t</button>\n\t\t\t\t\t<button class:active={layout === 'masonry'} onclick={() => layout = 'masonry'} title=\"Masonry\">\n\t\t\t\t\t\t<Icon icon=\"lucide:layout-grid\" width={18} />\n\t\t\t\t\t</button>\n\t\t\t\t\t<button class:active={layout === 'list'} onclick={() => layout = 'list'} title=\"List\">\n\t\t\t\t\t\t<Icon icon=\"lucide:list\" width={18} />\n\t\t\t\t\t</button>\n\t\t\t\t</div>\n\t\t\t</div>\n\t\t</div>\n\n\t\t{#if loading}\n\t\t\t<p class=\"loading\">Loading...</p>\n\t\t{:else if displayed_testimonials.length === 0}\n\t\t\t<div class=\"empty\">\n\t\t\t\t<Icon icon=\"lucide:message-square\" width={48} />\n\t\t\t\t<p>{content.empty_state}</p>\n\t\t\t</div>\n\t\t{:else}\n\t\t\t<div class=\"testimonials-{layout}\">\n\t\t\t\t{#each displayed_testimonials as testimonial (testimonial.id)}\n\t\t\t\t\t<div class=\"testimonial-card\" class:featured={testimonial.featured}>\n\t\t\t\t\t\t{#if testimonial.featured}\n\t\t\t\t\t\t\t<span class=\"featured-badge\">\n\t\t\t\t\t\t\t\t<Icon icon=\"lucide:star\" width={12} /> Featured\n\t\t\t\t\t\t\t</span>\n\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t{#if testimonial.rating}\n\t\t\t\t\t\t\t<div class=\"card-rating\">\n\t\t\t\t\t\t\t\t{#each render_stars(testimonial.rating) as filled}\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:star\" width={14} class=\"star {filled ? 'filled' : ''}\" />\n\t\t\t\t\t\t\t\t{/each}\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t<blockquote>\"{testimonial.quote}\"</blockquote>\n\t\t\t\t\t\t<div class=\"card-author\">\n\t\t\t\t\t\t\t{#if testimonial.photo_url}\n\t\t\t\t\t\t\t\t<img src={testimonial.photo_url} alt={testimonial.name} class=\"author-photo-sm\" />\n\t\t\t\t\t\t\t{:else}\n\t\t\t\t\t\t\t\t<div class=\"author-photo-sm placeholder\">\n\t\t\t\t\t\t\t\t\t<Icon icon=\"lucide:user\" width={16} />\n\t\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t<div class=\"author-details\">\n\t\t\t\t\t\t\t\t<span class=\"name\">{testimonial.name}</span>\n\t\t\t\t\t\t\t\t{#if testimonial.company || testimonial.title}\n\t\t\t\t\t\t\t\t\t<span class=\"role\">\n\t\t\t\t\t\t\t\t\t\t{testimonial.title}{testimonial.title && testimonial.company ? ' at ' : ''}{testimonial.company}\n\t\t\t\t\t\t\t\t\t</span>\n\t\t\t\t\t\t\t\t{/if}\n\t\t\t\t\t\t\t</div>\n\t\t\t\t\t\t</div>\n\t\t\t\t\t</div>\n\t\t\t\t{/each}\n\t\t\t</div>\n\t\t{/if}\n\t</section>\n\n\t<footer class=\"footer\">built with <a href=\"https://tinykit.studio\" target=\"_blank\">tinykit.studio</a></footer>\n</main>\n\n<style>\n\t:global(*) { box-sizing: border-box; }\n\t:global(body) {\n\t\tfont-family: var(--font-family, 'Inter', system-ui, sans-serif);\n\t\tbackground: var(--page-background, #f8fafc);\n\t\tcolor: var(--body-text, #334155);\n\t\tmargin: 0;\n\t\tline-height: 1.6;\n\t}\n\n\tmain {\n\t\tmin-height: 100vh;\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t}\n\n\t.header {\n\t\ttext-align: center;\n\t\tpadding: 4rem 2rem;\n\t\tbackground: var(--header-background, #ffffff);\n\t\tborder-bottom: 1px solid var(--border-color, #e2e8f0);\n\t}\n\n\t.header h1 {\n\t\tmargin: 0 0 0.5rem 0;\n\t\tfont-size: 2.5rem;\n\t\tcolor: var(--heading-color, #1e293b);\n\t}\n\n\t.subtitle {\n\t\tmargin: 0;\n\t\tcolor: var(--secondary-text, #64748b);\n\t\tfont-size: 1.125rem;\n\t}\n\n\t.featured-section {\n\t\tmax-width: 900px;\n\t\tmargin: 0 auto;\n\t\tpadding: 4rem 2rem;\n\t}\n\n\t.featured-testimonial {\n\t\ttext-align: center;\n\t\tposition: relative;\n\t}\n\n\t.featured-testimonial :global(.quote-icon) {\n\t\tcolor: var(--accent-color, #3b82f6);\n\t\topacity: 0.3;\n\t\tmargin-bottom: 1.5rem;\n\t}\n\n\t.featured-testimonial blockquote {\n\t\tfont-size: 1.75rem;\n\t\tline-height: 1.5;\n\t\tfont-weight: 500;\n\t\tcolor: var(--heading-color, #1e293b);\n\t\tmargin: 0 0 2rem 0;\n\t\tfont-style: italic;\n\t}\n\n\t.featured-author {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tjustify-content: center;\n\t\tgap: 1rem;\n\t}\n\n\t.author-photo {\n\t\twidth: 56px;\n\t\theight: 56px;\n\t\tborder-radius: 50%;\n\t\tobject-fit: cover;\n\t}\n\n\t.author-photo.placeholder {\n\t\tbackground: var(--input-background, #f1f5f9);\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tjustify-content: center;\n\t\tcolor: var(--secondary-text, #94a3b8);\n\t}\n\n\t.author-info {\n\t\ttext-align: left;\n\t}\n\n\t.author-name {\n\t\tdisplay: block;\n\t\tfont-weight: 600;\n\t\tcolor: var(--heading-color, #1e293b);\n\t}\n\n\t.author-company {\n\t\tdisplay: block;\n\t\tfont-size: 0.875rem;\n\t\tcolor: var(--secondary-text, #64748b);\n\t}\n\n\t.author-rating {\n\t\tdisplay: flex;\n\t\tgap: 0.125rem;\n\t}\n\n\t:global(.star) {\n\t\tcolor: var(--border-color, #e2e8f0);\n\t}\n\n\t:global(.star.filled) {\n\t\tcolor: var(--star-color, #f59e0b);\n\t}\n\n\t.testimonials-section {\n\t\tflex: 1;\n\t\tmax-width: 1200px;\n\t\tmargin: 0 auto;\n\t\tpadding: 2rem;\n\t\twidth: 100%;\n\t}\n\n\t.section-header {\n\t\tdisplay: flex;\n\t\tjustify-content: space-between;\n\t\talign-items: center;\n\t\tmargin-bottom: 2rem;\n\t\tflex-wrap: wrap;\n\t\tgap: 1rem;\n\t}\n\n\t.section-header h2 {\n\t\tmargin: 0;\n\t\tfont-size: 1.5rem;\n\t\tcolor: var(--heading-color, #1e293b);\n\t}\n\n\t.controls {\n\t\tdisplay: flex;\n\t\tgap: 1rem;\n\t\talign-items: center;\n\t}\n\n\t.filter-toggle {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.5rem;\n\t\tfont-size: 0.875rem;\n\t\tcolor: var(--secondary-text, #64748b);\n\t\tcursor: pointer;\n\t}\n\n\t.filter-toggle input {\n\t\taccent-color: var(--accent-color, #3b82f6);\n\t}\n\n\t.layout-toggle {\n\t\tdisplay: flex;\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: 8px;\n\t\toverflow: hidden;\n\t}\n\n\t.layout-toggle button {\n\t\tpadding: 0.5rem 0.75rem;\n\t\tbackground: var(--card-background, #ffffff);\n\t\tborder: none;\n\t\tcolor: var(--secondary-text, #64748b);\n\t\tcursor: pointer;\n\t\tborder-right: 1px solid var(--border-color, #e2e8f0);\n\t}\n\n\t.layout-toggle button:last-child {\n\t\tborder-right: none;\n\t}\n\n\t.layout-toggle button.active {\n\t\tbackground: var(--accent-color, #3b82f6);\n\t\tcolor: #ffffff;\n\t}\n\n\t.testimonials-grid {\n\t\tdisplay: grid;\n\t\tgrid-template-columns: repeat(auto-fill, minmax(320px, 1fr));\n\t\tgap: 1.5rem;\n\t}\n\n\t.testimonials-masonry {\n\t\tcolumn-count: 3;\n\t\tcolumn-gap: 1.5rem;\n\t}\n\n\t.testimonials-masonry .testimonial-card {\n\t\tbreak-inside: avoid;\n\t\tmargin-bottom: 1.5rem;\n\t}\n\n\t.testimonials-list {\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\tgap: 1rem;\n\t}\n\n\t.testimonial-card {\n\t\tbackground: var(--card-background, #ffffff);\n\t\tborder: 1px solid var(--border-color, #e2e8f0);\n\t\tborder-radius: var(--card-radius, 12px);\n\t\tpadding: 1.5rem;\n\t\tposition: relative;\n\t}\n\n\t.testimonial-card.featured {\n\t\tborder-color: var(--accent-color, #3b82f6);\n\t\tbox-shadow: 0 0 0 1px var(--accent-color, #3b82f6);\n\t}\n\n\t.featured-badge {\n\t\tposition: absolute;\n\t\ttop: 1rem;\n\t\tright: 1rem;\n\t\tbackground: var(--accent-color, #3b82f6);\n\t\tcolor: #ffffff;\n\t\tpadding: 0.25rem 0.625rem;\n\t\tborder-radius: 9999px;\n\t\tfont-size: 0.6875rem;\n\t\tfont-weight: 600;\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.25rem;\n\t}\n\n\t.card-rating {\n\t\tdisplay: flex;\n\t\tgap: 0.125rem;\n\t\tmargin-bottom: 0.75rem;\n\t}\n\n\t.testimonial-card blockquote {\n\t\tmargin: 0 0 1.25rem 0;\n\t\tfont-size: 0.9375rem;\n\t\tcolor: var(--body-text, #334155);\n\t\tline-height: 1.6;\n\t}\n\n\t.card-author {\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tgap: 0.75rem;\n\t}\n\n\t.author-photo-sm {\n\t\twidth: 40px;\n\t\theight: 40px;\n\t\tborder-radius: 50%;\n\t\tobject-fit: cover;\n\t}\n\n\t.author-photo-sm.placeholder {\n\t\tbackground: var(--input-background, #f1f5f9);\n\t\tdisplay: flex;\n\t\talign-items: center;\n\t\tjustify-content: center;\n\t\tcolor: var(--secondary-text, #94a3b8);\n\t}\n\n\t.author-details {\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t}\n\n\t.author-details .name {\n\t\tfont-weight: 600;\n\t\tcolor: var(--heading-color, #1e293b);\n\t\tfont-size: 0.875rem;\n\t}\n\n\t.author-details .role {\n\t\tfont-size: 0.8125rem;\n\t\tcolor: var(--secondary-text, #64748b);\n\t}\n\n\t.loading, .empty {\n\t\ttext-align: center;\n\t\tpadding: 4rem;\n\t\tcolor: var(--secondary-text, #64748b);\n\t}\n\n\t.empty {\n\t\tdisplay: flex;\n\t\tflex-direction: column;\n\t\talign-items: center;\n\t\tgap: 1rem;\n\t\tcolor: var(--border-color, #cbd5e1);\n\t}\n\n\t.footer {\n\t\tmargin-top: auto;\n\t\ttext-align: center;\n\t\tpadding: 2rem;\n\t\tfont-size: 0.75rem;\n\t\tcolor: var(--secondary-text, #94a3b8);\n\t\tborder-top: 1px solid var(--border-color, #e2e8f0);\n\t}\n\n\t.footer a { color: inherit; }\n\n\t@media (max-width: 900px) {\n\t\t.testimonials-masonry {\n\t\t\tcolumn-count: 2;\n\t\t}\n\t}\n\n\t@media (max-width: 640px) {\n\t\t.header { padding: 2rem 1rem; }\n\t\t.header h1 { font-size: 1.75rem; }\n\t\t.featured-testimonial blockquote { font-size: 1.25rem; }\n\t\t.testimonials-section { padding: 1.5rem 1rem; }\n\t\t.section-header { flex-direction: column; align-items: flex-start; }\n\t\t.testimonials-masonry { column-count: 1; }\n\t\t.testimonials-grid { grid-template-columns: 1fr; }\n\t}\n</style>",
